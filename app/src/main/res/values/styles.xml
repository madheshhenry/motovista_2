<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LabelText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="InputContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_rounded_gray_50</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="InputIcon">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="tint">@color/primary_color</item>
    </style>

    <style name="InputEditText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textSize">14sp</item>
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="SimpleInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bg_rounded_gray_50</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="InputSpinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <style name="SimpleSpinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/bg_rounded_gray_50</item>
    </style>

</resources>
