<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow/Edge Glow -->
    <item>
        <shape>
            <corners android:radius="24dp" />
            <gradient
                android:startColor="#0D000000"
                android:endColor="#00000000"
                android:angle="270" />
        </shape>
    </item>
    
    <!-- Main Background -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
        <shape>
            <corners android:radius="23dp" />
            <solid android:color="@color/surface_card" />
        </shape>
    </item>
    
    <!-- Inner Subtle Gradient for Depth -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
        <shape>
            <corners android:radius="23dp" />
            <gradient
                android:startColor="#050ea5e9"
                android:endColor="#00000000"
                android:angle="315" />
        </shape>
    </item>
    
    <!-- Border/Stroke -->
    <item android:top="1dp" android:left="1dp" android:right="1dp" android:bottom="1dp">
        <shape>
            <corners android:radius="23dp" />
            <stroke
                android:width="1dp"
                android:color="#0D000000" />
        </shape>
    </item>
</layer-list>
