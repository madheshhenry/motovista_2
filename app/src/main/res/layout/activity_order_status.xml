<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fitsSystemWindows="true">

    <!-- Sticky Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/padding_medium"
        android:paddingVertical="12dp"
        android:gravity="center_vertical"
        android:background="@drawable/header_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_back"
            android:tint="@color/text_dark"
            android:padding="12dp"
            android:background="@drawable/circle_background_primary"
            android:contentDescription="Back" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Order Status"
            android:textColor="@color/text_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:layout_marginEnd="48dp" />

    </LinearLayout>

    <!-- Main Scroll Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_medium"
            android:paddingBottom="100dp">

            <!-- Order Details Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardOrderDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- Bike Image -->
                    <ImageView
                        android:id="@+id/ivBike"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:src="@drawable/bike_placeholder"
                        android:scaleType="centerCrop"
                        android:background="@drawable/rounded_corner_light"
                        android:contentDescription="Royal Enfield Meteor 350" />

                    <!-- Order Info -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="16dp"
                        android:paddingTop="4dp">

                        <TextView
                            android:id="@+id/tvBikeName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Royal Enfield Meteor 350"
                            android:textColor="@color/text_dark"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:maxLines="2"
                            android:ellipsize="end" />

                        <TextView
                            android:id="@+id/tvOrderId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Order #4492-B"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:id="@+id/tvOrderDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Placed on Oct 24, 2023"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Order Progress Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardOrderProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Card Header -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Order Progress"
                        android:textColor="@color/text_dark"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:paddingHorizontal="20dp"
                        android:paddingVertical="16dp" />

                    <!-- Progress Timeline -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingHorizontal="20dp"
                        android:paddingBottom="24dp">

                        <!-- Step 1: Order Confirmed -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="16dp">

                            <!-- Timeline Indicator -->
                            <RelativeLayout
                                android:layout_width="32dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="16dp">

                                <!-- Green Circle with Check -->
                                <LinearLayout
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:background="@drawable/circle_green"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="12dp"
                                        android:layout_height="12dp"
                                        android:src="@drawable/ic_check"
                                        android:tint="@color/white"
                                        android:contentDescription="Completed" />

                                </LinearLayout>

                                <!-- Vertical Line -->
                                <View
                                    android:layout_width="2dp"
                                    android:layout_height="40dp"
                                    android:background="@color/icon_green"
                                    android:layout_marginTop="24dp"
                                    android:layout_centerHorizontal="true" />

                            </RelativeLayout>

                            <!-- Step Details -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:paddingTop="2dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Order Confirmed"
                                    android:textColor="@color/text_dark"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif-medium" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Oct 24, 10:30 AM"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="12sp"
                                    android:fontFamily="sans-serif"
                                    android:layout_marginTop="2dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Step 2: Insurance Processed -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="16dp">

                            <RelativeLayout
                                android:layout_width="32dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="16dp">

                                <LinearLayout
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:background="@drawable/circle_green"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="12dp"
                                        android:layout_height="12dp"
                                        android:src="@drawable/ic_check"
                                        android:tint="@color/white"
                                        android:contentDescription="Completed" />

                                </LinearLayout>

                                <View
                                    android:layout_width="2dp"
                                    android:layout_height="40dp"
                                    android:background="@color/icon_green"
                                    android:layout_marginTop="24dp"
                                    android:layout_centerHorizontal="true" />

                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:paddingTop="2dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Insurance Processed"
                                    android:textColor="@color/text_dark"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif-medium" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Oct 26, 02:15 PM"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="12sp"
                                    android:fontFamily="sans-serif"
                                    android:layout_marginTop="2dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Step 3: Registration Initiated -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="16dp">

                            <RelativeLayout
                                android:layout_width="32dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="16dp">

                                <LinearLayout
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:background="@drawable/circle_green"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="12dp"
                                        android:layout_height="12dp"
                                        android:src="@drawable/ic_check"
                                        android:tint="@color/white"
                                        android:contentDescription="Completed" />

                                </LinearLayout>

                                <View
                                    android:layout_width="2dp"
                                    android:layout_height="40dp"
                                    android:background="@color/icon_green"
                                    android:layout_marginTop="24dp"
                                    android:layout_centerHorizontal="true" />

                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:paddingTop="2dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Registration Initiated"
                                    android:textColor="@color/text_dark"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif-medium" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Oct 28, 11:00 AM"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="12sp"
                                    android:fontFamily="sans-serif"
                                    android:layout_marginTop="2dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Step 4: RC Book Ready -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="16dp">

                            <RelativeLayout
                                android:layout_width="32dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="16dp">

                                <LinearLayout
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:background="@drawable/circle_green"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="12dp"
                                        android:layout_height="12dp"
                                        android:src="@drawable/ic_check"
                                        android:tint="@color/white"
                                        android:contentDescription="Completed" />

                                </LinearLayout>

                                <View
                                    android:layout_width="2dp"
                                    android:layout_height="40dp"
                                    android:background="@color/icon_green"
                                    android:layout_marginTop="24dp"
                                    android:layout_centerHorizontal="true" />

                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:paddingTop="2dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="RC Book Ready"
                                    android:textColor="@color/text_dark"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif-medium" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Oct 30, 04:30 PM"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="12sp"
                                    android:fontFamily="sans-serif"
                                    android:layout_marginTop="2dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Step 5: Number Plate Issued (Last Step - No line) -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="32dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="16dp">

                                <LinearLayout
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:background="@drawable/circle_green"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="12dp"
                                        android:layout_height="12dp"
                                        android:src="@drawable/ic_check"
                                        android:tint="@color/white"
                                        android:contentDescription="Completed" />

                                </LinearLayout>

                            </RelativeLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:paddingTop="2dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Number Plate Issued"
                                    android:textColor="@color/text_dark"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif-medium" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Nov 01, 09:15 AM"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="12sp"
                                    android:fontFamily="sans-serif"
                                    android:layout_marginTop="2dp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Confirmation Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardConfirmation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Confirmation"
                        android:textColor="@color/text_dark"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Please confirm after receiving all documents, including your RC Book, Insurance papers, and Number Plate installation."
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="20dp" />

                    <!-- Confirm Button -->
                    <Button
                        android:id="@+id/btnConfirmDocuments"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="All Documents Received"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:background="@drawable/primary_button_background"
                        android:gravity="center"
                        android:drawableStart="@drawable/ic_check_document"
                        android:drawablePadding="8dp"
                        android:paddingHorizontal="20dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Help Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingVertical="24dp">

                <Button
                    android:id="@+id/btnNeedHelp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Need help with this order?"
                    android:textColor="@color/primary_color"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:drawableStart="@drawable/ic_support"
                    android:drawablePadding="8dp"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation (Same as CustomerHome) -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:elevation="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Home Tab -->
        <LinearLayout
            android:id="@+id/tabHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/ivHome"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home"
                android:tint="@color/gray_400"
                android:contentDescription="Home" />

            <TextView
                android:id="@+id/tvHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="@color/gray_400"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Bikes Tab -->
        <LinearLayout
            android:id="@+id/tabBikes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/ivBikes"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_two_wheeler"
                android:tint="@color/gray_400"
                android:contentDescription="Bikes" />

            <TextView
                android:id="@+id/tvBikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bikes"
                android:textColor="@color/gray_400"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- EMI Calculator Tab -->
        <LinearLayout
            android:id="@+id/tabEmiCalculator"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/ivEmiCalculator"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_calculate"
                android:tint="@color/gray_400"
                android:contentDescription="EMI Calculator" />

            <TextView
                android:id="@+id/tvEmiCalculator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EMI Calculator"
                android:textColor="@color/gray_400"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Orders Tab (Active) -->
        <LinearLayout
            android:id="@+id/tabOrders"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/ivOrders"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_receipt_long_filled"
                android:tint="@color/primary_color"
                android:contentDescription="Orders" />

            <TextView
                android:id="@+id/tvOrders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Orders"
                android:textColor="@color/primary_color"
                android:textSize="12sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Profile Tab -->
        <LinearLayout
            android:id="@+id/tabProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/ivProfile"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_person"
                android:tint="@color/gray_400"
                android:contentDescription="Profile" />

            <TextView
                android:id="@+id/tvProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="@color/gray_400"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>