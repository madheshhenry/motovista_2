<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fitsSystemWindows="true">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Top App Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/padding_medium">

            <!-- Back Button -->
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_back"
                android:tint="@color/text_primary_light"
                android:contentDescription="Back" />

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Insurance Ledger"
                android:textColor="@color/text_primary_light"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="sans-serif-medium"
                android:layout_marginEnd="@dimen/padding_medium" />

            <!-- Empty space for alignment -->
            <View
                android:layout_width="48dp"
                android:layout_height="48dp" />

        </LinearLayout>

        <!-- Filter Chips Horizontal ScrollView -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/padding_medium"
            android:paddingBottom="@dimen/padding_medium"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Active Filter: All -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/chipAll"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/primary_color"
                    android:layout_marginEnd="@dimen/padding_small">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="16dp"
                        android:text="All"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center" />

                </androidx.cardview.widget.CardView>

                <!-- Inactive Filter: Active -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/chipActive"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/gray_200"
                    android:layout_marginEnd="@dimen/padding_small">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="16dp"
                        android:text="Active"
                        android:textColor="@color/text_primary_light"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center" />

                </androidx.cardview.widget.CardView>

                <!-- Inactive Filter: Expiring Soon -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/chipExpiringSoon"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/gray_200"
                    android:layout_marginEnd="@dimen/padding_small">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="16dp"
                        android:text="Expiring Soon"
                        android:textColor="@color/text_primary_light"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center" />

                </androidx.cardview.widget.CardView>

                <!-- Inactive Filter: Expired -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/chipExpired"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/gray_200">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="16dp"
                        android:text="Expired"
                        android:textColor="@color/text_primary_light"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>

    <!-- Main Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingTop="@dimen/padding_medium"
        android:paddingBottom="@dimen/padding_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/padding_medium">

            <!-- Summary Stats -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="@dimen/padding_medium">

                <!-- Total Policies Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardTotalPolicies"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/padding_small"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_medium">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TOTAL POLICIES"
                            android:textColor="@color/text_light_gray"
                            android:textSize="10sp"
                            android:textStyle="normal"
                            android:fontFamily="sans-serif-medium"
                            android:letterSpacing="0.05"
                            android:textAllCaps="true"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvTotalPolicies"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/text_primary_light"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Action Needed Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardActionNeeded"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/padding_small"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_medium">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ACTION NEEDED"
                            android:textColor="@color/icon_yellow"
                            android:textSize="10sp"
                            android:textStyle="normal"
                            android:fontFamily="sans-serif-medium"
                            android:letterSpacing="0.05"
                            android:textAllCaps="true"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvActionNeeded"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/icon_yellow"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvInsurance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_insurance_card" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
