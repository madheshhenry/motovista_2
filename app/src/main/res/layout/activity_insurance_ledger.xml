<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fitsSystemWindows="true">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Top App Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/padding_medium">

            <!-- Back Button -->
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_back"
                android:tint="@color/text_primary_light"
                android:contentDescription="Back" />

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Insurance Ledger"
                android:textColor="@color/text_primary_light"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="sans-serif-medium"
                android:layout_marginEnd="@dimen/padding_medium" />

            <!-- Empty space for alignment -->
            <View
                android:layout_width="48dp"
                android:layout_height="48dp" />

        </LinearLayout>

        <!-- Filter Chips Horizontal ScrollView -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/padding_medium"
            android:paddingBottom="@dimen/padding_medium"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Active Filter: All -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/chipAll"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/primary_color"
                    android:layout_marginEnd="@dimen/padding_small">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="16dp"
                        android:text="All"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center" />

                </androidx.cardview.widget.CardView>

                <!-- Inactive Filter: Active -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/chipActive"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/gray_200"
                    android:layout_marginEnd="@dimen/padding_small">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="16dp"
                        android:text="Active"
                        android:textColor="@color/text_primary_light"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center" />

                </androidx.cardview.widget.CardView>

                <!-- Inactive Filter: Expiring Soon -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/chipExpiringSoon"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/gray_200"
                    android:layout_marginEnd="@dimen/padding_small">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="16dp"
                        android:text="Expiring Soon"
                        android:textColor="@color/text_primary_light"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center" />

                </androidx.cardview.widget.CardView>

                <!-- Inactive Filter: Expired -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/chipExpired"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/gray_200">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="16dp"
                        android:text="Expired"
                        android:textColor="@color/text_primary_light"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </HorizontalScrollView>

    </LinearLayout>

    <!-- Main Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingTop="@dimen/padding_medium"
        android:paddingBottom="@dimen/padding_large"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/padding_medium">

            <!-- Summary Stats -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="@dimen/padding_medium">

                <!-- Total Policies Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardTotalPolicies"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/padding_small"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_medium">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TOTAL POLICIES"
                            android:textColor="@color/text_light_gray"
                            android:textSize="10sp"
                            android:textStyle="normal"
                            android:fontFamily="sans-serif-medium"
                            android:letterSpacing="0.05"
                            android:textAllCaps="true"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvTotalPolicies"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1,248"
                            android:textColor="@color/text_primary_light"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Action Needed Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardActionNeeded"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/padding_small"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_medium">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ACTION NEEDED"
                            android:textColor="@color/icon_yellow"
                            android:textSize="10sp"
                            android:textStyle="normal"
                            android:fontFamily="sans-serif-medium"
                            android:letterSpacing="0.05"
                            android:textAllCaps="true"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvActionNeeded"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="42"
                            android:textColor="@color/icon_yellow"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Card: Expiring Soon -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardPriyaSingh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="@dimen/padding_small">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_medium">

                    <!-- Top Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Profile Image -->
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ivPriyaProfile"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/default_profile"
                            android:scaleType="centerCrop"
                            app:civ_border_width="1dp"
                            app:civ_border_color="@color/border_color" />

                        <!-- Name and Details -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="@dimen/padding_small">

                            <TextView
                                android:id="@+id/tvPriyaName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Priya Singh"
                                android:textColor="@color/text_primary_light"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:id="@+id/tvPriyaBike"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Yamaha MT-15"
                                android:textColor="@color/text_light_gray"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif"
                                android:layout_marginTop="2dp" />

                            <TextView
                                android:id="@+id/tvPriyaPolicy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Policy #YM-8832-X"
                                android:textColor="@color/text_light_gray"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Chevron Icon -->
                        <ImageView
                            android:id="@+id/ivPriyaChevron"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_chevron_right"
                            android:tint="@color/gray_400"
                            android:contentDescription="More" />

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/border_color"
                        android:layout_marginTop="@dimen/padding_small"
                        android:layout_marginBottom="@dimen/padding_small" />

                    <!-- Bottom Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Ends On -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ENDS ON"
                                android:textColor="@color/text_light_gray"
                                android:textSize="10sp"
                                android:textStyle="normal"
                                android:fontFamily="sans-serif-medium"
                                android:letterSpacing="0.05"
                                android:textAllCaps="true" />

                            <TextView
                                android:id="@+id/tvPriyaEndDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Oct 24, 2025"
                                android:textColor="@color/text_primary_light"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                        <!-- Status Badge -->
                        <TextView
                            android:id="@+id/tvPriyaStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:text="Expiring Soon"
                            android:textColor="@color/icon_yellow"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:paddingHorizontal="12dp"
                            android:background="@drawable/rounded_corner_yellow" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Card: Active -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardRahulSharma"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="@dimen/padding_small">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_medium">

                    <!-- Top Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Profile Image -->
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ivRahulProfile"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/default_profile"
                            android:scaleType="centerCrop"
                            app:civ_border_width="1dp"
                            app:civ_border_color="@color/border_color" />

                        <!-- Name and Details -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="@dimen/padding_small">

                            <TextView
                                android:id="@+id/tvRahulName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rahul Sharma"
                                android:textColor="@color/text_primary_light"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:id="@+id/tvRahulBike"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Honda CB350"
                                android:textColor="@color/text_light_gray"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif"
                                android:layout_marginTop="2dp" />

                            <TextView
                                android:id="@+id/tvRahulPolicy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Policy #HC-2910-A"
                                android:textColor="@color/text_light_gray"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Chevron Icon -->
                        <ImageView
                            android:id="@+id/ivRahulChevron"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_chevron_right"
                            android:tint="@color/gray_400"
                            android:contentDescription="More" />

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/border_color"
                        android:layout_marginTop="@dimen/padding_small"
                        android:layout_marginBottom="@dimen/padding_small" />

                    <!-- Bottom Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Ends On -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ENDS ON"
                                android:textColor="@color/text_light_gray"
                                android:textSize="10sp"
                                android:textStyle="normal"
                                android:fontFamily="sans-serif-medium"
                                android:letterSpacing="0.05"
                                android:textAllCaps="true" />

                            <TextView
                                android:id="@+id/tvRahulEndDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dec 12, 2025"
                                android:textColor="@color/text_primary_light"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                        <!-- Status Badge -->
                        <TextView
                            android:id="@+id/tvRahulStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:text="Active"
                            android:textColor="@color/icon_green"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:paddingHorizontal="12dp"
                            android:background="@drawable/rounded_corner_green" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Card: Expired -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardAmitVerma"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="@dimen/padding_small"
                android:alpha="0.9">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_medium">

                    <!-- Top Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Profile Image -->
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ivAmitProfile"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/default_profile"
                            android:scaleType="centerCrop"
                            app:civ_border_width="1dp"
                            app:civ_border_color="@color/border_color"
                            android:alpha="0.6" />

                        <!-- Name and Details -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="@dimen/padding_small">

                            <TextView
                                android:id="@+id/tvAmitName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Amit Verma"
                                android:textColor="@color/text_primary_light"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:id="@+id/tvAmitBike"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Royal Enfield Classic"
                                android:textColor="@color/text_light_gray"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif"
                                android:layout_marginTop="2dp" />

                            <TextView
                                android:id="@+id/tvAmitPolicy"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Policy #RE-1102-Z"
                                android:textColor="@color/text_light_gray"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Chevron Icon -->
                        <ImageView
                            android:id="@+id/ivAmitChevron"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_chevron_right"
                            android:tint="@color/gray_400"
                            android:contentDescription="More" />

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/border_color"
                        android:layout_marginTop="@dimen/padding_small"
                        android:layout_marginBottom="@dimen/padding_small" />

                    <!-- Bottom Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Ends On -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ENDED ON"
                                android:textColor="@color/text_light_gray"
                                android:textSize="10sp"
                                android:textStyle="normal"
                                android:fontFamily="sans-serif-medium"
                                android:letterSpacing="0.05"
                                android:textAllCaps="true" />

                            <TextView
                                android:id="@+id/tvAmitEndDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nov 05, 2023"
                                android:textColor="@color/icon_red"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginTop="2dp" />

                        </LinearLayout>

                        <!-- Status Badge -->
                        <TextView
                            android:id="@+id/tvAmitStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:text="Expired"
                            android:textColor="@color/icon_red"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:paddingHorizontal="12dp"
                            android:background="@drawable/rounded_corner_red" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Card: Active (Vikram) -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardVikramMalhotra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="@dimen/padding_small">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_medium">

                    <!-- Top Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Profile Image -->
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ivVikramProfile"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/default_profile"
                            android:scaleType="centerCrop"
                            app:civ_border_width="1dp"
                            app:civ_border_color="@color/border_color" />

                        <!-- Name and Details -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="@dimen/padding_small">

                            <TextView
                                android:id="@+id/tvVikramName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
