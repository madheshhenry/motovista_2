<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light"
    android:fitsSystemWindows="true">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/background_light"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/padding_medium"
        android:paddingVertical="16dp"
        android:layout_marginTop="@dimen/status_bar_height"
        android:elevation="4dp">

        <!-- Back Button -->
        <LinearLayout
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_back"
                android:tint="@color/text_dark"
                android:contentDescription="Back" />

        </LinearLayout>

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Request a Bike"
            android:textColor="@color/text_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium" />

        <!-- Empty space for symmetry -->
        <View
            android:layout_width="40dp"
            android:layout_height="40dp" />

    </LinearLayout>

    <!-- Divider line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/border_color" />

    <!-- Scroll View for Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_medium"
            android:paddingBottom="100dp">

            <!-- Bike Details Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bike Details"
                android:textColor="@color/text_dark"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:paddingBottom="16dp"
                android:paddingTop="8dp" />

            <!-- Bike Brand -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bike Brand"
                android:textColor="@color/text_dark"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:paddingBottom="8dp" />

            <!-- Bike Brand Input -->
            <EditText
                android:id="@+id/etBikeBrand"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="e.g., Kawasaki"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:inputType="textCapWords"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@drawable/input_background"
                android:textColor="@color/text_dark"
                android:textColorHint="@color/text_secondary" />

            <!-- Spacing -->
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <!-- Bike Model -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bike Model"
                android:textColor="@color/text_dark"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:paddingBottom="8dp" />

            <!-- Bike Model Input -->
            <EditText
                android:id="@+id/etBikeModel"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="e.g., Ninja ZX-10R"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:inputType="textCapWords"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@drawable/input_background"
                android:textColor="@color/text_dark"
                android:textColorHint="@color/text_secondary" />

            <!-- Spacing -->
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <!-- Desired Features / Notes -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Desired Features / Notes"
                android:textColor="@color/text_dark"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:paddingBottom="8dp" />

            <!-- Features Input -->
            <EditText
                android:id="@+id/etFeatures"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="e.g., 2024 model in matte black, with ABS."
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:background="@drawable/input_background"
                android:textColor="@color/text_dark"
                android:textColorHint="@color/text_secondary" />

            <!-- Spacing before next section -->
            <View
                android:layout_width="match_parent"
                android:layout_height="32dp" />

            <!-- Contact Details Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Contact Details"
                android:textColor="@color/text_dark"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:paddingBottom="16dp" />

            <!-- Full Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:textColor="@color/text_dark"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:paddingBottom="8dp" />

            <!-- Full Name Input (Read-only) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/input_background_readonly"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:id="@+id/tvFullName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Santhosh Kumar"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="sans-serif" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_lock"
                    android:tint="@color/text_secondary"
                    android:contentDescription="Locked" />

            </LinearLayout>

            <!-- Spacing -->
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <!-- Mobile Number -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobile Number"
                android:textColor="@color/text_dark"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:paddingBottom="8dp" />

            <!-- Mobile Number Input (Read-only) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/input_background_readonly"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:id="@+id/tvMobileNumber"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="+91 98765 43210"
                    android:textSize="16sp"
                    android:textColor="@color/text_secondary"
                    android:fontFamily="sans-serif" />

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_lock"
                    android:tint="@color/text_secondary"
                    android:contentDescription="Locked" />

            </LinearLayout>

            <!-- Spacing -->
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <!-- Email Address -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email Address (Optional)"
                android:textColor="@color/text_dark"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:paddingBottom="8dp" />

            <!-- Email Input -->
            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="e.g., name@example.com"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:inputType="textEmailAddress"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@drawable/input_background"
                android:textColor="@color/text_dark"
                android:textColorHint="@color/text_secondary" />

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/background_light"
        android:elevation="8dp">

        <!-- Divider line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/border_color" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginStart="@dimen/padding_medium"
            android:layout_marginEnd="@dimen/padding_medium"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:text="Submit Request"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/button_background"
            android:textColor="@color/white" />

    </LinearLayout>

</LinearLayout>