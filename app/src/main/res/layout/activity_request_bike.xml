<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F8F9FA"
    android:fitsSystemWindows="true">

    <!-- Header (Sticky) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#F8F9FA"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="16dp"
        android:layout_marginTop="@dimen/status_bar_height"
        android:elevation="1dp">

        <!-- Back Button -->
        <LinearLayout
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless">

            <!-- Arrow icon -->
            <TextView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:text="â†"
                android:textSize="20sp"
                android:textColor="#212529"
                android:gravity="center" />

        </LinearLayout>

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Request a Bike"
            android:textColor="#212529"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:letterSpacing="-0.015" />

        <!-- Empty space for symmetry -->
        <View
            android:layout_width="40dp"
            android:layout_height="40dp" />

    </LinearLayout>

    <!-- Divider line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DEE2E6" />

    <!-- Scroll View for Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:background="#F8F9FA">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Bike Details Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bike Details"
                android:textColor="#212529"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:letterSpacing="-0.015"
                android:paddingBottom="8dp" />

            <!-- Bike Brand -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bike Brand"
                android:textColor="#212529"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:paddingBottom="8dp" />

            <!-- Bike Brand Input -->
            <EditText
                android:id="@+id/etBikeBrand"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="e.g., Kawasaki"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:inputType="textCapWords"
                android:paddingHorizontal="16dp"
                android:background="@drawable/edittext_background"
                android:textColor="#212529"
                android:textColorHint="#618389"
                android:maxLines="1" />

            <!-- Spacing -->
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <!-- Bike Model -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bike Model"
                android:textColor="#212529"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:paddingBottom="8dp" />

            <!-- Bike Model Input -->
            <EditText
                android:id="@+id/etBikeModel"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="e.g., Ninja ZX-10R"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:inputType="textCapWords"
                android:paddingHorizontal="16dp"
                android:background="@drawable/edittext_background"
                android:textColor="#212529"
                android:textColorHint="#618389"
                android:maxLines="1" />

            <!-- Spacing -->
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <!-- Desired Features / Notes -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Desired Features / Notes"
                android:textColor="#212529"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:paddingBottom="8dp" />

            <!-- Features Input -->
            <EditText
                android:id="@+id/etFeatures"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="e.g., 2024 model in matte black, with ABS."
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:inputType="textMultiLine"
                android:gravity="top"
                android:padding="16dp"
                android:background="@drawable/edittext_background"
                android:textColor="#212529"
                android:textColorHint="#618389" />

            <!-- Spacing before next section -->
            <View
                android:layout_width="match_parent"
                android:layout_height="32dp" />

            <!-- Contact Details Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your Contact Details"
                android:textColor="#212529"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:letterSpacing="-0.015"
                android:paddingBottom="16dp" />

            <!-- Full Name -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:textColor="#212529"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:paddingBottom="8dp" />

            <!-- Full Name Input (Editable) -->
            <EditText
                android:id="@+id/etFullName"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Enter your full name"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:inputType="textPersonName"
                android:paddingHorizontal="16dp"
                android:background="@drawable/edittext_background"
                android:textColor="#212529"
                android:textColorHint="#618389"
                android:maxLines="1" />

            <!-- Spacing -->
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <!-- Mobile Number -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mobile Number"
                android:textColor="#212529"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:paddingBottom="8dp" />

            <!-- Mobile Number Input (Editable) -->
            <EditText
                android:id="@+id/etMobileNumber"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Enter your mobile number"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:inputType="phone"
                android:paddingHorizontal="16dp"
                android:background="@drawable/edittext_background"
                android:textColor="#212529"
                android:textColorHint="#618389"
                android:maxLines="1" />

            <!-- Spacing -->
            <View
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <!-- Email Address -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email Address (Optional)"
                android:textColor="#212529"
                android:textSize="16sp"
                android:fontFamily="sans-serif-medium"
                android:paddingBottom="8dp" />

            <!-- Email Input -->
            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="e.g., name@example.com"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:inputType="textEmailAddress"
                android:paddingHorizontal="16dp"
                android:background="@drawable/edittext_background"
                android:textColor="#212529"
                android:textColorHint="#618389"
                android:maxLines="1" />

            <!-- Extra padding at bottom for scroll -->
            <View
                android:layout_width="match_parent"
                android:layout_height="80dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Button (Sticky) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F8F9FA"
        android:elevation="4dp"
        android:paddingTop="8dp"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp">

        <!-- Divider line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DEE2E6" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="8dp"
            android:text="Submit Request"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="-0.015"
            android:background="@drawable/button_primary"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</LinearLayout>