<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light"
    tools:context=".AddStockBikeActivity">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:background="#FFFFFF"
        android:elevation="1dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_back"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/text_dark"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add Stock Bike"
            android:textColor="@color/text_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DBE2E6"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/mainScrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- PENDING STOCK LIST -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPendingStock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginBottom="16dp"
                tools:itemCount="1"
                tools:listitem="@layout/item_pending_stock"/>
            
             <!-- SECTION: Product Selection -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Selection"
                android:textSize="16sp"
                android:textColor="@color/text_dark"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_card_ios"
                android:padding="0dp"
                android:layout_marginBottom="24dp">

                <!-- Brand -->
                <LinearLayout
                    android:id="@+id/containerBrand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:clickable="true"
                    android:foreground="?attr/selectableItemBackground">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BRAND"
                        android:textSize="12sp"
                        android:textColor="@color/gray_500"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/tvSelectedBrand"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Select Brand"
                            android:textColor="@color/text_dark"
                            android:textSize="16sp"
                            android:background="@null"
                            android:paddingVertical="4dp"/>
                         <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_search"
                            app:tint="@color/gray_400"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F0F2F4"/>

                <!-- Model -->
                <LinearLayout
                    android:id="@+id/containerModel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:clickable="false"
                    android:foreground="?attr/selectableItemBackground"
                    android:alpha="0.5">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BIKE MODEL"
                        android:textSize="12sp"
                        android:textColor="@color/gray_500"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                         <TextView
                            android:id="@+id/tvSelectedModel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Select Model"
                            android:textColor="@color/text_dark"
                            android:textSize="16sp"
                            android:background="@null"
                            android:paddingVertical="4dp"/>
                         <ImageView
                            android:id="@+id/iconEndModel"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_lock"
                            app:tint="@color/gray_300"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F0F2F4"/>

                <!-- Variant -->
                <LinearLayout
                    android:id="@+id/containerVariant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:clickable="false"
                    android:foreground="?attr/selectableItemBackground"
                    android:alpha="0.5">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VARIANT"
                        android:textSize="12sp"
                        android:textColor="@color/gray_500"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                         <TextView
                            android:id="@+id/tvSelectedVariant"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Select Variant"
                            android:textColor="@color/text_dark"
                            android:textSize="16sp"
                            android:background="@null"
                            android:paddingVertical="4dp"/>
                         <ImageView
                            android:id="@+id/iconEndVariant"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_lock"
                            app:tint="@color/gray_300"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                </LinearLayout>

                <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#F0F2F4"/>

                <!-- Color -->
                <LinearLayout
                    android:id="@+id/containerColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:clickable="false"
                    android:foreground="?attr/selectableItemBackground"
                    android:alpha="0.5">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="COLOR"
                        android:textSize="12sp"
                        android:textColor="@color/gray_500"
                        android:textStyle="bold"
                        android:layout_marginBottom="4dp"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                         <!-- Color Preview Dot -->
                         <View
                            android:id="@+id/viewColorPreview"
                            android:layout_width="12dp"
                            android:layout_height="12dp"
                            android:background="@drawable/circle_shape"
                            android:backgroundTint="#CBD5E1"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="8dp"/>
                         <TextView
                            android:id="@+id/tvSelectedColor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/viewColorPreview"
                            android:text="Select Color"
                            android:textColor="@color/text_dark"
                            android:textSize="16sp"
                            android:background="@null"
                            android:paddingVertical="4dp"/>
                         <ImageView
                            android:id="@+id/iconEndColor"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_lock"
                            app:tint="@color/gray_300"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"/>
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

            <!-- SECTION: Quantity Received -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_ios"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quantity Received"
                        android:textSize="16sp"
                        android:textColor="@color/text_dark"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="How many units arrived?"
                        android:textSize="14sp"
                        android:textColor="@color/gray_500"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_input_rounded"
                    android:backgroundTint="@color/background_light"
                    android:padding="4dp"
                    android:gravity="center_vertical">

                    <FrameLayout
                        android:id="@+id/btnDecreaseQty"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_card_ios"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground">
                         <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_remove"
                            app:tint="@color/primary_blue"/>
                    </FrameLayout>

                    <TextView
                        android:id="@+id/tvQuantity"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="01"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/text_dark"/>

                    <FrameLayout
                        android:id="@+id/btnIncreaseQty"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_primary_button"
                        android:clickable="true"
                        android:foreground="?attr/selectableItemBackground">
                         <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_add"
                            app:tint="@color/white"/>
                    </FrameLayout>

                </LinearLayout>
            </LinearLayout>

            <!-- SECTION: Engine & Chassis Numbers -->
             <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                 android:layout_marginBottom="12dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Engine &amp; Chassis Numbers"
                    android:textSize="16sp"
                    android:textColor="@color/text_dark"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tvActiveUnits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 Unit Active"
                    android:textSize="10sp"
                    android:textColor="@color/primary_blue"
                    android:textStyle="bold"
                    android:background="#2013a4ec"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="2dp"
                    android:textAllCaps="true"/>
             </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvIdentification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:itemCount="2"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/row_identification_input"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Footer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CCFFFFFF"
        android:padding="16dp"
        android:elevation="16dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnAddAnother"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="+ Add Another Stock Entry"
            android:textColor="@color/primary_blue"
            android:textSize="14sp"
            android:textStyle="bold"
            android:background="@drawable/bg_outline_button"
            android:textAllCaps="false"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnSaveStock"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Save Stock"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/bg_primary_button"
            android:textAllCaps="false"/>
            
    </LinearLayout>

</LinearLayout>
