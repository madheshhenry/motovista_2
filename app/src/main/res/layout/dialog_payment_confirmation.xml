<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    android:paddingTop="12dp">

    <!-- Drag Handle -->
    <View
        android:layout_width="48dp"
        android:layout_height="3dp"
        android:background="@color/gray_300"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp" />

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:paddingBottom="12dp"
        android:background="@color/card_background">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Confirm Payment"
            android:textColor="@color/text_primary_light"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="start" />

        <ImageView
            android:id="@+id/btnCloseDialog"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close"
            android:tint="@color/text_light_gray"
            android:contentDescription="Close"
            android:padding="4dp" />

    </LinearLayout>

    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="24dp"
        android:background="@color/card_background">

        <!-- EMI Amount Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/emi_amount_bg"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="EMI Amount"
                android:textColor="@color/text_light_gray"
                android:textSize="14sp"
                android:gravity="start" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$1,200.00"
                android:textColor="@color/primary_color"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="end" />

        </LinearLayout>

        <!-- Payment Date -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Date"
            android:textColor="@color/text_primary_light"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:gravity="start" />

        <EditText
            android:id="@+id/etPaymentDate"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Select date"
            android:inputType="date"
            android:background="@drawable/edit_text_bg"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="start" />

        <!-- Payment Mode -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Mode"
            android:textColor="@color/text_primary_light"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:gravity="start" />

        <Spinner
            android:id="@+id/spinnerPaymentMode"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/edit_text_bg"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:entries="@array/payment_modes" />

        <!-- Remarks -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remarks (Optional)"
            android:textColor="@color/text_primary_light"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:gravity="start" />

        <EditText
            android:id="@+id/etRemarks"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="Add note..."
            android:gravity="top"
            android:inputType="textMultiLine"
            android:background="@drawable/edit_text_bg"
            android:padding="16dp"
            android:layout_marginBottom="24dp" />

        <!-- Confirm Button -->
        <Button
            android:id="@+id/btnConfirmPayment"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Confirm Payment"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/primary_button"
            android:gravity="center" />

    </LinearLayout>

</LinearLayout>