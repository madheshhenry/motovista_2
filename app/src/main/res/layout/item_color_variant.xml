<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card_new"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginBottom="16dp">

    <!-- Header: Color Name & Delete -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <View
            android:id="@+id/viewColorIndicator"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/bg_color_chip_rounded"
            android:layout_marginEnd="16dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COLOR NAME"
                android:textSize="10sp"
                android:textColor="@color/gray_500"
                android:letterSpacing="0.05"
                android:textStyle="bold"
                android:textAllCaps="true"/>
            <EditText
                android:id="@+id/etColorName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="e.g. Racing Blue"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#111318"
                android:inputType="textCapWords"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/btnRemoveColorConfig"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_remove"
            app:tint="@color/red_500"
            android:background="?attr/selectableItemBackgroundBorderless"/>
    </LinearLayout>

    <!-- Images Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UPLOAD IMAGES (MIN 3)"
            android:textSize="10sp"
            android:textColor="@color/gray_400"
            android:textStyle="bold"
            android:letterSpacing="0.05"
            android:layout_marginBottom="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <HorizontalScrollView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scrollbars="none">
                <LinearLayout
                    android:id="@+id/variantImagesContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <!-- Images will be added here dynamically -->
                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:id="@+id/btnAddVariantImage"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/bg_dashed_border_new"
                android:gravity="center"
                 android:clickable="true"
                 android:focusable="true"
                android:layout_marginStart="12dp">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_add_circle_outline"
                    app:tint="@color/gray_400"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
