<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f8f8"
    tools:context=".OrderSummaryActivity">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="#111718" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            android:text="Application Details"
            android:textColor="#111718"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginEnd="40dp" /> <!-- Balance the back button -->
    </LinearLayout>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerLayout"
        android:layout_above="@id/bottomBar"
        android:clipToPadding="false"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <!-- Card 1: Status & Date -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="horizontal"
                    android:baselineAligned="false">

                    <!-- Status -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="STATUS"
                            android:textColor="#618389"
                            android:textSize="10sp"
                            android:fontFamily="sans-serif-medium"
                            android:letterSpacing="0.05"
                            android:layout_marginBottom="6dp"/>

                        <LinearLayout
                            android:id="@+id/statusBadgeContainer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/pill_blue_light"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="4dp">

                            <TextView
                                android:id="@+id/tvStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="NEW REQUEST"
                                android:textColor="#111718"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif-medium"
                                android:textStyle="bold"
                                android:textAllCaps="true"/>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Date -->
                    <LinearLayout
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:orientation="vertical"
                         android:gravity="end">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="RECEIVED ON"
                            android:textColor="#618389"
                            android:textSize="10sp"
                            android:fontFamily="sans-serif-medium"
                            android:letterSpacing="0.05"
                            android:layout_marginBottom="4dp"/>

                        <TextView
                            android:id="@+id/tvDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Oct 24, 2023"
                            android:textColor="#111718"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 2: Customer Info -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Customer Information"
                        android:textColor="#111718"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="bold"
                        android:padding="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:paddingBottom="16dp">

                        <!-- Profile Pic -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            app:cardCornerRadius="24dp"
                            app:cardElevation="0dp"
                            android:layout_marginEnd="12dp">
                             <ImageView
                                 android:id="@+id/ivCustomerProfile"
                                 android:layout_width="match_parent"
                                 android:layout_height="match_parent"
                                 android:src="@drawable/sample_profile"
                                 android:scaleType="centerCrop"/>
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvCustomerName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="John Doe"
                                android:textColor="#111718"
                                android:textSize="16sp"
                                android:fontFamily="sans-serif-medium"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/tvCustomerPhone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+91 9876543210"
                                android:textColor="#618389"
                                android:textSize="13sp"
                                android:fontFamily="sans-serif"/>
                        </LinearLayout>

                        <!-- Actions -->
                        <LinearLayout
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:orientation="horizontal">
                             
                             <ImageView
                                 android:id="@+id/btnCallCustomer"
                                 android:layout_width="40dp"
                                 android:layout_height="40dp"
                                 android:background="@drawable/circle_blue_light" 
                                 android:padding="10dp"
                                 android:src="@drawable/ic_call"
                                 app:tint="#13c8ec"
                                 android:layout_marginEnd="8dp"/>

                             <ImageView
                                 android:id="@+id/btnChatCustomer"
                                 android:layout_width="40dp"
                                 android:layout_height="40dp"
                                 android:background="@drawable/circle_green_light"
                                 android:padding="10dp"
                                 android:src="@drawable/ic_chat"
                                 app:tint="#16a34a"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Card 3: Bike Details -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Requested Bike Details"
                        android:textColor="#111718"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="bold"
                        android:padding="16dp"
                        android:background="@drawable/border_bottom_gray"/> 

                    <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="vertical"
                         android:padding="16dp">
                         
                         <!-- Image -->
                         <androidx.cardview.widget.CardView
                             android:layout_width="match_parent"
                             android:layout_height="200dp"
                             app:cardCornerRadius="12dp"
                             app:cardElevation="0dp"
                             app:cardBackgroundColor="#f9fafb"
                             android:layout_marginBottom="24dp">
                             <ImageView
                                 android:id="@+id/ivBikeImage"
                                 android:layout_width="match_parent"
                                 android:layout_height="match_parent"
                                 android:scaleType="centerCrop"
                                 android:src="@drawable/featured_bike_1"/>
                         </androidx.cardview.widget.CardView>

                        <!-- Grid Info -->
                         <GridLayout
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:columnCount="2"
                             android:rowCount="2">

                             <!-- Brand -->
                             <LinearLayout
                                 android:layout_width="0dp"
                                 android:layout_height="wrap_content"
                                 android:layout_columnWeight="1"
                                 android:orientation="vertical"
                                 android:layout_marginBottom="24dp">
                                 <TextView
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:text="BRAND"
                                     android:textColor="#618389"
                                     android:textSize="10sp"
                                     android:fontFamily="sans-serif-medium"
                                     android:letterSpacing="0.05"/>
                                 <TextView
                                     android:id="@+id/tvBrand"
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:text="Yamaha"
                                     android:textColor="#111718" 
                                     android:textSize="14sp"
                                     android:fontFamily="sans-serif-medium"
                                     android:textStyle="bold"/>
                             </LinearLayout>

                             <!-- Model -->
                             <LinearLayout
                                 android:layout_width="0dp"
                                 android:layout_height="wrap_content"
                                 android:layout_columnWeight="1"
                                 android:orientation="vertical"
                                 android:layout_marginBottom="24dp">
                                 <TextView
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:text="MODEL"
                                     android:textColor="#618389"
                                     android:textSize="10sp"
                                     android:fontFamily="sans-serif-medium"
                                     android:letterSpacing="0.05"/>
                                 <TextView
                                     android:id="@+id/tvBikeName"
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:text="MT-15"
                                     android:textColor="#111718" 
                                     android:textSize="14sp"
                                     android:fontFamily="sans-serif-medium"
                                     android:textStyle="bold"/>
                             </LinearLayout>

                             <!-- Variant -->
                             <LinearLayout
                                 android:layout_width="0dp"
                                 android:layout_height="wrap_content"
                                 android:layout_columnWeight="1"
                                 android:orientation="vertical">
                                 <TextView
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:text="VARIANT"
                                     android:textColor="#618389"
                                     android:textSize="10sp"
                                     android:fontFamily="sans-serif-medium"
                                     android:letterSpacing="0.05"/>
                                 <TextView
                                     android:id="@+id/tvEdition"
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:text="Version 2.0 (ABS)"
                                     android:textColor="#111718" 
                                     android:textSize="14sp"
                                     android:fontFamily="sans-serif-medium"
                                     android:textStyle="bold"/>
                             </LinearLayout>

                             <!-- Color -->
                             <LinearLayout
                                 android:layout_width="0dp"
                                 android:layout_height="wrap_content"
                                 android:layout_columnWeight="1"
                                 android:orientation="vertical">
                                 <TextView
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:text="COLOR CHOICE"
                                     android:textColor="#618389"
                                     android:textSize="10sp"
                                     android:fontFamily="sans-serif-medium"
                                     android:letterSpacing="0.05"
                                     android:layout_marginBottom="4dp"/>
                                 
                                     <TextView
                                         android:id="@+id/tvBikeColorName"
                                         android:layout_width="wrap_content"
                                         android:layout_height="wrap_content"
                                         android:text="Metallic Black"
                                         android:textColor="#FFFFFF" 
                                         android:textSize="12sp"
                                         android:fontFamily="sans-serif-medium"
                                         android:textStyle="bold"
                                         android:background="#111718"
                                         android:paddingHorizontal="12dp"
                                         android:paddingVertical="4dp"/>
                             </LinearLayout>

                         </GridLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
     </androidx.core.widget.NestedScrollView>

    <!-- Bottom Bar -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#ccffffff"
        android:padding="16dp"
        android:orientation="vertical"
        android:elevation="8dp">

        <!-- Action Buttons Layout -->
        <LinearLayout
            android:id="@+id/layoutActionButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <Button
                android:id="@+id/btnAccept"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Accept Application"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:backgroundTint="#2563eb"
                app:cornerRadius="12dp"
                android:layout_marginBottom="12dp"
                android:drawableStart="@drawable/ic_check_circle"
                android:drawableTint="#FFFFFF"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"/>

            <Button
                android:id="@+id/btnReject"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Reject Application"
                android:textColor="#dc2626"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                app:cornerRadius="12dp"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeColor="#dc2626"
                app:strokeWidth="2dp"
                android:drawableStart="@drawable/ic_cancel"
                android:drawableTint="#dc2626"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"/>
        </LinearLayout>

        <!-- Next Button (Initially Gone) -->
        <Button
             android:id="@+id/btnNext"
             android:layout_width="match_parent"
             android:layout_height="56dp"
             android:text="Proceed to Payment"
             android:textColor="#FFFFFF"
             android:textSize="16sp"
             android:textStyle="bold"
             android:fontFamily="sans-serif-medium"
             android:backgroundTint="#2563eb"
             app:cornerRadius="12dp"
             android:drawableEnd="@drawable/ic_arrow_forward"
             android:drawableTint="#FFFFFF"
             android:visibility="gone"/>

    </LinearLayout>

</RelativeLayout>