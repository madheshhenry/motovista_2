<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    android:layout_marginBottom="12dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_white_card_border"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/circle_green_light"
            android:gravity="center"
            android:layout_marginEnd="12dp">
             <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_check_circle"
                app:tint="@color/emi_success_green"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
             <TextView
                android:id="@+id/tvPaidMonth"
                android:text="September Installment"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/emi_text_main"/>
             <TextView
                android:id="@+id/tvPaidDate"
                android:text="Paid on Sep 14"
                android:textSize="12sp"
                android:textColor="@color/emi_success_green"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">
             <TextView
                android:id="@+id/tvPaidAmount"
                android:text="â‚¹1,200"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/emi_text_main"
                android:layout_marginBottom="4dp"/>
             <TextView
                android:text="PAID"
                android:textSize="9sp"
                android:textStyle="bold"
                android:textColor="@color/emi_success_green"
                android:background="@drawable/bg_capsule_green_light"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
