                                    android:id="@+id/ivArrow1"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_chevron_right"
                                    android:tint="@color/gray_400"
                                    android:visibility="gone"
                                    android:contentDescription="More" />

