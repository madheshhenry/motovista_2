<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fitsSystemWindows="true">

    <!-- Top Header with Back Button -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/background_light"
        android:paddingHorizontal="@dimen/padding_medium"
        android:paddingVertical="12dp"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_back"
            android:tint="@color/gray_800"
            android:padding="12dp"
            android:contentDescription="Back"
            android:clickable="true"
            android:focusable="true" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add Second-Hand Bike"
            android:textColor="@color/text_primary_light"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:fontFamily="sans-serif-medium" />

        <!-- Empty space for alignment -->
        <View
            android:layout_width="48dp"
            android:layout_height="48dp" />

    </LinearLayout>

    <!-- Main Scroll View -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:fitsSystemWindows="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/padding_medium"
            android:paddingVertical="@dimen/padding_medium">

            <!-- Brand Input -->
            <TextView
                android:id="@+id/tvBrandLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Brand"
                android:textColor="@color/text_primary_light"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etBrand"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="e.g., Honda, Bajaj, etc."
                android:inputType="text"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:background="@drawable/edittext_background"
                android:textColor="@color/text_primary_light"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="16dp" />

            <!-- Model Name Input -->
            <TextView
                android:id="@+id/tvModelLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Model Name"
                android:textColor="@color/text_primary_light"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etModel"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="e.g., Activa 6G, Pulsar 150"
                android:inputType="text"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:background="@drawable/edittext_background"
                android:textColor="@color/text_primary_light"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="16dp" />

            <!-- Year and Odometer Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Year Input -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:id="@+id/tvYearLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Year"
                        android:textColor="@color/text_primary_light"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/etYear"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:hint="e.g., 2021"
                        android:inputType="number"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="12dp"
                        android:background="@drawable/edittext_background"
                        android:textColor="@color/text_primary_light"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

                <!-- Odometer Input -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:id="@+id/tvOdometerLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Odometer (KM)"
                        android:textColor="@color/text_primary_light"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/etOdometer"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:hint="e.g., 15000"
                        android:inputType="number"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="12dp"
                        android:background="@drawable/edittext_background"
                        android:textColor="@color/text_primary_light"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

            </LinearLayout>

            <!-- Price and Condition Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Price Input -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:id="@+id/tvPriceLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Expected Price (â‚¹)"
                        android:textColor="@color/text_primary_light"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/etPrice"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:hint="e.g., 75000"
                        android:inputType="number"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="12dp"
                        android:background="@drawable/edittext_background"
                        android:textColor="@color/text_primary_light"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

                <!-- Condition Spinner -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:id="@+id/tvConditionLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Condition"
                        android:textColor="@color/text_primary_light"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="4dp" />

                    <Spinner
                        android:id="@+id/spinnerCondition"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/edittext_background"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:textColor="@color/text_primary_light"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

            </LinearLayout>

            <!-- Upload Images Section -->
            <TextView
                android:id="@+id/tvUploadLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Images"
                android:textColor="@color/text_primary_light"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <!-- Upload Container -->
            <LinearLayout
                android:id="@+id/uploadContainer"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/upload_background"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_upload"
                    android:tint="@color/gray_500"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="Upload" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Click to upload or drag and drop"
                    android:textColor="@color/gray_500"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SVG, PNG, JPG (MAX. 5MB)"
                    android:textColor="@color/gray_400"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif" />

            </LinearLayout>

            <!-- Previous Owner Details -->
            <TextView
                android:id="@+id/tvOwnerLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Previous Owner Details (Optional)"
                android:textColor="@color/text_primary_light"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etOwnerDetails"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:hint="e.g., Name, Contact Info"
                android:inputType="textMultiLine"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:background="@drawable/edittext_background"
                android:textColor="@color/text_primary_light"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:gravity="top"
                android:layout_marginBottom="16dp" />

            <!-- Key Features/Specs -->
            <TextView
                android:id="@+id/tvFeaturesLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Key Features/Specs"
                android:textColor="@color/text_primary_light"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etFeatures"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="e.g., New tires, Digital meter, Disc brakes"
                android:inputType="textMultiLine"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:background="@drawable/edittext_background"
                android:textColor="@color/text_primary_light"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:gravity="top"
                android:layout_marginBottom="24dp" />

            <!-- Save Bike Button -->
            <Button
                android:id="@+id/btnSaveBike"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Save Bike"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:background="@drawable/primary_button"

                android:gravity="center"
                android:layout_marginBottom="12dp" />

            <!-- Cancel Button -->
            <Button
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Cancel"
                android:textColor="@color/gray_600"
                android:textSize="16sp"
                android:textStyle="normal"
                android:fontFamily="sans-serif"
                android:background="@drawable/outline_button"
                android:gravity="center" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>