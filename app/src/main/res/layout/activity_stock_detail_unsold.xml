<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fitsSystemWindows="true">

    <!-- Main Content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Top Header Section -->
        <LinearLayout
            android:id="@+id/topHeader"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/padding_medium"
            android:paddingVertical="12dp"
            android:gravity="center_vertical"
            android:background="@color/background_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_arrow_back"
                android:tint="@color/text_dark"
                android:scaleType="center"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Back" />

            <!-- Title Text -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Stock Detail"
                android:textColor="@color/text_dark"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="sans-serif-medium" />

            <!-- Empty Space for alignment -->
            <View
                android:layout_width="48dp"
                android:layout_height="48dp" />

        </LinearLayout>

        <!-- Scrollable Content -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:scrollbars="none"
            android:paddingHorizontal="@dimen/padding_medium"
            android:paddingTop="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topHeader">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="16dp">

                <!-- Vehicle Information Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="@dimen/card_elevation"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Card Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:background="@color/gray_200"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_two_wheeler"
                                android:tint="@color/primary"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="VEHICLE INFORMATION"
                                android:textColor="@color/text_dark"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif"
                                android:letterSpacing="0.05"
                                android:textAllCaps="true" />

                        </LinearLayout>

                        <!-- Card Content -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <!-- Brand and Model Row -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="16dp">

                                <!-- Brand -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:layout_marginEnd="8dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="BRAND"
                                        android:textColor="@color/gray_500"
                                        android:textSize="10sp"
                                        android:textStyle="bold"
                                        android:fontFamily="sans-serif"
                                        android:letterSpacing="0.05"
                                        android:textAllCaps="true"
                                        android:layout_marginBottom="4dp" />

                                    <TextView
                                        android:id="@+id/tvBrand"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Royal Enfield"
                                        android:textColor="@color/text_dark"
                                        android:textSize="18sp"
                                        android:textStyle="bold"
                                        android:fontFamily="sans-serif" />

                                </LinearLayout>

                                <!-- Model -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:layout_marginStart="8dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="MODEL"
                                        android:textColor="@color/gray_500"
                                        android:textSize="10sp"
                                        android:textStyle="bold"
                                        android:fontFamily="sans-serif"
                                        android:letterSpacing="0.05"
                                        android:textAllCaps="true"
                                        android:layout_marginBottom="4dp" />

                                    <TextView
                                        android:id="@+id/tvModel"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Classic 350"
                                        android:textColor="@color/text_dark"
                                        android:textSize="18sp"
                                        android:textStyle="bold"
                                        android:fontFamily="sans-serif" />

                                </LinearLayout>

                            </LinearLayout>

                            <!-- Divider -->
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/gray_300"
                                android:layout_marginVertical="8dp" />

                            <!-- Engine Number -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginBottom="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ENGINE NUMBER"
                                    android:textColor="@color/gray_500"
                                    android:textSize="10sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif"
                                    android:letterSpacing="0.05"
                                    android:textAllCaps="true"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:id="@+id/tvEngineNo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="U3S5F009827"
                                    android:textColor="@color/text_dark"
                                    android:textSize="14sp"
                                    android:fontFamily="monospace"
                                    android:letterSpacing="0.1"
                                    android:padding="12dp"
                                    android:background="@color/gray_200"
                                    android:backgroundTint="@color/gray_200"
                                    app:backgroundTint="@color/gray_200"
                                    android:gravity="center_vertical"
                                    app:cardCornerRadius="8dp" />

                            </LinearLayout>

                            <!-- Chassis Number -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginBottom="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="CHASSIS NUMBER"
                                    android:textColor="@color/gray_500"
                                    android:textSize="10sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif"
                                    android:letterSpacing="0.05"
                                    android:textAllCaps="true"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:id="@+id/tvChassisNo"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="ME3U3S5F009827"
                                    android:textColor="@color/text_dark"
                                    android:textSize="14sp"
                                    android:fontFamily="monospace"
                                    android:letterSpacing="0.1"
                                    android:padding="12dp"
                                    android:background="@color/gray_200"
                                    android:backgroundTint="@color/gray_200"
                                    app:backgroundTint="@color/gray_200"
                                    android:gravity="center_vertical"
                                    app:cardCornerRadius="8dp" />

                            </LinearLayout>

                            <!-- Divider -->
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/gray_300"
                                android:layout_marginVertical="8dp" />

                            <!-- Stock Entry Date -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="STOCK ENTRY DATE"
                                    android:textColor="@color/gray_500"
                                    android:textSize="10sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif"
                                    android:letterSpacing="0.05"
                                    android:textAllCaps="true"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:id="@+id/tvStockDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="25 Oct, 2023"
                                    android:textColor="@color/text_dark"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Sale Note Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="@dimen/card_elevation"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Card Header -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:background="@color/gray_200"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_edit_note"
                                android:tint="@android:color/holo_orange_dark"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="SALE NOTE"
                                android:textColor="@color/text_dark"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif"
                                android:letterSpacing="0.05"
                                android:textAllCaps="true" />

                        </LinearLayout>

                        <!-- Card Content -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:paddingBottom="20dp">

                            <!-- Customer Name Input -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginBottom="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="CUSTOMER NAME"
                                    android:textColor="@color/gray_500"
                                    android:textSize="11sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif"
                                    android:letterSpacing="0.05"
                                    android:textAllCaps="true"
                                    android:layout_marginBottom="8dp" />

                                <EditText
                                    android:id="@+id/etCustomerName"
                                    android:layout_width="match_parent"
                                    android:layout_height="56dp"
                                    android:hint="Enter customer name"
                                    android:textColor="@color/text_dark"
                                    android:textColorHint="@color/gray_400"
                                    android:textSize="14sp"
                                    android:padding="16dp"
                                    android:background="@drawable/bg_input_field"
                                    android:fontFamily="sans-serif" />

                            </LinearLayout>

                            <!-- Delivery Date Input -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginBottom="24dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="DELIVERY DATE"
                                    android:textColor="@color/gray_500"
                                    android:textSize="11sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif"
                                    android:letterSpacing="0.05"
                                    android:textAllCaps="true"
                                    android:layout_marginBottom="8dp" />

                                <EditText
                                    android:id="@+id/etDeliveryDate"
                                    android:layout_width="match_parent"
                                    android:layout_height="56dp"
                                    android:hint="Select delivery date"
                                    android:text="2023-11-15"
                                    android:textColor="@color/text_dark"
                                    android:textColorHint="@color/gray_400"
                                    android:textSize="14sp"
                                    android:padding="16dp"
                                    android:background="@drawable/bg_input_field"
                                    android:fontFamily="sans-serif"
                                    android:inputType="date" />

                            </LinearLayout>

                            <!-- Mark as Sold Button -->
                            <Button
                                android:id="@+id/btnMarkAsSold"
                                android:layout_width="match_parent"
                                android:layout_height="56dp"
                                android:text="Mark as Sold"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif"
                                android:backgroundTint="@color/primary"
                                app:backgroundTint="@color/primary"
                                app:cornerRadius="16dp"
                                android:gravity="center"
                                android:drawablePadding="8dp"
                                app:drawableStartCompat="@drawable/ic_check_circle"
                                android:drawableTint="@color/white"
                                android:stateListAnimator="@null" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:elevation="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Dashboard Tab -->
        <LinearLayout
            android:id="@+id/tabDashboard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/ivDashboard"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_dashboard"
                android:tint="@color/gray_400"
                android:contentDescription="Dashboard" />

            <TextView
                android:id="@+id/tvDashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dashboard"
                android:textColor="@color/gray_400"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Inventory Tab -->
        <LinearLayout
            android:id="@+id/tabInventory"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/ivInventory"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_inventory"
                android:tint="@color/gray_400"
                android:contentDescription="Inventory" />

            <TextView
                android:id="@+id/tvInventory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inventory"
                android:textColor="@color/gray_400"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Bikes Tab -->
        <LinearLayout
            android:id="@+id/tabBikes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/ivBikes"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_two_wheeler"
                android:tint="@color/gray_400"
                android:contentDescription="Bikes" />

            <TextView
                android:id="@+id/tvBikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bikes"
                android:textColor="@color/gray_400"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Customers Tab -->
        <LinearLayout
            android:id="@+id/tabCustomers"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/ivCustomers"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_groups"
                android:tint="@color/gray_400"
                android:contentDescription="Customers" />

            <TextView
                android:id="@+id/tvCustomers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customers"
                android:textColor="@color/gray_400"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Settings Tab -->
        <LinearLayout
            android:id="@+id/tabSettings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/ivSettings"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_settings"
                android:tint="@color/gray_400"
                android:contentDescription="Settings" />

            <TextView
                android:id="@+id/tvSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textColor="@color/gray_400"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>