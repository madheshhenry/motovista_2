<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fitsSystemWindows="true">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/padding_medium"
        android:paddingVertical="16dp"
        android:background="@drawable/header_background"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back"
            android:tint="@color/text_dark"
            android:contentDescription="Back"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Edit Profile"
            android:textColor="@color/text_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:gravity="center" />

        <!-- Spacer to balance the layout -->
        <View
            android:layout_width="40dp"
            android:layout_height="40dp" />

    </LinearLayout>

    <!-- Main Scroll Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="100dp">

            <!-- Profile Picture Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="@dimen/padding_large"
                android:layout_marginTop="@dimen/padding_medium">

                <!-- Profile Picture Container -->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!-- Profile Image -->
                    <ImageView
                        android:id="@+id/ivProfilePicture"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:src="@drawable/ic_profile_placeholder"
                        android:background="@drawable/circle_background_primary"
                        android:scaleType="centerCrop"
                        android:contentDescription="Profile picture" />

                    <!-- Edit Photo Button -->
                    <ImageView
                        android:id="@+id/btnEditPhoto"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_edit"
                        android:background="@drawable/circle_background_primary_solid"
                        android:padding="6dp"
                        android:tint="@color/white"
                        android:layout_alignBottom="@+id/ivProfilePicture"
                        android:layout_alignEnd="@+id/ivProfilePicture"
                        android:contentDescription="Edit photo"
                        android:elevation="4dp" />

                </RelativeLayout>

            </LinearLayout>

            <!-- Profile Form Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/padding_medium"
                android:layout_marginTop="@dimen/padding_medium">

                <!-- Personal Information Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginBottom="@dimen/padding_large"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_medium">

                        <!-- Full Name -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Full Name"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif"
                                android:textStyle="normal" />

                            <EditText
                                android:id="@+id/etFullName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Santhosh Kumar"
                                android:textColor="@color/text_dark"
                                android:textSize="14sp"
                                android:background="@null"
                                android:paddingVertical="8dp"
                                android:paddingHorizontal="0dp"
                                android:inputType="textPersonName"
                                android:imeOptions="actionNext"
                                android:maxLines="1" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/border_color"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Email Address -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Email Address"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif"
                                android:textStyle="normal" />

                            <EditText
                                android:id="@+id/etEmail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="santhosh.k@example.com"
                                android:textColor="@color/text_dark"
                                android:textSize="14sp"
                                android:background="@null"
                                android:paddingVertical="8dp"
                                android:paddingHorizontal="0dp"
                                android:inputType="textEmailAddress"
                                android:imeOptions="actionNext"
                                android:maxLines="1" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/border_color"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Phone Number -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Phone Number"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif"
                                android:textStyle="normal" />

                            <EditText
                                android:id="@+id/etPhone"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="+91 98765 43210"
                                android:textColor="@color/text_dark"
                                android:textSize="14sp"
                                android:background="@null"
                                android:paddingVertical="8dp"
                                android:paddingHorizontal="0dp"
                                android:inputType="phone"
                                android:imeOptions="actionDone"
                                android:maxLines="1" />

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/border_color"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Buttons Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/padding_medium">

                    <!-- Save Changes Button -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btnSaveChanges"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="28dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true"
                        android:layout_marginBottom="12dp"
                        android:background="@color/primary_color">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:background="?attr/selectableItemBackground"
                            android:padding="@dimen/padding_small">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Save Changes"
                                android:textColor="@color/primary_color"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium"
                                android:letterSpacing="0.01" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Cancel Button -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/btnCancel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="28dp"
                        app:cardElevation="0dp"
                        app:cardUseCompatPadding="true"
                        android:background="@color/white"
                        android:outlineProvider="none">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:background="?attr/selectableItemBackground"
                            android:padding="@dimen/padding_small">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cancel"
                                android:textColor="@color/primary_color"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium"
                                android:letterSpacing="0.01" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>