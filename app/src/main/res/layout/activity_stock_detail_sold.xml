<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fitsSystemWindows="true">

    <!-- Top Header Section -->
    <LinearLayout
        android:id="@+id/topHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/padding_medium"
        android:paddingVertical="12dp"
        android:gravity="center_vertical"
        android:background="@color/background_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_back"
            android:tint="@color/text_dark"
            android:scaleType="center"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Back" />

        <!-- Title Text -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Stock Detail"
            android:textColor="@color/text_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:fontFamily="sans-serif-medium" />

        <!-- Empty Space for alignment -->
        <View
            android:layout_width="48dp"
            android:layout_height="48dp" />

    </LinearLayout>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        android:paddingHorizontal="@dimen/padding_medium"
        android:paddingTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topHeader">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <!-- Vehicle Information Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Card Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="24dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_two_wheeler"
                            android:tint="@color/primary"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="VEHICLE INFORMATION"
                            android:textColor="@color/text_dark"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif"
                            android:letterSpacing="0.05"
                            android:textAllCaps="true" />

                    </LinearLayout>

                    <!-- Brand and Model Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="24dp">

                        <!-- Brand -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="BRAND"
                                android:textColor="@color/gray_500"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif"
                                android:letterSpacing="0.05"
                                android:textAllCaps="true"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/tvBrand"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Yamaha"
                                android:textColor="@color/text_dark"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif" />

                        </LinearLayout>

                        <!-- Model -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="MODEL"
                                android:textColor="@color/gray_500"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif"
                                android:letterSpacing="0.05"
                                android:textAllCaps="true"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/tvModel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="MT-15 V2"
                                android:textColor="@color/text_dark"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Engine Number -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ENGINE NUMBER"
                            android:textColor="@color/gray_500"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif"
                            android:letterSpacing="0.05"
                            android:textAllCaps="true"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tvEngineNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="E564738291"
                            android:textColor="@color/gray_600"
                            android:textSize="14sp"
                            android:fontFamily="monospace"
                            android:letterSpacing="0.05"
                            android:padding="16dp"
                            android:background="@color/gray_200"
                            android:backgroundTint="@color/gray_200"
                            app:backgroundTint="@color/gray_200"
                            android:gravity="center_vertical"
                            app:cardCornerRadius="12dp" />

                    </LinearLayout>

                    <!-- Chassis Number -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CHASSIS NUMBER"
                            android:textColor="@color/gray_500"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif"
                            android:letterSpacing="0.05"
                            android:textAllCaps="true"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tvChassisNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="C102938475"
                            android:textColor="@color/gray_600"
                            android:textSize="14sp"
                            android:fontFamily="monospace"
                            android:letterSpacing="0.05"
                            android:padding="16dp"
                            android:background="@color/gray_200"
                            android:backgroundTint="@color/gray_200"
                            app:backgroundTint="@color/gray_200"
                            android:gravity="center_vertical"
                            app:cardCornerRadius="12dp" />

                    </LinearLayout>

                    <!-- Stock Entry Date -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="STOCK ENTRY DATE"
                            android:textColor="@color/gray_500"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif"
                            android:letterSpacing="0.05"
                            android:textAllCaps="true"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvStockDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Oct 22, 2023"
                            android:textColor="@color/text_dark"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Sale Note Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Card Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="24dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_edit_note"
                            android:tint="@android:color/holo_orange_dark"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SALE NOTE"
                            android:textColor="@color/text_dark"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif"
                            android:letterSpacing="0.05"
                            android:textAllCaps="true" />

                    </LinearLayout>

                    <!-- Customer Name -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CUSTOMER NAME"
                            android:textColor="@color/gray_500"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif"
                            android:letterSpacing="0.05"
                            android:textAllCaps="true"
                            android:layout_marginBottom="8dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:background="@color/gray_200"
                            android:backgroundTint="@color/gray_200"
                            app:backgroundTint="@color/gray_200"
                            app:cardCornerRadius="12dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_person"
                                android:tint="@color/gray_400"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:id="@+id/tvCustomerName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rajesh Kumar"
                                android:textColor="@color/text_dark"
                                android:textSize="16sp"
                                android:textStyle="normal"
                                android:fontFamily="sans-serif" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Delivery Date -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DELIVERY DATE"
                            android:textColor="@color/gray_500"
                            android:textSize="11sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif"
                            android:letterSpacing="0.05"
                            android:textAllCaps="true"
                            android:layout_marginBottom="8dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:background="@color/gray_200"
                            android:backgroundTint="@color/gray_200"
                            app:backgroundTint="@color/gray_200"
                            app:cardCornerRadius="12dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/tvDeliveryDate"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Oct 24, 2023"
                                android:textColor="@color/text_dark"
                                android:textSize="16sp"
                                android:textStyle="normal"
                                android:fontFamily="sans-serif" />

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_calendar_today"
                                android:tint="@color/gray_400" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>