<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fitsSystemWindows="true">

    <!-- Main Container (Max width like HTML) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/mainContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/padding_medium"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Header -->
            <LinearLayout
                android:id="@+id/headerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingStart="@dimen/padding_medium"
                android:paddingEnd="@dimen/padding_medium"
                android:paddingTop="48dp"
                android:paddingBottom="16dp"
                android:gravity="center_vertical"
                android:elevation="4dp">

                <!-- Back Button -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/btnBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/transparent">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_back"
                        android:tint="@color/text_dark"
                        android:contentDescription="Back" />

                </androidx.cardview.widget.CardView>

                <!-- Title -->
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="My Bikes"
                    android:textColor="@color/text_dark"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:layout_marginEnd="40dp" />

            </LinearLayout>

            <!-- Scrollable Content -->
            <androidx.core.widget.NestedScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fillViewport="true"
                android:padding="@dimen/padding_medium">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="32dp">

                    <!-- RecyclerView for Bikes -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvMyBikes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clipToPadding="false"
                        android:paddingBottom="16dp"
                        tools:listitem="@layout/item_my_bike" />

                    <!-- Empty State (Initially Gone) -->
                    <LinearLayout
                        android:id="@+id/emptyStateLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="48dp"
                        android:visibility="gone">

                        <androidx.cardview.widget.CardView
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            app:cardCornerRadius="48dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@color/gray_200">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_two_wheeler"
                                android:tint="@color/gray_400"
                                android:contentDescription="No Bikes" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No bikes found"
                            android:textColor="@color/text_dark"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginTop="24dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="It looks like you haven't purchased any bikes yet. Visit our showroom to get started."
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:layout_marginTop="8dp"
                            android:maxWidth="300dp" />

                        <Button
                            android:id="@+id/btnBrowseShowroom"
                            android:layout_width="200dp"
                            android:layout_height="48dp"
                            android:text="Browse Showroom"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif"
                            android:background="@drawable/primary_button_background"
                            android:layout_marginTop="24dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>