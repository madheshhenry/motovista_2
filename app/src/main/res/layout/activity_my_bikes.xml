<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fitsSystemWindows="true">

    <!-- Main Container (Max width like HTML) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/mainContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="@dimen/padding_medium"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/background_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- Header -->
            <LinearLayout
                android:id="@+id/headerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingStart="@dimen/padding_medium"
                android:paddingEnd="@dimen/padding_medium"
                android:paddingTop="48dp"
                android:paddingBottom="16dp"
                android:gravity="center_vertical"
                android:elevation="4dp">

                <!-- Back Button -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/btnBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@android:color/transparent">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_arrow_back"
                        android:tint="@color/text_dark"
                        android:contentDescription="Back" />

                </androidx.cardview.widget.CardView>

                <!-- Title -->
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="My Bikes"
                    android:textColor="@color/text_dark"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:layout_marginEnd="40dp" />

            </LinearLayout>

            <!-- Scrollable Content -->
            <androidx.core.widget.NestedScrollView
                android:id="@+id/scrollView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fillViewport="true"
                android:padding="@dimen/padding_medium">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="32dp">

                    <!-- Bike Card 1: Active -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardBike1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:cardUseCompatPadding="true"
                        app:cardBackgroundColor="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <!-- Image Container -->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:background="@color/gray_200">

                                <!-- Bike Image -->
                                <ImageView
                                    android:id="@+id/ivBike1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/featured_community"
                                    android:contentDescription="Yamaha R15 V4" />

                                <!-- Status Badge -->
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="12dp"
                                    android:orientation="horizontal"
                                    android:background="@drawable/badge_green_background"
                                    android:paddingHorizontal="12dp"
                                    android:paddingVertical="6dp"
                                    android:gravity="center_vertical">

                                    <!-- Pulse Dot -->
                                    <View
                                        android:layout_width="6dp"
                                        android:layout_height="6dp"
                                        android:layout_marginEnd="6dp"
                                        android:background="@drawable/circle_green_pulse" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Active"
                                        android:textColor="@color/green_800"
                                        android:textSize="12sp"
                                        android:textStyle="bold"
                                        android:fontFamily="sans-serif" />

                                </LinearLayout>

                            </RelativeLayout>

                            <!-- Content -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <!-- Title Row -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/tvBikeName1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Yamaha R15 V4"
                                            android:textColor="@color/text_dark"
                                            android:textSize="16sp"
                                            android:textStyle="bold"
                                            android:fontFamily="sans-serif-medium" />

                                        <TextView
                                            android:id="@+id/tvBikeColor1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Racing Blue"
                                            android:textColor="@color/primary_color"
                                            android:textSize="14sp"
                                            android:fontFamily="sans-serif"
                                            android:layout_marginTop="4dp" />

                                    </LinearLayout>

                                    <!-- Chevron -->
                                    <ImageView
                                        android:id="@+id/ivChevron1"
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:src="@drawable/ic_chevron_right"
                                        android:tint="@color/gray_400"
                                        android:contentDescription="More" />

                                </LinearLayout>

                                <!-- Divider -->
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginVertical="12dp"
                                    android:background="@color/gray_200" />

                                <!-- Details Row -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <!-- Reg Number -->
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="REG. NUMBER"
                                            android:textColor="@color/text_secondary"
                                            android:textSize="10sp"
                                            android:textAllCaps="true"
                                            android:letterSpacing="0.05"
                                            android:fontFamily="sans-serif"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/tvRegNumber1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="KA-01-HQ-1234"
                                            android:textColor="@color/text_dark"
                                            android:textSize="14sp"
                                            android:fontFamily="monospace"
                                            android:background="@color/gray_200"
                                            android:paddingHorizontal="8dp"
                                            android:paddingVertical="4dp"
                                            android:layout_marginTop="4dp"
                                            android:gravity="center_vertical" />

                                    </LinearLayout>

                                    <!-- Purchase Date -->
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical"
                                        android:gravity="end">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="PURCHASED"
                                            android:textColor="@color/text_secondary"
                                            android:textSize="10sp"
                                            android:textAllCaps="true"
                                            android:letterSpacing="0.05"
                                            android:fontFamily="sans-serif"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/tvPurchaseDate1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Jan 12, 2023"
                                            android:textColor="@color/text_dark"
                                            android:textSize="14sp"
                                            android:fontFamily="sans-serif"
                                            android:layout_marginTop="4dp"
                                            android:gravity="center_vertical" />

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Bike Card 2: In Registration -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardBike2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:cardUseCompatPadding="true"
                        app:cardBackgroundColor="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <!-- Image Container -->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:background="@color/gray_200">

                                <!-- Bike Image -->
                                <ImageView
                                    android:id="@+id/ivBike2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/featured_bike_1"
                                    android:contentDescription="Classic 350" />

                                <!-- Status Badge -->
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="12dp"
                                    android:orientation="horizontal"
                                    android:background="@drawable/badge_amber_background"
                                    android:paddingHorizontal="12dp"
                                    android:paddingVertical="6dp"
                                    android:gravity="center_vertical">

                                    <ImageView
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:layout_marginEnd="6dp"
                                        android:src="@drawable/ic_pending"
                                        android:tint="@color/amber_600"
                                        android:contentDescription="Pending" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="In Registration"
                                        android:textColor="@color/amber_800"
                                        android:textSize="12sp"
                                        android:textStyle="bold"
                                        android:fontFamily="sans-serif" />

                                </LinearLayout>

                            </RelativeLayout>

                            <!-- Content -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <!-- Title Row -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/tvBikeName2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Classic 350"
                                            android:textColor="@color/text_dark"
                                            android:textSize="16sp"
                                            android:textStyle="bold"
                                            android:fontFamily="sans-serif-medium" />

                                        <TextView
                                            android:id="@+id/tvBikeColor2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Stealth Black"
                                            android:textColor="@color/text_secondary"
                                            android:textSize="14sp"
                                            android:fontFamily="sans-serif"
                                            android:layout_marginTop="4dp" />

                                    </LinearLayout>

                                    <!-- Chevron -->
                                    <ImageView
                                        android:id="@+id/ivChevron2"
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:src="@drawable/ic_chevron_right"
                                        android:tint="@color/gray_400"
                                        android:contentDescription="More" />

                                </LinearLayout>

                                <!-- Divider -->
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginVertical="12dp"
                                    android:background="@color/gray_200" />

                                <!-- Details Row -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <!-- Reg Number -->
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="REG. NUMBER"
                                            android:textColor="@color/text_secondary"
                                            android:textSize="10sp"
                                            android:textAllCaps="true"
                                            android:letterSpacing="0.05"
                                            android:fontFamily="sans-serif"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/tvRegNumber2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Pending..."
                                            android:textColor="@color/text_secondary"
                                            android:textSize="14sp"
                                            android:fontStyle="italic"
                                            android:fontFamily="sans-serif"
                                            android:layout_marginTop="4dp"
                                            android:gravity="center_vertical" />

                                    </LinearLayout>

                                    <!-- Purchase Date -->
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical"
                                        android:gravity="end">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="PURCHASED"
                                            android:textColor="@color/text_secondary"
                                            android:textSize="10sp"
                                            android:textAllCaps="true"
                                            android:letterSpacing="0.05"
                                            android:fontFamily="sans-serif"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/tvPurchaseDate2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Oct 5, 2023"
                                            android:textColor="@color/text_dark"
                                            android:textSize="14sp"
                                            android:fontFamily="sans-serif"
                                            android:layout_marginTop="4dp"
                                            android:gravity="center_vertical" />

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Bike Card 3: Service Due -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardBike3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:cardUseCompatPadding="true"
                        app:cardBackgroundColor="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <!-- Image Container -->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:background="@color/gray_200">

                                <!-- Bike Image -->
                                <ImageView
                                    android:id="@+id/ivBike3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/featured_community"
                                    android:contentDescription="Ducati Panigale V4" />

                                <!-- Status Badge -->
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="12dp"
                                    android:orientation="horizontal"
                                    android:background="@drawable/badge_red_background"
                                    android:paddingHorizontal="12dp"
                                    android:paddingVertical="6dp"
                                    android:gravity="center_vertical">

                                    <ImageView
                                        android:layout_width="14dp"
                                        android:layout_height="14dp"
                                        android:layout_marginEnd="6dp"
                                        android:src="@drawable/ic_build_circle"
                                        android:tint="@color/red_600"
                                        android:contentDescription="Service" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Service Due"
                                        android:textColor="@color/red_800"
                                        android:textSize="12sp"
                                        android:textStyle="bold"
                                        android:fontFamily="sans-serif" />

                                </LinearLayout>

                            </RelativeLayout>

                            <!-- Content -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <!-- Title Row -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:id="@+id/tvBikeName3"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Ducati Panigale V4"
                                            android:textColor="@color/text_dark"
                                            android:textSize="16sp"
                                            android:textStyle="bold"
                                            android:fontFamily="sans-serif-medium" />

                                        <TextView
                                            android:id="@+id/tvBikeColor3"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Ducati Red"
                                            android:textColor="@color/text_secondary"
                                            android:textSize="14sp"
                                            android:fontFamily="sans-serif"
                                            android:layout_marginTop="4dp" />

                                    </LinearLayout>

                                    <!-- Chevron -->
                                    <ImageView
                                        android:id="@+id/ivChevron3"
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:src="@drawable/ic_chevron_right"
                                        android:tint="@color/gray_400"
                                        android:contentDescription="More" />

                                </LinearLayout>

                                <!-- Divider -->
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginVertical="12dp"
                                    android:background="@color/gray_200" />

                                <!-- Details Row -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <!-- Reg Number -->
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="REG. NUMBER"
                                            android:textColor="@color/text_secondary"
                                            android:textSize="10sp"
                                            android:textAllCaps="true"
                                            android:letterSpacing="0.05"
                                            android:fontFamily="sans-serif"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/tvRegNumber3"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="MH-12-AB-9999"
                                            android:textColor="@color/text_dark"
                                            android:textSize="14sp"
                                            android:fontFamily="monospace"
                                            android:background="@color/gray_200"
                                            android:paddingHorizontal="8dp"
                                            android:paddingVertical="4dp"
                                            android:layout_marginTop="4dp"
                                            android:gravity="center_vertical" />

                                    </LinearLayout>

                                    <!-- Last Service -->
                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical"
                                        android:gravity="end">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="LAST SERVICE"
                                            android:textColor="@color/text_secondary"
                                            android:textSize="10sp"
                                            android:textAllCaps="true"
                                            android:letterSpacing="0.05"
                                            android:fontFamily="sans-serif"
                                            android:textStyle="bold" />

                                        <TextView
                                            android:id="@+id/tvLastService3"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="6 months ago"
                                            android:textColor="@color/red_600"
                                            android:textSize="14sp"
                                            android:textStyle="bold"
                                            android:fontFamily="sans-serif"
                                            android:layout_marginTop="4dp"
                                            android:gravity="center_vertical" />

                                    </LinearLayout>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Empty State (Initially Gone) -->
                    <LinearLayout
                        android:id="@+id/emptyStateLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="48dp"
                        android:visibility="gone">

                        <androidx.cardview.widget.CardView
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            app:cardCornerRadius="48dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@color/gray_200">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_two_wheeler"
                                android:tint="@color/gray_400"
                                android:contentDescription="No Bikes" />

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No bikes found"
                            android:textColor="@color/text_dark"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginTop="24dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="It looks like you haven't purchased any bikes yet. Visit our showroom to get started."
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:layout_marginTop="8dp"
                            android:maxWidth="300dp" />

                        <Button
                            android:id="@+id/btnBrowseShowroom"
                            android:layout_width="200dp"
                            android:layout_height="48dp"
                            android:text="Browse Showroom"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif"
                            android:background="@drawable/primary_button_background"
                            android:layout_marginTop="24dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>