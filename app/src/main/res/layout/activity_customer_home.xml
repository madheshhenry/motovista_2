<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fitsSystemWindows="true">

    <!-- Main Scroll View -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:fitsSystemWindows="true"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="100dp"
            android:fitsSystemWindows="true">

            <!-- Top Header Section -->
            <LinearLayout
                android:id="@+id/topHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/padding_medium"
                android:paddingVertical="16dp"
                android:gravity="center_vertical"
                android:background="@color/background_light">

                <!-- User Profile Picture -->
                <LinearLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ivUserProfile"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_profile_placeholder"
                        android:background="@drawable/circle_background_primary"
                        android:scaleType="centerCrop"
                        android:contentDescription="User profile" />

                </LinearLayout>

                <!-- Welcome Text -->
                <TextView
                    android:id="@+id/tvWelcome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:text="Hello, Santhosh"
                    android:textColor="@color/text_dark"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium" />

                <!-- Notification Icon -->
                <ImageView
                    android:id="@+id/btnNotifications"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_notifications"
                    android:tint="@color/text_dark"
                    android:padding="12dp"
                    android:contentDescription="Notifications" />

            </LinearLayout>

            <!-- Featured Cards Horizontal Scroll -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/padding_medium"
                android:paddingTop="8dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- Featured Card 1: SB-X 2024 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardFeatured1"
                        android:layout_width="300dp"
                        android:layout_height="200dp"
                        android:layout_marginEnd="12dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <!-- Background Image -->
                            <ImageView
                                android:id="@+id/ivFeatured1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/featured_bike_1"
                                android:contentDescription="SB-X 2024 Bike" />

                            <!-- Gradient Overlay -->
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/gradient_overlay" />

                            <!-- Text Content -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="The All-New SB-X 2024"
                                    android:textColor="@color/white"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif-medium" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Unleash the Beast"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:fontFamily="sans-serif"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Featured Card 2: Monsoon Service -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardFeatured2"
                        android:layout_width="300dp"
                        android:layout_height="200dp"
                        android:layout_marginEnd="12dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <!-- Background Image -->
                            <ImageView
                                android:id="@+id/ivFeatured2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/featured_service"
                                android:contentDescription="Monsoon Service" />

                            <!-- Gradient Overlay -->
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/gradient_overlay" />

                            <!-- Text Content -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Monsoon Service Offer"
                                    android:textColor="@color/white"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif-medium" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Get 20% off on all services"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:fontFamily="sans-serif"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- Featured Card 3: Community Ride -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardFeatured3"
                        android:layout_width="300dp"
                        android:layout_height="200dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="2dp"
                        app:cardUseCompatPadding="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <!-- Background Image -->
                            <ImageView
                                android:id="@+id/ivFeatured3"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/featured_community"
                                android:contentDescription="Community Ride" />

                            <!-- Gradient Overlay -->
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/gradient_overlay" />

                            <!-- Text Content -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:orientation="vertical"
                                android:padding="16dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Community Ride Out"
                                    android:textColor="@color/white"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif-medium" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Join us this Sunday!"
                                    android:textColor="@color/white"
                                    android:textSize="14sp"
                                    android:fontFamily="sans-serif"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </HorizontalScrollView>

            <!-- Quick Actions Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/padding_medium"
                android:paddingTop="24dp"
                android:paddingBottom="8dp"
                android:gravity="center">

                <!-- Test Ride Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardTestRide"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp"
                    app:cardUseCompatPadding="true"
                    android:background="@color/card_bg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_two_wheeler"
                            android:tint="@color/text_dark"
                            android:contentDescription="Test Ride" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Test Ride"
                            android:textColor="@color/text_dark"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Book a slot"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Service Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardService"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp"
                    app:cardUseCompatPadding="true"
                    android:background="@color/card_bg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_build"
                            android:tint="@color/text_dark"
                            android:contentDescription="Service" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Service"
                            android:textColor="@color/text_dark"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Find a center"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Request Bike Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardRequestBike"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp"
                    app:cardUseCompatPadding="true"
                    android:background="@color/card_bg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_event_note"
                            android:tint="@color/text_dark"
                            android:contentDescription="Request Bike" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Request a Bike"
                            android:textColor="@color/text_dark"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Submit an inquiry"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- New Arrivals Section -->
            <TextView
                android:id="@+id/tvNewArrivals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="New Arrivals"
                android:textColor="@color/text_dark"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:paddingHorizontal="@dimen/padding_medium"
                android:paddingTop="32dp"
                android:paddingBottom="12dp" />

            <!-- New Arrivals Horizontal Scroll -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/padding_medium"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- SB-Raptor 500 Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardRaptor"
                        android:layout_width="160dp"
                        android:layout_height="240dp"
                        android:layout_marginEnd="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:cardUseCompatPadding="true"
                        android:background="@color/card_bg">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <!-- Bike Image -->
                            <ImageView
                                android:id="@+id/ivRaptor"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:scaleType="centerCrop"
                                android:src="@drawable/bike_raptor"
                                android:contentDescription="SB-Raptor 500" />

                            <!-- Details -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="SB-Raptor 500"
                                    android:textColor="@color/text_dark"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif-medium" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Starting at $5,500"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="12sp"
                                    android:fontFamily="sans-serif"
                                    android:layout_marginTop="4dp" />

                                <!-- Learn More Button -->
                                <Button
                                    android:id="@+id/btnLearnMoreRaptor"
                                    android:layout_width="wrap_content"
                                    android:layout_height="32dp"
                                    android:layout_marginTop="12dp"
                                    android:text="Learn More"
                                    android:textColor="@color/primary"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif"
                                    android:background="@drawable/primary_outline_button"
                                    android:paddingHorizontal="16dp"
                                    android:minWidth="0dp"
                                    android:minHeight="0dp" />

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- SB-Cruiser King Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardCruiser"
                        android:layout_width="160dp"
                        android:layout_height="240dp"
                        android:layout_marginEnd="16dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:cardUseCompatPadding="true"
                        android:background="@color/card_bg">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <!-- Bike Image -->
                            <ImageView
                                android:id="@+id/ivCruiser"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:scaleType="centerCrop"
                                android:src="@drawable/bike_cruiser"
                                android:contentDescription="SB-Cruiser King" />

                            <!-- Details -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="SB-Cruiser King"
                                    android:textColor="@color/text_dark"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif-medium" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Starting at $7,200"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="12sp"
                                    android:fontFamily="sans-serif"
                                    android:layout_marginTop="4dp" />

                                <!-- Learn More Button -->
                                <Button
                                    android:id="@+id/btnLearnMoreCruiser"
                                    android:layout_width="wrap_content"
                                    android:layout_height="32dp"
                                    android:layout_marginTop="12dp"
                                    android:text="Learn More"
                                    android:textColor="@color/primary"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif"
                                    android:background="@drawable/primary_outline_button"
                                    android:paddingHorizontal="16dp"
                                    android:minWidth="0dp"
                                    android:minHeight="0dp" />

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- SB-TrailBlazer Card -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardTrailBlazer"
                        android:layout_width="160dp"
                        android:layout_height="240dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:cardUseCompatPadding="true"
                        android:background="@color/card_bg">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <!-- Bike Image -->
                            <ImageView
                                android:id="@+id/ivTrailBlazer"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:scaleType="centerCrop"
                                android:src="@drawable/bike_trailblazer"
                                android:contentDescription="SB-TrailBlazer" />

                            <!-- Details -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="SB-TrailBlazer"
                                    android:textColor="@color/text_dark"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif-medium" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Starting at $8,000"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="12sp"
                                    android:fontFamily="sans-serif"
                                    android:layout_marginTop="4dp" />

                                <!-- Learn More Button -->
                                <Button
                                    android:id="@+id/btnLearnMoreTrailBlazer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="32dp"
                                    android:layout_marginTop="12dp"
                                    android:text="Learn More"
                                    android:textColor="@color/primary"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif"
                                    android:background="@drawable/primary_outline_button"
                                    android:paddingHorizontal="16dp"
                                    android:minWidth="0dp"
                                    android:minHeight="0dp" />

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </HorizontalScrollView>

            <!-- Padding for bottom navigation -->
            <View
                android:layout_width="match_parent"
                android:layout_height="80dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- AI Chatbot Button -->
    <androidx.cardview.widget.CardView
        android:id="@+id/btnChatBot"
        android:layout_width="56dp"
        android:layout_height="56dp"
        app:cardCornerRadius="28dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigation"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:cardBackgroundColor="@color/primary_color">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_smart_toy"
            android:tint="@color/white"
            android:contentDescription="AI Chatbot" />

    </androidx.cardview.widget.CardView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:elevation="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Home Tab -->
        <LinearLayout
            android:id="@+id/tabHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/ivHome"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home_filled"
                android:tint="@color/primary_color"
                android:contentDescription="Home" />

            <TextView
                android:id="@+id/tvHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="@color/primary_color"
                android:textSize="12sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Bikes Tab -->
        <LinearLayout
            android:id="@+id/tabBikes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/ivBikes"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_two_wheeler"
                android:tint="@color/gray_400"
                android:contentDescription="Bikes" />

            <TextView
                android:id="@+id/tvBikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bikes"
                android:textColor="@color/gray_400"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- EMI Calculator Tab -->
        <LinearLayout
            android:id="@+id/tabEmiCalculator"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
