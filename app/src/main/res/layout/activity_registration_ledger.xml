                            android:layout_marginStart="-16dp"
                            android:layout_marginTop="-16dp"
                            android:layout_marginBottom="-16dp" />

                        <!-- Content similar to card1 -->

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

