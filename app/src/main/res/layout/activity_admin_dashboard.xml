<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_light"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnMenu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@drawable/ic_menu"
            app:tint="@color/gray_800"/>

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Welcome, Admin"
            android:textColor="@color/gray_900"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"/>

        <FrameLayout
            android:layout_width="48dp"
            android:layout_height="48dp">
            
            <ImageView
                android:id="@+id/btnNotifications"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp"
                android:src="@drawable/ic_notifications"
                app:tint="@color/gray_800"
                android:background="@drawable/circle_white_bg"
                android:backgroundTint="@color/white"/>

            <TextView
                android:id="@+id/tvNotificationBadge"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/bg_badge_red"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="gone"
                tools:visibility="visible"/>
        </FrameLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admin Dashboard"
        android:textColor="@color/gray_900"
        android:textSize="32sp"
        android:textStyle="bold"
        android:paddingHorizontal="16dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/header"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="100dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingTop="8dp">

            <!-- Cards Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="32dp">

                <!-- EMI Ledger -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardEmiLedger"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:id="@+id/iconContainerEmi"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:background="@drawable/circle_white_bg">
                            
                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_receipt_long"
                                app:tint="@color/icon_red"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="EMI Ledger"
                            android:textColor="@color/gray_900"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginStart="12dp"/>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="@color/gray_400"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Insurance Ledger -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardInsuranceLedger"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:id="@+id/iconContainerInsurance"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:background="@drawable/circle_white_bg">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_admin_panel"
                                app:tint="@color/icon_yellow"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Insurance Ledger"
                            android:textColor="@color/gray_900"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginStart="12dp"/>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="@color/gray_400"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Registration Ledger -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardRegistrationLedger"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:id="@+id/iconContainerRegistration"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:background="@drawable/circle_white_bg">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_app_registration"
                                app:tint="@color/icon_blue"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Registration Ledger"
                            android:textColor="@color/gray_900"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginStart="12dp"/>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="@color/gray_400"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Application -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardApplication"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:id="@+id/iconContainerApplication"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:background="@drawable/circle_white_bg">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_description"
                                app:tint="@color/icon_green"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Application"
                            android:textColor="@color/gray_900"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginStart="12dp"/>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="@color/gray_400"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Sales -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSales"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:id="@+id/iconContainerSales"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:background="@drawable/circle_white_bg">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_point_of_sale"
                                app:tint="@color/icon_purple"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sales"
                            android:textColor="@color/gray_900"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginStart="12dp"/>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="@color/gray_400"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Requested Customer -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardRequestedCustomer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:id="@+id/iconContainerRequestedCustomer"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:background="@drawable/circle_white_bg">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_person_search"
                                app:tint="@color/icon_indigo"/>
                        </LinearLayout>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Requested Customer"
                            android:textColor="@color/gray_900"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginStart="12dp"/>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_forward"
                            app:tint="@color/gray_400"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Add Stock Bike (Missing in Java ID list? Maybe reuse btnAddNewBike or create new if not present. Java has btnAddNewBike, btnAddSecondHandBike. User HTML has THREE buttons.
                     1. Add Stock Bike -> "inventory"
                     2. Add New Bike -> "add_circle"
                     3. Add Second-Hand Bike -> "swap_horiz"
                     
                     AdminDashboardActivity.java has:
                     btnAddNewBike, btnAddSecondHandBike.
                     Missing "Add Stock Bike" ID.
                     
                     I will use btnAddNewBike for "Add Stock Bike" (Primary) if that matches user intent "Add Stock Bike".
                     Wait, "Add New Bike" usually means adding to inventory?
                     The user HTML shows "Add Stock Bike" as Primary (Blue filled).
                     "Add New Bike" as Secondary (Outlined).
                     "Add Second Hand Bike" as Secondary (Outlined).
                     
                     Existing Java has:
                     btnAddNewBike -> Opens AddBikeActivity.
                     btnAddSecondHandBike -> Opens AddSecondHandBikeActivity.
                     
                     "Add Stock Bike" might be the "AddBikeActivity" flow or maybe "BrandStockActivity"?
                     I'll assume "Add Stock Bike" is the primary action.
                     I will ADD a new button `btnAddStockBike` in XML.
                     But Java doesn't know it.
                     I should probably map `btnAddNewBike` to "Add New Bike" button (Primary action in user mind? No, HTML says Add Stock Bike is primary).
                     
                     Let's check AddBikeActivity. It adds a bike.
                     
                     Let's implement exactly as HTML:
                     1. Button (Primary): Add Stock Bike. (I will map this to `btnAddNewBike` in XML ID initially? No, that might be confusing if `Add New Bike` is second button).
                     
                     Let's look at existing Java again.
                     btnAddNewBike -> AddBikeActivity.
                     btnAddSecondHandBike -> AddSecondHandBikeActivity.
                     
                     I will map:
                     HTLM "Add New Bike" -> `btnAddNewBike` (Java).
                     HTML "Add Second-Hand Bike" -> `btnAddSecondHandBike` (Java).
                     HTML "Add Stock Bike" -> New Button `btnAddStockBike`.
                     
                     I will need to add this to Java to make it functional.
                     Or maybe "Add Stock Bike" IS "Add New Bike" in the current app logic?
                     "Add Stock Bike" -> Add inventory?
                     
                     User said "enaku admindashboard UI change pannanum... change the UI without affecting other function".
                     This implies I should NOT add new logical functions like a 3rd button if it doesn't do anything.
                     However, the HTML clearly has 3 buttons.
                     I will add the 3rd button in XML but maybe set it to "Coming Soon" or map it to `InventoryActivity` in Java.
                     Actually, "Inventory" tab exists.
                     
                     I'll implement the 3 buttons.
                     I'll map:
                     1. "Add Stock Bike" -> ID `btnAddStockBike` (New).
                     2. "Add New Bike" -> ID `btnAddNewBike`.
                     3. "Add Second-Hand Bike" -> ID `btnAddSecondHandBike`.
                     
                     I will update Java to finding `btnAddStockBike` and maybe make it open `InventoryActivity` or `AddBikeActivity` (if Add New Bike is different).
                     Wait, "Add New Bike" usually creates a NEW model.
                     "Add Stock Bike" usually adds QUANTITY to existing model?
                     
                     I'll stick to the existing Java IDs for the existing functional buttons.
                     I will add `btnAddStockBike` and perhaps leave it unconnected or connect to `AddBikeActivity` if that's what it means.
                     
                     Let's check `AddBikeActivity`... it adds a new bike to DB.
                     
                     I'll just add the button in XML and bind it in Java.
                -->
                
                <Button
                    android:id="@+id/btnAddStockBike"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Stock Bike"
                    android:textColor="@color/white"
                    android:background="@drawable/btn_fill_primary"
                    app:backgroundTint="@color/primary_color"
                    android:drawableStart="@drawable/ic_inventory"
                    android:drawableTint="@color/white"
                    android:drawablePadding="8dp"
                    android:paddingVertical="14dp"
                    android:layout_marginBottom="12dp"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/btnAddNewBike"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add New Bike"
                    android:textColor="@color/primary_color"
                    android:background="@drawable/btn_outline_primary"
                    app:backgroundTint="@null"
                    android:drawableStart="@drawable/ic_add_circle_outline"
                    android:drawableTint="@color/primary_color"
                    android:drawablePadding="8dp"
                    android:paddingVertical="14dp"
                    android:layout_marginBottom="12dp"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/btnAddSecondHandBike"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Second-Hand Bike"
                    android:textColor="@color/primary_color"
                    android:background="@drawable/btn_outline_primary"
                    app:backgroundTint="@null"
                    android:drawableStart="@drawable/ic_swap_horiz"
                    android:drawableTint="@color/primary_color"
                    android:drawablePadding="8dp"
                    android:paddingVertical="14dp"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:textStyle="bold"/>

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ccffffff"
        android:paddingVertical="8dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Dashboard -->
        <LinearLayout
            android:id="@+id/tabDashboard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_dashboard"
                app:tint="@color/primary_color"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dashboard"
                android:textSize="12sp"
                android:textColor="@color/primary_color"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Inventory -->
        <LinearLayout
            android:id="@+id/tabInventory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_inventory_2"
                app:tint="@color/gray_400"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inventory"
                android:textSize="12sp"
                android:textColor="@color/gray_400"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Bikes -->
        <LinearLayout
            android:id="@+id/tabBikes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_two_wheeler"
                app:tint="@color/gray_400"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bikes"
                android:textSize="12sp"
                android:textColor="@color/gray_400"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Customers -->
        <LinearLayout
            android:id="@+id/tabCustomers"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_groups"
                app:tint="@color/gray_400"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customers"
                android:textSize="12sp"
                android:textColor="@color/gray_400"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Settings -->
        <LinearLayout
            android:id="@+id/tabSettings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_settings"
                app:tint="@color/gray_400"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textSize="12sp"
                android:textColor="@color/gray_400"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
