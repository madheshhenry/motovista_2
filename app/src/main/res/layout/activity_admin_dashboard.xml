<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fitsSystemWindows="true">

    <!-- Main Scroll View -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:fitsSystemWindows="true"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="80dp"
            android:fitsSystemWindows="true">

            <!-- Top Header Section -->
            <LinearLayout
                android:id="@+id/topHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:gravity="center_vertical"
                android:background="@color/background_light"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Menu Icon -->
                <ImageView
                    android:id="@+id/btnMenu"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_menu"
                    android:tint="@color/gray_800"
                    android:padding="12dp"
                    android:contentDescription="Menu" />

                <!-- Welcome Text -->
                <TextView
                    android:id="@+id/tvWelcome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Welcome, Admin"
                    android:textColor="@color/text_dark"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:fontFamily="sans-serif-medium" />

                <!-- Notification Icon -->
                <ImageView
                    android:id="@+id/btnNotifications"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_notifications"
                    android:tint="@color/gray_800"
                    android:padding="12dp"
                    android:contentDescription="Notifications" />

            </LinearLayout>

            <!-- Dashboard Title -->
            <TextView
                android:id="@+id/tvDashboardTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Admin Dashboard"
                android:textColor="@color/text_primary_light"
                android:textSize="32sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/topHeader" />

            <!-- Ledger Cards Container -->
            <LinearLayout
                android:id="@+id/ledgerContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:paddingVertical="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDashboardTitle">

                <!-- EMI Ledger Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardEmiLedger"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/rounded_card_light">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <!-- Icon Container -->
                        <LinearLayout
                            android:id="@+id/iconContainerEmi"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/icon_circle_bg"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_receipt"
                                android:tint="@color/icon_red"
                                android:contentDescription="EMI Ledger" />

                        </LinearLayout>

                        <!-- Text Content -->
                        <TextView
                            android:id="@+id/tvEmiLedger"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:text="EMI Ledger"
                            android:textColor="@color/text_primary_light"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif" />

                        <!-- Chevron Icon -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_chevron_right"
                            android:tint="@color/gray_400"
                            android:contentDescription="More" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Insurance Ledger Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardInsuranceLedger"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/rounded_card_light">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <!-- Icon Container -->
                        <LinearLayout
                            android:id="@+id/iconContainerInsurance"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/icon_circle_bg"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_admin_panel"
                                android:tint="@color/icon_yellow"
                                android:contentDescription="Insurance Ledger" />

                        </LinearLayout>

                        <!-- Text Content -->
                        <TextView
                            android:id="@+id/tvInsuranceLedger"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:text="Insurance Ledger"
                            android:textColor="@color/text_primary_light"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif" />

                        <!-- Chevron Icon -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_chevron_right"
                            android:tint="@color/gray_400"
                            android:contentDescription="More" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Registration Ledger Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardRegistrationLedger"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/rounded_card_light">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <!-- Icon Container -->
                        <LinearLayout
                            android:id="@+id/iconContainerRegistration"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/icon_circle_bg"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_app_registration"
                                android:tint="@color/icon_blue"
                                android:contentDescription="Registration Ledger" />

                        </LinearLayout>

                        <!-- Text Content -->
                        <TextView
                            android:id="@+id/tvRegistrationLedger"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:text="Registration Ledger"
                            android:textColor="@color/text_primary_light"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif" />

                        <!-- Chevron Icon -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_chevron_right"
                            android:tint="@color/gray_400"
                            android:contentDescription="More" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Application Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardApplication"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/rounded_card_light">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <!-- Icon Container -->
                        <LinearLayout
                            android:id="@+id/iconContainerApplication"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/icon_circle_bg"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_description"
                                android:tint="@color/icon_green"
                                android:contentDescription="Application" />

                        </LinearLayout>

                        <!-- Text Content -->
                        <TextView
                            android:id="@+id/tvApplication"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:text="Application"
                            android:textColor="@color/text_primary_light"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif" />

                        <!-- Chevron Icon -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_chevron_right"
                            android:tint="@color/gray_400"
                            android:contentDescription="More" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Sales Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSales"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/rounded_card_light">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <!-- Icon Container -->
                        <LinearLayout
                            android:id="@+id/iconContainerSales"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/icon_circle_bg"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_point_of_sale"
                                android:tint="@color/icon_purple"
                                android:contentDescription="Sales" />

                        </LinearLayout>

                        <!-- Text Content -->
                        <TextView
                            android:id="@+id/tvSales"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:text="Sales"
                            android:textColor="@color/text_primary_light"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif" />

                        <!-- Chevron Icon -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_chevron_right"
                            android:tint="@color/gray_400"
                            android:contentDescription="More" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Requested Customer Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardRequestedCustomer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginBottom="24dp"
                    android:background="@drawable/rounded_card_light">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <!-- Icon Container -->
                        <LinearLayout
                            android:id="@+id/iconContainerRequestedCustomer"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/icon_circle_bg"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_person_search"
                                android:tint="@color/icon_indigo"
                                android:contentDescription="Requested Customer" />

                        </LinearLayout>

                        <!-- Text Content -->
                        <TextView
                            android:id="@+id/tvRequestedCustomer"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="16dp"
                            android:text="Requested Customer"
                            android:textColor="@color/text_primary_light"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif" />

                        <!-- Chevron Icon -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_chevron_right"
                            android:tint="@color/gray_400"
                            android:contentDescription="More" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!-- Buttons Container -->
            <LinearLayout
                android:id="@+id/buttonsContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:paddingVertical="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ledgerContainer">

                <!-- Add New Bike Button -->
                <Button
                    android:id="@+id/btnAddNewBike"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Add New Bike"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:background="@drawable/primary_button"
                    android:drawableStart="@drawable/ic_add_circle"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:layout_marginBottom="12dp"
                    android:paddingHorizontal="16dp" />

                <!-- Add Second-Hand Bike Button -->
                <Button
                    android:id="@+id/btnAddSecondHandBike"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="Add Second-Hand Bike"
                    android:textColor="@color/primary_color"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:background="@drawable/outline_button"
                    android:drawableStart="@drawable/ic_swap_horiz"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:paddingHorizontal="16dp" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:elevation="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Dashboard Tab -->
        <LinearLayout
            android:id="@+id/tabDashboard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_dashboard"
                android:tint="@color/primary_color"
                android:contentDescription="Dashboard" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dashboard"
                android:textColor="@color/primary_color"
                android:textSize="12sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Inventory Tab -->
        <LinearLayout
            android:id="@+id/tabInventory"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_inventory"
                android:tint="@color/gray_400"
                android:contentDescription="Inventory" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inventory"
                android:textColor="@color/gray_400"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Bikes Tab -->
        <LinearLayout
            android:id="@+id/tabBikes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_two_wheeler"
                android:tint="@color/gray_400"
                android:contentDescription="Bikes" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bikes"
                android:textColor="@color/gray_400"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Customers Tab -->
        <LinearLayout
            android:id="@+id/tabCustomers"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_groups"
                android:tint="@color/gray_400"
                android:contentDescription="Customers" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Customers"
                android:textColor="@color/gray_400"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Settings Tab -->
        <LinearLayout
            android:id="@+id/tabSettings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_settings"
                android:tint="@color/gray_400"
                android:contentDescription="Settings" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textColor="@color/gray_400"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>