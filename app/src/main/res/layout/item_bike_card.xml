<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardBike"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- Bike Image -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivBike"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="fitCenter"
            android:padding="4dp"
            android:src="@drawable/placeholder_bike"
            android:contentDescription="Bike Image"
            android:background="#F8FAFC"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Tag (NEW BIKE / SH BIKES) -->
        <TextView
            android:id="@+id/tvTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:paddingVertical="3dp"
            android:textColor="@color/white"
            android:textSize="9sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:includeFontPadding="false"
            android:letterSpacing="0.05"
            android:background="@drawable/tag_new_bike"
            app:layout_constraintStart_toStartOf="@+id/ivBike"
            app:layout_constraintTop_toTopOf="@+id/ivBike"
            android:layout_marginTop="-4dp"
            android:layout_marginStart="-4dp"
            android:elevation="4dp" />

        <!-- Bike Details Container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintStart_toEndOf="@+id/ivBike"
            app:layout_constraintEnd_toStartOf="@+id/ivChevron"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- Brand -->
            <TextView
                android:id="@+id/tvBrand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Yamaha"
                android:textColor="#64748b"
                android:textSize="12sp"
                android:fontFamily="sans-serif-medium"
                android:textAllCaps="true"
                android:letterSpacing="0.05"/>

            <!-- Model -->
            <TextView
                android:id="@+id/tvModel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R15 V4"
                android:textColor="#1e293b"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-black"
                android:layout_marginTop="2dp" />

            <!-- Info (Only for SH - Condition, Hidden for Price) -->
            <TextView
                android:id="@+id/tvInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Excellent Condition"
                android:textSize="13sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="4dp"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Chevron Icon -->
        <ImageView
            android:id="@+id/ivChevron"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_chevron_right"
            app:tint="#CBD5E1"
            android:contentDescription="More"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
