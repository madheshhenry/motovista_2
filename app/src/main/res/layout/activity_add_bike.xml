<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fitsSystemWindows="true">

    <!-- Top Header -->
    <LinearLayout
        android:id="@+id/topHeader"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:gravity="center_vertical"
        android:background="@color/background_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_back"
            android:tint="@color/gray_800"
            android:padding="12dp"
            android:contentDescription="Back" />

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add New Bike"
            android:textColor="@color/gray_900"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:fontFamily="sans-serif-medium" />

        <!-- Empty space for alignment -->
        <View
            android:layout_width="48dp"
            android:layout_height="48dp" />

    </LinearLayout>

    <!-- Main Scroll View -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:fitsSystemWindows="true"
        android:paddingTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topHeader">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:paddingBottom="80dp">

            <!-- Brand and Model Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Brand Input -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Brand"
                        android:textColor="@color/text_primary_light"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/etBrand"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:hint="e.g., Yamaha"
                        android:inputType="text"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="12dp"
                        android:background="@drawable/edittext_background"
                        android:textColor="@color/text_primary_light"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

                <!-- Model Name Input -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Model Name"
                        android:textColor="@color/text_primary_light"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/etModel"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:hint="e.g., R15"
                        android:inputType="text"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="12dp"
                        android:background="@drawable/edittext_background"
                        android:textColor="@color/text_primary_light"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

            </LinearLayout>

            <!-- On-Road Price -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="On-Road Price"
                android:textColor="@color/text_primary_light"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="4dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                android:background="@drawable/edittext_background"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹"
                    android:textColor="@color/gray_500"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif" />

                <EditText
                    android:id="@+id/etOnRoadPrice"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:hint="2,00,000"
                    android:inputType="number"
                    android:textColor="@color/text_primary_light"
                    android:textSize="16sp"
                    android:background="@android:color/transparent"
                    android:paddingStart="8dp"
                    android:fontFamily="sans-serif" />

            </LinearLayout>

            <!-- Engine CC and Mileage Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Engine CC -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Engine CC"
                        android:textColor="@color/text_primary_light"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/etEngineCC"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:hint="155"
                        android:inputType="number"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="12dp"
                        android:background="@drawable/edittext_background"
                        android:textColor="@color/text_primary_light"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

                <!-- Mileage -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mileage (km/l)"
                        android:textColor="@color/text_primary_light"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/etMileage"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:hint="45"
                        android:inputType="numberDecimal"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="12dp"
                        android:background="@drawable/edittext_background"
                        android:textColor="@color/text_primary_light"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

            </LinearLayout>

            <!-- Top Speed and Braking Type Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <!-- Top Speed -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Top Speed (km/h)"
                        android:textColor="@color/text_primary_light"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="4dp" />

                    <EditText
                        android:id="@+id/etTopSpeed"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:hint="140"
                        android:inputType="number"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="12dp"
                        android:background="@drawable/edittext_background"
                        android:textColor="@color/text_primary_light"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

                <!-- Braking Type -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Braking Type"
                        android:textColor="@color/text_primary_light"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="4dp" />

                    <Spinner
                        android:id="@+id/spinnerBrakingType"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/edittext_background"
                        android:paddingHorizontal="16dp"
                        android:textColor="@color/text_primary_light"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

            </LinearLayout>

            <!-- Type Selection -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Type"
                android:textColor="@color/text_primary_light"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="4dp" />

            <Spinner
                android:id="@+id/spinnerType"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/edittext_background"
                android:paddingHorizontal="16dp"
                android:textColor="@color/text_primary_light"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:layout_marginBottom="16dp" />

            <!-- Upload Image Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Image"
                android:textColor="@color/text_primary_light"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="8dp" />

            <!-- Upload Container -->
            <LinearLayout
                android:id="@+id/uploadContainer"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/upload_background"
                android:layout_marginBottom="16dp"
                android:clickable="true"
                android:focusable="true">

                <ImageView
                    android:id="@+id/ivUploadIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_upload"
                    android:tint="@color/gray_500"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="Upload" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload a file or drag and drop"
                    android:textColor="@color/gray_500"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PNG, JPG, GIF up to 10MB"
                    android:textColor="@color/gray_400"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif" />

            </LinearLayout>

            <!-- Image Preview Container -->
            <LinearLayout
                android:id="@+id/imagePreviewContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_marginBottom="16dp" />

            <!-- Key Features/Specs -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Key Features/Specs (Optional)"
                android:textColor="@color/text_primary_light"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="4dp" />

            <EditText
                android:id="@+id/etFeatures"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="e.g., Dual channel ABS, VVA, Slipper clutch..."
                android:inputType="textMultiLine"
                android:paddingHorizontal="16dp"
                android:paddingVertical="12dp"
                android:background="@drawable/edittext_background"
                android:textColor="@color/text_primary_light"
                android:textSize="16sp"
                android:fontFamily="sans-serif"
                android:gravity="top"
                android:layout_marginBottom="24dp" />

            <!-- Save Bike Button -->
            <Button
                android:id="@+id/btnSaveBike"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Save Bike"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:background="@drawable/primary_button"
                android:layout_marginBottom="12dp" />

            <!-- Cancel Button -->
            <Button
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Cancel"
                android:textColor="@color/gray_600"
                android:textSize="16sp"
                android:textStyle="normal"
                android:fontFamily="sans-serif"
                android:background="@drawable/outline_button" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>