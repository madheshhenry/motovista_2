<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fitsSystemWindows="true">

    <!-- Main Scroll View -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <!-- Header -->
            <LinearLayout
                android:id="@+id/header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/padding_medium"
                android:paddingVertical="16dp"
                android:paddingTop="48dp"
                android:gravity="center_vertical"
                android:background="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Back Button -->
                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_arrow_back"
                    android:tint="@color/text_primary_light"
                    android:background="?selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:contentDescription="Back" />

                <!-- Title -->
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Sales History"
                    android:textColor="@color/text_primary_light"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:fontFamily="sans-serif-medium" />

                <!-- Spacer for symmetry -->
                <View
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

            </LinearLayout>

            <!-- Filters Container -->
            <HorizontalScrollView
                android:id="@+id/filtersContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingHorizontal="@dimen/padding_medium"
                android:background="@color/white"
                android:scrollbars="none"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/header">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="4dp">

                    <!-- All Filter Button -->
                    <Button
                        android:id="@+id/btnFilterAll"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="All"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:background="@drawable/primary_button_rounded"
                        android:paddingHorizontal="20dp"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="sans-serif" />

                    <!-- Cash Filter Button -->
                    <Button
                        android:id="@+id/btnFilterCash"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="Cash"
                        android:textColor="@color/text_primary_light"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:background="@drawable/gray_button_rounded"
                        android:paddingHorizontal="20dp"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="sans-serif" />

                    <!-- EMI Filter Button -->
                    <Button
                        android:id="@+id/btnFilterEMI"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="EMI"
                        android:textColor="@color/text_primary_light"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:background="@drawable/gray_button_rounded"
                        android:paddingHorizontal="20dp"
                        android:layout_marginEnd="8dp"
                        android:fontFamily="sans-serif" />

                    <!-- This Month Filter Button -->
                    <Button
                        android:id="@+id/btnFilterThisMonth"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:text="This Month"
                        android:textColor="@color/text_primary_light"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:background="@drawable/gray_button_rounded"
                        android:paddingHorizontal="20dp"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

            </HorizontalScrollView>

            <!-- Sales List Container -->
            <LinearLayout
                android:id="@+id/salesListContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/padding_medium"
                android:layout_marginTop="8dp"
                android:paddingTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/filtersContainer">

                <!-- Card 1 - Yamaha R15 V4 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSale1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/rounded_card_light">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <!-- Top Row: Image and Details -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <!-- Bike Image -->
                            <ImageView
                                android:id="@+id/ivBike1"
                                android:layout_width="72dp"
                                android:layout_height="72dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_bike_placeholder"
                                android:background="@color/gray_200"
                                android:contentDescription="Yamaha R15 V4"
                                android:clipToOutline="true"
                                android:outlineProvider="bounds" />

                            <!-- Bike Details -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:paddingStart="12dp"
                                android:paddingEnd="8dp">

                                <!-- Bike Name and Chevron -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <TextView
                                        android:id="@+id/tvBikeName1"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Yamaha R15 V4"
                                        android:textColor="@color/text_primary_light"
                                        android:textSize="16sp"
                                        android:textStyle="bold"
                                        android:fontFamily="sans-serif-medium"
                                        android:maxLines="1"
                                        android:ellipsize="end" />

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:src="@drawable/ic_chevron_right"
                                        android:tint="@color/gray_400"
                                        android:contentDescription="More" />

                                </LinearLayout>

                                <!-- Customer Name -->
                                <TextView
                                    android:id="@+id/tvCustomer1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Customer: John Doe"
                                    android:textColor="@color/text_secondary_light"
                                    android:textSize="12sp"
                                    android:fontFamily="sans-serif"
                                    android:layout_marginTop="4dp" />

                                <!-- Date -->
                                <TextView
                                    android:id="@+id/tvDate1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Oct 24, 2023"
                                    android:textColor="@color/text_secondary_light"
                                    android:textSize="12sp"
                                    android:fontFamily="sans-serif"
                                    android:layout_marginTop="2dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Bottom Row: Payment Type and Price -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="12dp"
                            android:paddingTop="12dp"
                            android:background="@drawable/divider_top">

                            <!-- Payment Type Badge -->
                            <TextView
                                android:id="@+id/tvPaymentType1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="EMI"
                                android:textColor="@color/icon_blue"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif"
                                android:background="@drawable/blue_badge_background"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="4dp" />

                            <!-- Price -->
                            <TextView
                                android:id="@+id/tvPrice1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="$2,400.00"
                                android:textColor="@color/primary_color"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium"
                                android:gravity="end" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Card 2 - Royal Enfield Classic -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSale2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/rounded_card_light">

                    <!-- Similar structure as Card 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/ivBike2"
                                android:layout_width="72dp"
                                android:layout_height="72dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_bike_placeholder"
                                android:background="@color/gray_200"
                                android:contentDescription="Royal Enfield Classic" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:paddingStart="12dp"
                                android:paddingEnd="8dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <TextView
                                        android:id="@+id/tvBikeName2"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Royal Enfield Classic"
                                        android:textColor="@color/text_primary_light"
                                        android:textSize="16sp"
                                        android:textStyle="bold"
                                        android:maxLines="1"
                                        android:ellipsize="end" />

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:src="@drawable/ic_chevron_right"
                                        android:tint="@color/gray_400" />

                                </LinearLayout>

                                <TextView
                                    android:id="@+id/tvCustomer2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Customer: Sarah Smith"
                                    android:textColor="@color/text_secondary_light"
                                    android:textSize="12sp"
                                    android:layout_marginTop="4dp" />

                                <TextView
                                    android:id="@+id/tvDate2"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Oct 23, 2023"
                                    android:textColor="@color/text_secondary_light"
                                    android:textSize="12sp"
                                    android:layout_marginTop="2dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="12dp"
                            android:paddingTop="12dp"
                            android:background="@drawable/divider_top">

                            <TextView
                                android:id="@+id/tvPaymentType2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cash"
                                android:textColor="@color/icon_green"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:background="@drawable/green_badge_background"
                                android:paddingHorizontal="8dp"
                                android:paddingVertical="4dp" />

                            <TextView
                                android:id="@+id/tvPrice2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="$4,500.00"
                                android:textColor="@color/primary_color"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:gravity="end" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Add Cards 3, 4, and 5 similarly -->
                <!-- Card 3 - Honda CB350 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSale3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/rounded_card_light">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <!-- Similar structure with data for Honda CB350 -->
                        <!-- Bike: Honda CB350, Customer: Mike Ross, Date: Oct 22, 2023, EMI, $3,100.00 -->

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Card 4 - KTM Duke 250 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSale4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/rounded_card_light">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <!-- Similar structure with data for KTM Duke 250 -->
                        <!-- Bike: KTM Duke 250, Customer: Alex Chen, Date: Oct 20, 2023, Cash, $5,200.00 -->

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Card 5 - Bajaj Avenger 220 -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardSale5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="1dp"
                    app:cardUseCompatPadding="true"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_card_light">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp">

                        <!-- Similar structure with data for Bajaj Avenger 220 -->
                        <!-- Bike: Bajaj Avenger 220, Customer: Priya Patel, Date: Oct 18, 2023, EMI, $1,800.00 -->

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>