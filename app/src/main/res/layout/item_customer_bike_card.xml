<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Image Section with Badge -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="220dp">

            <ImageView
                android:id="@+id/ivBikeImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:padding="16dp"
                android:src="@drawable/ic_two_wheeler"
                android:background="#F8FAFC" />

            <!-- Category Badge (Top Left) -->
            <TextView
                android:id="@+id/tvBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:background="@drawable/bg_new_badge"
                android:text="Popular"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="visible" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Title and Brand -->
            <TextView
                android:id="@+id/tvBikeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Yamaha R15 V4"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#0F172A"
                android:ellipsize="end"
                android:maxLines="1" />

            <!-- Price with Label -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvBikePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹ 2,40,000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Onwards"
                    android:textSize="12sp"
                    android:textColor="#64748B"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>

            <!-- Action Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewDetails"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="12dp"
                android:text="Explore Bike"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:textSize="15sp"
                app:cornerRadius="12dp"
                android:backgroundTint="@color/primary_light"
                android:textColor="@color/primary_color"
                app:rippleColor="@color/primary_color"
                app:strokeWidth="1dp"
                app:strokeColor="@color/primary_color"
                style="@style/Widget.MaterialComponents.Button.TextButton"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
