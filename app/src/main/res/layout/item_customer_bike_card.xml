<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Bike Image (16:9 Aspect Ratio simulated with fixed height or ratio) -->
        <ImageView
            android:id="@+id/ivBikeImage"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="fitCenter"
            android:padding="12dp"
            android:src="@drawable/ic_two_wheeler"
            android:background="#F1F5F9" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title & Price -->
            <TextView
                android:id="@+id/tvBikeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SB-Raptor 500"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#111718"
                android:ellipsize="end"
                android:maxLines="1" />

            <TextView
                android:id="@+id/tvBikePrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â‚¹ 2,40,000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primary_color"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp" />

            <!-- Quick Stats Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <!-- Engine -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_speed"
                        app:tint="#618389" />

                    <TextView
                        android:id="@+id/tvEngineCC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="500cc"
                        android:textSize="14sp"
                        android:textColor="#618389"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

                <!-- Mileage -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_local_gas_station"
                        app:tint="#618389" />

                    <TextView
                        android:id="@+id/tvMileage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25 kmpl"
                        android:textSize="14sp"
                        android:textColor="#618389"
                        android:layout_marginTop="4dp" />
                </LinearLayout>

            </LinearLayout>

            <!-- View Details Button -->
            <TextView
                android:id="@+id/btnViewDetails"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginTop="16dp"
                android:text="View Details"
                android:gravity="center"
                android:textColor="@color/primary_color"
                android:textStyle="bold"
                android:textSize="14sp"
                android:background="@drawable/btn_primary_light_bg" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
