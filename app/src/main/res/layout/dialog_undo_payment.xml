<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background"
    android:paddingTop="12dp">

    <!-- Drag Handle -->
    <View
        android:layout_width="48dp"
        android:layout_height="3dp"
        android:background="@color/gray_300"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="12dp" />

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:paddingBottom="12dp"
        android:background="@color/card_background">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reverse Payment"
            android:textColor="@color/text_primary_light"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btnCloseDialog"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close"
            android:tint="@color/text_light_gray"
            android:contentDescription="Close"
            android:padding="4dp" />

    </LinearLayout>

    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="24dp"
        android:background="@color/card_background">

        <!-- Warning Message -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/warning_bg"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_warning"
                android:tint="@color/primary_color"
                android:contentDescription="Warning"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="You are about to reverse the payment. This will mark the installment as PENDING again."
                android:textColor="@color/text_primary_light"
                android:textSize="12sp"
                android:lineSpacingExtra="2dp" />

        </LinearLayout>

        <!-- EMI Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="4dp"
            android:layout_marginBottom="16dp">

            <!-- Installment -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Installment"
                    android:textColor="@color/text_light_gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvEmiTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="September EMI"
                    android:textColor="@color/text_primary_light"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- Amount -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Amount"
                    android:textColor="@color/text_light_gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvEmiAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$1,200.00"
                    android:textColor="@color/text_primary_light"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <!-- Reason -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reason (Optional)"
            android:textColor="@color/text_primary_light"
            android:textSize="12sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etReason"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:hint="Wrong entry, customer request..."
            android:gravity="top"
            android:inputType="textMultiLine"
            android:background="@drawable/edit_text_bg"
            android:padding="16dp"
            android:layout_marginBottom="24dp" />

        <!-- Confirm Button -->
        <Button
            android:id="@+id/btnConfirmUndo"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Confirm Reversal"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/primary_button" />

    </LinearLayout>

</LinearLayout>