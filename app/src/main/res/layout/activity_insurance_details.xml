<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fitsSystemWindows="true">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Top App Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp">

            <!-- Back Button -->
            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_back"
                android:tint="@color/primary_color"
                android:contentDescription="Back" />

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Insurance Details"
                android:textColor="#111418"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="sans-serif-medium"
                android:layout_marginEnd="16dp" />

            <!-- Empty space for alignment -->
            <View
                android:layout_width="48dp"
                android:layout_height="48dp" />

        </LinearLayout>
    </LinearLayout>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingTop="8dp"
        android:paddingBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <!-- Customer Context Card -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardCustomerContext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Profile Image -->
                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ivProfile"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/default_profile"
                            android:scaleType="centerCrop"
                            app:civ_border_width="2dp"
                            app:civ_border_color="#2013c8ec" />

                        <!-- Customer Details -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:id="@+id/tvCustomerName"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Rahul Sharma"
                                    android:textColor="#111418"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif" />

                                <!-- Customer Badge -->
                                <TextView
                                    android:id="@+id/tvCustomerBadge"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Customer"
                                    android:textColor="#13C8EC"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif"
                                    android:paddingHorizontal="8dp"
                                    android:paddingVertical="4dp"
                                    android:background="@drawable/rounded_corner_blue_light" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tvBikeModel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Royal Enfield Classic 350"
                                android:textColor="#888888"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif"
                                android:layout_marginTop="4dp" />

                            <!-- Registration Date -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical"
                                android:layout_marginTop="8dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_calendar"
                                    android:tint="#888888"
                                    android:contentDescription="Calendar" />

                                <TextView
                                    android:id="@+id/tvRegDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Reg Date: Oct 24, 2023"
                                    android:textColor="#888888"
                                    android:textSize="12sp"
                                    android:fontFamily="sans-serif"
                                    android:layout_marginStart="4dp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Summary / Validity Indicator -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardRenewalSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/gradient_primary_blue">

                    <!-- Top Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:id="@+id/tvRenewalLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Next Renewal In"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium"
                            android:alpha="0.9" />

                        <!-- Policy Type Badge -->
                        <TextView
                            android:id="@+id/tvPolicyType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Comprehensive"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            android:background="@drawable/rounded_corner_white_transparent" />

                    </LinearLayout>

                    <!-- Days Count -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvDaysCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="245"
                            android:textColor="@android:color/white"
                            android:textSize="36sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif" />

                        <TextView
                            android:id="@+id/tvDaysLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Days"
                            android:textColor="@android:color/white"
                            android:textSize="18sp"
                            android:fontFamily="sans-serif-medium"
                            android:alpha="0.8"
                            android:layout_marginStart="4dp" />

                    </LinearLayout>

                    <!-- Progress Bar -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="12dp">

                        <LinearLayout
                            android:id="@+id/progressBarBackground"
                            android:layout_width="match_parent"
                            android:layout_height="8dp"
                            android:background="@drawable/rounded_corner_white_transparent"
                            android:orientation="horizontal">

                            <View
                                android:id="@+id/progressBarFill"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="65"
                                android:background="@android:color/white" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="35" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvExpiryDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Policy expires on Oct 23, 2024"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif"
                            android:alpha="0.8"
                            android:layout_marginTop="8dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Section Header: Coverage Plans -->
            <TextView
                android:id="@+id/tvCoverageHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Coverage Plans"
                android:textColor="#111418"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginBottom="16dp" />

            <!-- Card 1: Comprehensive -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardComprehensive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Top Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <!-- Icon and Title -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <!-- Icon Container -->
                            <LinearLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/rounded_corner_blue_light"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_shield"
                                    android:tint="#13C8EC"
                                    android:contentDescription="Shield" />

                            </LinearLayout>

                            <!-- Title and Subtitle -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="12dp">

                                <TextView
                                    android:id="@+id/tvPlan1Title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Own Damage"
                                    android:textColor="#111418"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif" />

                                <TextView
                                    android:id="@+id/tvPlan1Subtitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1 Year Comprehensive"
                                    android:textColor="#888888"
                                    android:textSize="12sp"
                                    android:fontFamily="sans-serif"
                                    android:layout_marginTop="2dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Status Badge -->
                        <TextView
                            android:id="@+id/tvPlan1Status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Active"
                            android:textColor="#22C55E"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp"
                            android:background="@drawable/rounded_corner_green_light" />

                    </LinearLayout>

                    <!-- Dates Row -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#FFDBE4E6"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Start Date -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="START DATE"
                                android:textColor="#888888"
                                android:textSize="10sp"
                                android:textStyle="normal"
                                android:fontFamily="sans-serif-medium"
                                android:letterSpacing="0.05"
                                android:textAllCaps="true"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/tvPlan1StartDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Oct 24, 2023"
                                android:textColor="#111418"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif" />

                        </LinearLayout>

                        <!-- End Date -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="end">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="END DATE"
                                android:textColor="#888888"
                                android:textSize="10sp"
                                android:textStyle="normal"
                                android:fontFamily="sans-serif-medium"
                                android:letterSpacing="0.05"
                                android:textAllCaps="true"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/tvPlan1EndDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Oct 23, 2024"
                                android:textColor="#111418"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Bottom Row: Policy Number -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#FFDBE4E6"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvPlan1PolicyNumber"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Policy #987654321"
                            android:textColor="#888888"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif" />

                        <TextView
                            android:id="@+id/tvPlan1ViewDocument"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Document"
                            android:textColor="#13C8EC"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif"
                            android:paddingVertical="4dp"
                            android:paddingHorizontal="8dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Card 2: Third Party -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardThirdParty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Top Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <!-- Icon and Title -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <!-- Icon Container -->
                            <LinearLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/rounded_corner_purple_light"
                                android:gravity="center">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_security"
                                    android:tint="#8B5CF6"
                                    android:contentDescription="Security" />

                            </LinearLayout>

                            <!-- Title and Subtitle -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:layout_marginStart="12dp">

                                <TextView
                                    android:id="@+id/tvPlan2Title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Third Party Liability"
                                    android:textColor="#111418"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif" />

                                <TextView
                                    android:id="@+id/tvPlan2Subtitle"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="5 Year TP Cover"
                                    android:textColor="#888888"
                                    android:textSize="12sp"
                                    android:fontFamily="sans-serif"
                                    android:layout_marginTop="2dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Status Badge -->
                        <TextView
                            android:id="@+id/tvPlan2Status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Active"
                            android:textColor="#22C55E"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp"
                            android:background="@drawable/rounded_corner_green_light" />

                    </LinearLayout>

                    <!-- Dates Row -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#FFDBE4E6"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- Start Date -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="START DATE"
                                android:textColor="#888888"
                                android:textSize="10sp"
                                android:textStyle="normal"
                                android:fontFamily="sans-serif-medium"
                                android:letterSpacing="0.05"
                                android:textAllCaps="true"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/tvPlan2StartDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Oct 24, 2023"
                                android:textColor="#111418"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif" />

                        </LinearLayout>

                        <!-- End Date -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="end">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="END DATE"
                                android:textColor="#888888"
                                android:textSize="10sp"
                                android:textStyle="normal"
                                android:fontFamily="sans-serif-medium"
                                android:letterSpacing="0.05"
                                android:textAllCaps="true"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/tvPlan2EndDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Oct 23, 2028"
                                android:textColor="#111418"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Bottom Row: Policy Number -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#FFDBE4E6"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvPlan2PolicyNumber"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Policy #TP-88442109"
                            android:textColor="#888888"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif" />

                        <TextView
                            android:id="@+id/tvPlan2ViewDocument"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Document"
                            android:textColor="#13C8EC"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif"
                            android:paddingVertical="4dp"
                            android:paddingHorizontal="8dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Bottom Spacing for FAB -->
            <View
                android:layout_width="match_parent"
                android:layout_height="80dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Floating Action Button Area -->
    <LinearLayout
        android:id="@+id/fabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFDBE4E6" />

        <androidx.cardview.widget.CardView
            android:id="@+id/btnUpdatePolicy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardUseCompatPadding="true"
            android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/gradient_primary_blue"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingHorizontal="16dp">


        <ImageView
                    android:layout_width="24dp"
