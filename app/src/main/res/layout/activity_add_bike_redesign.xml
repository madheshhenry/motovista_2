<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".AddBikeActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_arrow_back"
                    app:tint="@color/text_dark" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="Add New Bike"
                    android:textColor="@color/text_dark"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/border_color" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="100dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- SECTION 1: BIKE MODEL DETAILS (Shared Specifications) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:text="Bike Model Details"
                            android:textColor="@color/text_dark"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Shared specifications for all variants"
                            android:textColor="@color/text_gray"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/background_light" />

                    <!-- Form Grid -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:baselineAligned="false"
                            android:orientation="horizontal">

                            <!-- BRAND -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/LabelText"
                                    android:text="Brand" />

                                <LinearLayout
                                    style="@style/InputContainer"
                                    android:orientation="horizontal">

                                    <ImageView
                                        style="@style/InputIcon"
                                        android:src="@drawable/ic_sell" />

                                    <EditText
                                        android:id="@+id/etBrand"
                                        style="@style/InputEditText"
                                        android:hint="e.g. Brand" />
                                </LinearLayout>
                            </LinearLayout>

                            <!-- MODEL NAME -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/LabelText"
                                    android:text="Model Name" />

                                <LinearLayout
                                    style="@style/InputContainer"
                                    android:orientation="horizontal">

                                    <ImageView
                                        style="@style/InputIcon"
                                        android:src="@drawable/ic_motorcycle" />

                                    <EditText
                                        android:id="@+id/etModelName"
                                        style="@style/InputEditText"
                                        android:hint="e.g. Model X" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- ROW 2 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:baselineAligned="false"
                            android:orientation="horizontal">

                            <!-- YEAR -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/LabelText"
                                    android:text="Model Year" />

                                <LinearLayout
                                    style="@style/InputContainer"
                                    android:orientation="horizontal">

                                    <ImageView
                                        style="@style/InputIcon"
                                        android:src="@drawable/ic_calendar" />

                                    <EditText
                                        android:id="@+id/etYear"
                                        style="@style/InputEditText"
                                        android:hint="2024"
                                        android:inputType="number" />
                                </LinearLayout>
                            </LinearLayout>

                            <!-- ENGINE -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/LabelText"
                                    android:text="Engine CC" />

                                <LinearLayout
                                    style="@style/InputContainer"
                                    android:orientation="horizontal">

                                    <ImageView
                                        style="@style/InputIcon"
                                        android:src="@drawable/ic_settings_input" />

                                    <EditText
                                        android:id="@+id/etEngineCC"
                                        style="@style/InputEditText"
                                        android:hint="150cc" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- ROW 3: Types -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:baselineAligned="false"
                            android:orientation="horizontal">

                            <!-- Fuel Type -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/LabelText"
                                    android:text="Fuel Type" />

                                <Spinner
                                    android:id="@+id/spFuelType"
                                    style="@style/InputSpinner" />
                            </LinearLayout>

                            <!-- Transmission -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/LabelText"
                                    android:text="Transmission" />

                                <Spinner
                                    android:id="@+id/spTransmission"
                                    style="@style/InputSpinner" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- ROW 4 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:baselineAligned="false"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/LabelText"
                                    android:text="Mileage" />

                                <EditText
                                    android:id="@+id/etMileage"
                                    style="@style/SimpleInput"
                                    android:hint="45 kmpl" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/LabelText"
                                    android:text="Fuel Tank" />

                                <EditText
                                    android:id="@+id/etFuelTank"
                                    style="@style/SimpleInput"
                                    android:hint="12 L" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- ROW 5 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:baselineAligned="false"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/LabelText"
                                    android:text="Kerb Weight" />

                                <EditText
                                    android:id="@+id/etKerbWeight"
                                    style="@style/SimpleInput"
                                    android:hint="140 kg" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/LabelText"
                                    android:text="Seat Height" />

                                <EditText
                                    android:id="@+id/etSeatHeight"
                                    style="@style/SimpleInput"
                                    android:hint="790 mm" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- ROW 6 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:baselineAligned="false"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/LabelText"
                                    android:text="Max Torque" />

                                <EditText
                                    android:id="@+id/etMaxTorque"
                                    style="@style/SimpleInput"
                                    android:hint="13 Nm" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    style="@style/LabelText"
                                    android:text="Max Power" />

                                <EditText
                                    android:id="@+id/etMaxPower"
                                    style="@style/SimpleInput"
                                    android:hint="15 hp" />
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Width Full: Ground Clearance -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="vertical">

                            <TextView
                                style="@style/LabelText"
                                android:text="Ground Clearance" />

                            <EditText
                                android:id="@+id/etGroundClearance"
                                style="@style/SimpleInput"
                                android:hint="165 mm" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- SECTION HEADER: VARIANT BUILDER -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-medium"
                    android:text="Variant Builder"
                    android:textColor="@color/text_dark"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </LinearLayout>



        <!-- Variant Builder Section (Dynamic) -->
        <TextView
            style="@style/LabelText"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            android:text="VARIANTS"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/variantsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddVariant"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:text="+ Add Another Variant"
            android:textAllCaps="false"
            app:strokeWidth="1dp" />

        <!-- INVOICE DETAILS HEADER -->
        <TextView
            style="@style/LabelText"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            android:text="INVOICE DETAILS"
            android:textSize="14sp" />

        <!-- Warranty & Services -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Warranty &amp; Services"
                    android:textColor="@color/text_dark"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/LabelText"
                            android:text="Warranty (Years)" />

                        <LinearLayout style="@style/InputContainer">
                            <ImageView
                                style="@style/InputIcon"
                                android:src="@drawable/ic_verified_user" />

                            <EditText
                                android:id="@+id/etWarranty"
                                style="@style/InputEditText"
                                android:hint="e.g. 5 Years"
                                android:inputType="text|number" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            style="@style/LabelText"
                            android:text="Free Services" />

                        <LinearLayout style="@style/InputContainer">
                            <ImageView
                                style="@style/InputIcon"
                                android:src="@drawable/ic_build_circle" />

                            <EditText
                                android:id="@+id/etFreeServices"
                                style="@style/InputEditText"
                                android:hint="e.g. 3"
                                android:inputType="number" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

            <!-- FITTINGS SECTION (Moved Here) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:id="@+id/llFittingsSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical">
                <!-- Mandatory Fittings Section (Checklist) -->
                <TextView
                    style="@style/LabelText"
                    android:layout_marginTop="16dp"
                    android:text="Mandatory Fittings" />
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_rounded_gray_50"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <CheckBox android:id="@+id/cbCrashBar" android:text="Crash Bar" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                    <CheckBox android:id="@+id/cbSareeGuard" android:text="Saree Guard" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                    <CheckBox android:id="@+id/cbMirror" android:text="Mirror Set" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                    <CheckBox android:id="@+id/cbNumberPlate" android:text="Front &amp; Rear Number Plate" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                    <CheckBox android:id="@+id/cbSideStand" android:text="Side Stand" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                    <CheckBox android:id="@+id/cbFootRest" android:text="Foot Rest" android:layout_width="match_parent" android:layout_height="wrap_content"/>
                </LinearLayout>

                <!-- Additional Fittings Section -->
                <TextView
                    style="@style/LabelText"
                    android:layout_marginTop="16dp"
                    android:text="Additional Fittings (Optional)" />
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_rounded_gray_50"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <!-- Side Box -->
                    <LinearLayout android:orientation="horizontal" android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="4dp">
                        <CheckBox android:id="@+id/cbSideBox" android:text="Side Box (Fibre)" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
                        <EditText android:id="@+id/etSideBoxPrice" android:hint="0" android:inputType="number" android:layout_width="80dp" android:layout_height="40dp" android:background="@drawable/bg_input_rounded" android:padding="8dp" android:textSize="12sp"/>
                    </LinearLayout>
                    
                    <!-- Petrol Tank Bag -->
                    <LinearLayout android:orientation="horizontal" android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="4dp">
                        <CheckBox android:id="@+id/cbPetrolTankBag" android:text="Petrol Tank Bag" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
                        <EditText android:id="@+id/etPetrolTankBagPrice" android:hint="0" android:inputType="number" android:layout_width="80dp" android:layout_height="40dp" android:background="@drawable/bg_input_rounded" android:padding="8dp" android:textSize="12sp"/>
                    </LinearLayout>
                    
                    <!-- Grip Cover -->
                    <LinearLayout android:orientation="horizontal" android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="4dp">
                        <CheckBox android:id="@+id/cbGripCover" android:text="Grip Cover" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
                        <EditText android:id="@+id/etGripCoverPrice" android:hint="0" android:inputType="number" android:layout_width="80dp" android:layout_height="40dp" android:background="@drawable/bg_input_rounded" android:padding="8dp" android:textSize="12sp"/>
                    </LinearLayout>
                    
                    <!-- Bag Hook -->
                    <LinearLayout android:orientation="horizontal" android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="4dp">
                        <CheckBox android:id="@+id/cbBagHook" android:text="Bag Hook" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
                        <EditText android:id="@+id/etBagHookPrice" android:hint="0" android:inputType="number" android:layout_width="80dp" android:layout_height="40dp" android:background="@drawable/bg_input_rounded" android:padding="8dp" android:textSize="12sp"/>
                    </LinearLayout>
                    
                    <!-- Helmet (Free) -->
                    <LinearLayout android:orientation="horizontal" android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="4dp">
                        <CheckBox android:id="@+id/cbHelmet" android:text="Helmet" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
                        <TextView android:text="FREE" android:layout_width="80dp" android:layout_height="wrap_content" android:background="@drawable/bg_input_rounded" android:backgroundTint="#E3F2FD" android:textColor="@color/primary_color" android:gravity="center" android:padding="8dp" android:textSize="10sp" android:textStyle="bold"/>
                    </LinearLayout>
                    
                    <!-- Body Cover -->
                    <LinearLayout android:orientation="horizontal" android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="4dp">
                        <CheckBox android:id="@+id/cbBodyCover" android:text="Body Cover (Full)" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
                        <EditText android:id="@+id/etBodyCoverPrice" android:hint="0" android:inputType="number" android:layout_width="80dp" android:layout_height="40dp" android:background="@drawable/bg_input_rounded" android:padding="8dp" android:textSize="12sp"/>
                    </LinearLayout>
                    
                    <!-- Indicator Buzzer -->
                    <LinearLayout android:orientation="horizontal" android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="4dp">
                        <CheckBox android:id="@+id/cbIndicatorBuzzer" android:text="Indicator Buzzer" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
                        <EditText android:id="@+id/etIndicatorBuzzerPrice" android:hint="0" android:inputType="number" android:layout_width="80dp" android:layout_height="40dp" android:background="@drawable/bg_input_rounded" android:padding="8dp" android:textSize="12sp"/>
                    </LinearLayout>
                    
                    <!-- Seat Cover -->
                    <LinearLayout android:orientation="horizontal" android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="4dp">
                        <CheckBox android:id="@+id/cbSeatCover" android:text="Seat Cover" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
                        <EditText android:id="@+id/etSeatCoverPrice" android:hint="0" android:inputType="number" android:layout_width="80dp" android:layout_height="40dp" android:background="@drawable/bg_input_rounded" android:padding="8dp" android:textSize="12sp"/>
                    </LinearLayout>
                    
                    <!-- Ladies Handle -->
                    <LinearLayout android:orientation="horizontal" android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="4dp">
                        <CheckBox android:id="@+id/cbLadiesHandle" android:text="Ladies Handle" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
                        <EditText android:id="@+id/etLadiesHandlePrice" android:hint="0" android:inputType="number" android:layout_width="80dp" android:layout_height="40dp" android:background="@drawable/bg_input_rounded" android:padding="8dp" android:textSize="12sp"/>
                    </LinearLayout>
                    
                    <!-- Engine Guard -->
                    <LinearLayout android:orientation="horizontal" android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="4dp">
                        <CheckBox android:id="@+id/cbEngineGuard" android:text="Engine Guard" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
                        <EditText android:id="@+id/etEngineGuardPrice" android:hint="0" android:inputType="number" android:layout_width="80dp" android:layout_height="40dp" android:background="@drawable/bg_input_rounded" android:padding="8dp" android:textSize="12sp"/>
                    </LinearLayout>
                    
                    <!-- Bumper SS -->
                    <LinearLayout android:orientation="horizontal" android:gravity="center_vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="4dp">
                        <CheckBox android:id="@+id/cbBumperSS" android:text="Bumper SS" android:layout_width="0dp" android:layout_weight="1" android:layout_height="wrap_content"/>
                        <EditText android:id="@+id/etBumperSSPrice" android:hint="0" android:inputType="number" android:layout_width="80dp" android:layout_height="40dp" android:background="@drawable/bg_input_rounded" android:padding="8dp" android:textSize="12sp"/>
                    </LinearLayout>

                </LinearLayout>

                <!-- Custom Additional Fittings Container -->
                <LinearLayout
                    android:id="@+id/llAdditionalFittings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAddAdditionalFitting"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawableStart="@drawable/ic_add"
                    android:text="Add Custom Fitting"
                    android:textColor="@color/primary_color" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- Invoice Legal Notes (Static) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Invoice Legal Notes"
                    android:textColor="@color/text_dark"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/LabelText"
                    android:text="Registration &amp; Address Proof" />
                
                <TextView
                    android:id="@+id/etRegProof"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_rounded_gray_50"
                    android:padding="12dp"
                    android:text="For registration purpose any one of the following is required in ORIGINAL &amp; XEROX for Address Proof: Aadhar Card, LIC Policy, Passport, GST, Voter ID, PAN Card"
                    android:textColor="@color/text_gray"
                    android:textSize="12sp"
                    android:layout_marginBottom="16dp" />

                <TextView
                    style="@style/LabelText"
                    android:text="Price Disclaimer" />

                <TextView
                    android:id="@+id/etPriceDisclaimer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_rounded_gray_50"
                    android:padding="12dp"
                    android:text="Price &amp; taxes ruling at the time of delivery will be applicable."
                    android:textColor="@color/text_gray"
                    android:textSize="12sp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- FOOTER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:elevation="16dp"
        android:orientation="horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/btnCancel"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:backgroundTint="@color/background_light"
            android:text="Cancel"
            android:textColor="@color/text_gray"
            android:textStyle="bold"
            app:cornerRadius="12dp" />

        <Space
            android:layout_width="16dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnSaveBike"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="2"
            android:text="Save Bike"
            android:textStyle="bold"
            app:backgroundTint="@color/primary_color"
            app:cornerRadius="12dp" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
