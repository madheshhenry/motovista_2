<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fitsSystemWindows="true">

    <!-- Main Scroll View -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/bottomOrderLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Sticky Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:elevation="4dp"
                android:paddingTop="@dimen/status_bar_height">

                <!-- Top Bar with Back Button and Title -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:paddingHorizontal="@dimen/padding_medium">

                    <!-- Back Button -->
                    <ImageView
                        android:id="@+id/btnBack"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow_back"
                        android:tint="@color/text_dark"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Back" />

                    <!-- Title -->
                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Bike Details"
                        android:textColor="@color/text_dark"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <!-- Empty view for alignment -->
                    <View
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true" />

                </RelativeLayout>
            </LinearLayout>

            <!-- Main Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">

                <!-- Bike Image Section -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="@color/gray_300">

                    <!-- Bike Image -->
                    <ImageView
                        android:id="@+id/ivBikeImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/bike_raptor"
                        android:contentDescription="Bike Image" />

                </RelativeLayout>

                <!-- Bike Title and Price -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_medium">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvBikeTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Yamaha YZF R15 V4"
                            android:textColor="@color/text_dark"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:id="@+id/tvBikePrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â‚¹2,450"
                            android:textColor="@color/primary"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif" />

                    </LinearLayout>

                    <!-- Variant and Model Year -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:id="@+id/tvBikeVariant"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Racing Blue Variant"
                            android:textColor="@color/text_gray"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif" />

                        <View
                            android:layout_width="4dp"
                            android:layout_height="4dp"
                            android:layout_marginHorizontal="8dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/text_gray"
                            android:shape="oval" />

                        <TextView
                            android:id="@+id/tvModelYear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2024 Model"
                            android:textColor="@color/text_gray"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Specification Icons Row - HIDDEN -->
                <LinearLayout
                    android:id="@+id/specsIconsRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="@dimen/padding_medium"
                    android:paddingHorizontal="@dimen/padding_large"
                    android:background="@color/white"
                    android:visibility="gone">

                    <!-- Engine -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_spec_icon"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/ivEngineIcon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_engineering"
                                android:tint="@color/primary"
                                android:contentDescription="Engine" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ENGINE"
                            android:textColor="@color/text_gray"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.1"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:id="@+id/tvEngineValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="155 cc"
                            android:textColor="@color/text_dark"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <!-- Mileage -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_spec_icon"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/ivMileageIcon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_speed"
                                android:tint="@color/primary"
                                android:contentDescription="Mileage" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MILEAGE"
                            android:textColor="@color/text_gray"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.1"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:id="@+id/tvMileageValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="45 km/l"
                            android:textColor="@color/text_dark"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <!-- Fuel Type -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_spec_icon"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/ivFuelIcon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_local_gas_station"
                                android:tint="@color/primary"
                                android:contentDescription="Fuel" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="FUEL"
                            android:textColor="@color/text_gray"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.1"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:id="@+id/tvFuelValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Petrol"
                            android:textColor="@color/text_dark"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <!-- Gearbox -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="@drawable/bg_spec_icon"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/ivGearIcon"
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_settings"
                                android:tint="@color/primary"
                                android:contentDescription="Gearbox" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GEARBOX"
                            android:textColor="@color/text_gray"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.1"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:id="@+id/tvGearValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6-Speed"
                            android:textColor="@color/text_dark"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Spacing -->
            <View
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/background_light" />

            <!-- Basic Bike Details Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/padding_medium"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Card Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_medium"
                        android:background="@color/background_light">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BASIC BIKE DETAILS"
                            android:textColor="@color/text_dark"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.1"
                            android:fontFamily="sans-serif" />

                    </LinearLayout>

                    <!-- Details List -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_medium"
                        android:divider="@drawable/divider_horizontal_dotted"
                        android:showDividers="middle"
                        android:dividerPadding="@dimen/padding_small">

                        <!-- Brand -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="@dimen/padding_small">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Brand"
                                android:textColor="@color/text_gray"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:id="@+id/tvBrandName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Yamaha"
                                android:textColor="@color/text_dark"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif" />

                        </LinearLayout>

                        <!-- Model Name -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="@dimen/padding_small">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Model Name"
                                android:textColor="@color/text_gray"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:id="@+id/tvModelName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="YZF R15 V4"
                                android:textColor="@color/text_dark"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif" />

                        </LinearLayout>

                        <!-- Variant -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="@dimen/padding_small">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Variant"
                                android:textColor="@color/text_gray"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:id="@+id/tvDetailVariant"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Racing Blue"
                                android:textColor="@color/text_dark"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif" />

                        </LinearLayout>

                        <!-- Model Year -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="@dimen/padding_small">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Model Year"
                                android:textColor="@color/text_gray"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:id="@+id/tvDetailYear"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2024"
                                android:textColor="@color/text_dark"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif" />

                        </LinearLayout>

                        <!-- Engine CC -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="@dimen/padding_small">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Engine CC"
                                android:textColor="@color/text_gray"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:id="@+id/tvDetailEngine"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="155 cc"
                                android:textColor="@color/text_dark"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif" />

                        </LinearLayout>

                        <!-- Fuel Type -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="@dimen/padding_small">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Fuel Type"
                                android:textColor="@color/text_gray"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:id="@+id/tvDetailFuel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Petrol"
                                android:textColor="@color/text_dark"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif" />

                        </LinearLayout>

                        <!-- Transmission -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="@dimen/padding_small">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Transmission"
                                android:textColor="@color/text_gray"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:id="@+id/tvTransmission"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6-Speed Manual"
                                android:textColor="@color/text_dark"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif" />

                        </LinearLayout>

                        <!-- Braking Type -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="@dimen/padding_small">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Braking Type"
                                android:textColor="@color/text_gray"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:id="@+id/tvBraking"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dual Channel ABS"
                                android:textColor="@color/text_dark"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Specifications Card - HIDDEN -->
            <androidx.cardview.widget.CardView
                android:id="@+id/specificationsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/padding_medium"
                android:layout_marginTop="@dimen/padding_medium"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white"
                app:cardUseCompatPadding="true"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Card Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_medium"
                        android:background="@color/background_light">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SPECIFICATIONS"
                            android:textColor="@color/text_dark"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:letterSpacing="0.1"
                            android:fontFamily="sans-serif" />

                    </LinearLayout>

                    <!-- Specifications List -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_medium"
                        android:divider="@drawable/divider_horizontal_dotted"
                        android:showDividers="middle"
                        android:dividerPadding="@dimen/padding_small">

                        <!-- Mileage -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="@dimen/padding_small">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Mileage"
                                android:textColor="@color/text_gray"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:id="@+id/tvSpecMileage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="45 km/l"
                                android:textColor="@color/text_dark"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif" />

                        </LinearLayout>

                        <!-- Fuel Tank Capacity -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="@dimen/padding_small">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Fuel Tank Capacity"
                                android:textColor="@color/text_gray"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:id="@+id/tvFuelCapacity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="11 Litres"
                                android:textColor="@color/text_dark"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif" />

                        </LinearLayout>

                        <!-- Kerb Weight -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="@dimen/padding_small">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Kerb Weight"
                                android:textColor="@color/text_gray"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:id="@+id/tvKerbWeight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="142 kg"
                                android:textColor="@color/text_dark"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif" />

                        </LinearLayout>

                        <!-- Seat Height -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="@dimen/padding_small">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Seat Height"
                                android:textColor="@color/text_gray"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:id="@+id/tvSeatHeight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="815 mm"
                                android:textColor="@color/text_dark"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif" />

                        </LinearLayout>

                        <!-- Ground Clearance -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingVertical="@dimen/padding_small">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Ground Clearance"
                                android:textColor="@color/text_gray"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:id="@+id/tvGroundClearance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="170 mm"
                                android:textColor="@color/text_dark"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Buttons Layout (Two Buttons) -->
