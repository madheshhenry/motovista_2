<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fitsSystemWindows="true">

    <!-- Header -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/padding_medium"
        android:paddingVertical="16dp"
        android:background="@color/white"
        android:elevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back"
            android:tint="@color/text_dark"
            android:contentDescription="Back"
            android:padding="8dp"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Downloaded Invoices"
            android:textColor="@color/text_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:gravity="center" />

        <!-- Spacer to balance the layout -->
        <View
            android:layout_width="40dp"
            android:layout_height="40dp" />

    </LinearLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@+id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_medium">

            <!-- Invoice 1 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="@dimen/padding_medium"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_medium">

                    <!-- Invoice Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvInvoiceNumber1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Invoice #INV-2024-001"
                                android:textColor="@color/text_dark"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/tvDownloadDate1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Downloaded on: 15 Jul 2024"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif" />

                        </LinearLayout>

                        <!-- Download Button -->
                        <ImageView
                            android:id="@+id/btnDownload1"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_download"
                            android:tint="@color/primary_color"
                            android:background="@drawable/circle_background_primary_light"
                            android:padding="8dp"
                            android:contentDescription="Download"
                            android:backgroundTint="@color/primary_light" />

                    </LinearLayout>

                    <!-- Separator -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/border_color"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp" />

                    <!-- Invoice Description -->
                    <TextView
                        android:id="@+id/tvInvoiceDescription1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Royal Enfield Classic 350"
                        android:textColor="@color/text_dark"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Invoice 2 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="@dimen/padding_medium"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_medium">

                    <!-- Invoice Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvInvoiceNumber2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Invoice #INV-2024-002"
                                android:textColor="@color/text_dark"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/tvDownloadDate2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Downloaded on: 02 Jun 2024"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif" />

                        </LinearLayout>

                        <!-- Download Button -->
                        <ImageView
                            android:id="@+id/btnDownload2"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_download"
                            android:tint="@color/primary_color"
                            android:background="@drawable/circle_background_primary_light"
                            android:padding="8dp"
                            android:contentDescription="Download"
                            android:backgroundTint="@color/primary_light" />

                    </LinearLayout>

                    <!-- Separator -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/border_color"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp" />

                    <!-- Invoice Description -->
                    <TextView
                        android:id="@+id/tvInvoiceDescription2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Premium Bike Service"
                        android:textColor="@color/text_dark"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Invoice 3 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="@dimen/padding_medium"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_medium">

                    <!-- Invoice Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvInvoiceNumber3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Invoice #INV-2023-118"
                                android:textColor="@color/text_dark"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/tvDownloadDate3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Downloaded on: 21 Dec 2023"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif" />

                        </LinearLayout>

                        <!-- Download Button -->
                        <ImageView
                            android:id="@+id/btnDownload3"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_download"
                            android:tint="@color/primary_color"
                            android:background="@drawable/circle_background_primary_light"
                            android:padding="8dp"
                            android:contentDescription="Download"
                            android:backgroundTint="@color/primary_light" />

                    </LinearLayout>

                    <!-- Separator -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/border_color"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp" />

                    <!-- Invoice Description -->
                    <TextView
                        android:id="@+id/tvInvoiceDescription3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Helmet &amp; Riding Jacket"
                        android:textColor="@color/text_dark"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Invoice 4 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="2dp"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="@dimen/padding_medium"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_medium">

                    <!-- Invoice Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvInvoiceNumber4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Invoice #INV-2023-085"
                                android:textColor="@color/text_dark"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/tvDownloadDate4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Downloaded on: 05 Sep 2023"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif" />

                        </LinearLayout>

                        <!-- Download Button -->
                        <ImageView
                            android:id="@+id/btnDownload4"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_download"
                            android:tint="@color/primary_color"
                            android:background="@drawable/circle_background_primary_light"
                            android:padding="8dp"
                            android:contentDescription="Download"
                            android:backgroundTint="@color/primary_light" />

                    </LinearLayout>

                    <!-- Separator -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/border_color"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="12dp" />

                    <!-- Invoice Description -->
                    <TextView
                        android:id="@+id/tvInvoiceDescription4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jawa Perak"
                        android:textColor="@color/text_dark"
                        android:textSize="13sp"
                        android:fontFamily="sans-serif-medium" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>