<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardSchedule"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_soft_grey_border">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Icon Container -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cvIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/green_50">
                <ImageView
                    android:id="@+id/ivStatusIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_check_circle"
                    app:tint="@color/green_500"/>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvDueDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Due on 05 May 2024"
                    android:textColor="@color/text_dark"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvInstallmentDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Installment #8 • ₹5,400"
                    android:textColor="@color/gray_500"
                    android:textSize="14sp"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>

            <!-- Status Badge -->
            <TextView
                android:id="@+id/tvStatusBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_badge_green"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:text="PAID"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textAllCaps="true" />

        </LinearLayout>

        <!-- Action Section (Pending/Overdue only) -->
        <LinearLayout
            android:id="@+id/layoutAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="16dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_200"
                android:layout_marginBottom="16dp"/>

            <Button
                android:id="@+id/btnPaidNotify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_primary_button"
                android:text="I HAVE PAID"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:drawableStart="@drawable/ic_notifications_active"
                android:drawablePadding="8dp"
                android:paddingVertical="12dp"
                app:backgroundTint="@color/primary_color"/>

            <TextView
                android:id="@+id/tvActionHint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Press after paying at showroom / UPI"
                android:textColor="@color/gray_500"
                android:textSize="11sp"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
