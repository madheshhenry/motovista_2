<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fitsSystemWindows="true">

    <!-- Main Scroll View -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Sticky Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:elevation="4dp"
                android:paddingTop="@dimen/status_bar_height">

                <!-- Top Bar with Back Button and Title -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:paddingHorizontal="@dimen/padding_medium">

                    <!-- Back Button -->
                    <ImageView
                        android:id="@+id/btnBack"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/ic_arrow_back"
                        android:tint="@color/text_dark"
                        android:padding="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Back" />

                    <!-- Title -->
                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Bike Catalog"
                        android:textColor="@color/text_dark"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium" />

                    <!-- Empty view for alignment -->
                    <View
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true" />

                </RelativeLayout>

                <!-- Filter Chips Horizontal Scroll -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/padding_medium"
                    android:paddingBottom="12dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/chipContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- All Chip -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/chipAll"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_marginEnd="8dp"
                            app:cardBackgroundColor="@color/primary_light"
                            app:cardCornerRadius="18dp"
                            app:cardElevation="0dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingHorizontal="16dp"
                                android:gravity="center"
                                android:text="All"
                                android:textColor="@color/primary"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif" />

                        </androidx.cardview.widget.CardView>

                        <!-- Petrol Bikes Chip -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/chipPetrol"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_marginEnd="8dp"
                            app:cardBackgroundColor="@color/background_light"
                            app:cardCornerRadius="18dp"
                            app:cardElevation="0dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingHorizontal="16dp"
                                android:gravity="center"
                                android:text="Petrol Bikes"
                                android:textColor="@color/text_gray"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif" />

                        </androidx.cardview.widget.CardView>

                        <!-- E-bikes Chip -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/chipEBikes"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            android:layout_marginEnd="8dp"
                            app:cardBackgroundColor="@color/background_light"
                            app:cardCornerRadius="18dp"
                            app:cardElevation="0dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingHorizontal="16dp"
                                android:gravity="center"
                                android:text="E-bikes"
                                android:textColor="@color/text_gray"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif" />

                        </androidx.cardview.widget.CardView>

                        <!-- Second-hand Chip -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/chipSecondHand"
                            android:layout_width="wrap_content"
                            android:layout_height="36dp"
                            app:cardBackgroundColor="@color/background_light"
                            app:cardCornerRadius="18dp"
                            app:cardElevation="0dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:paddingHorizontal="16dp"
                                android:gravity="center"
                                android:text="Second-hand"
                                android:textColor="@color/text_gray"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>

            <!-- Bike List -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_medium"
                android:paddingTop="16dp">

                <!-- SB-Raptor 500 Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardRaptor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Bike Image -->
                        <!-- New code -->
                        <ImageView
                            android:id="@+id/ivRaptor"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bike_raptor"
                            android:background="@color/gray_300"
                            android:contentDescription="SB-Raptor 500" />

                        <!-- Details Section -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <!-- Title and Price -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginBottom="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="SB-Raptor 500"
                                    android:textColor="@color/text_dark"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif-medium" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="₹ 2,40,000"
                                    android:textColor="@color/primary"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                            <!-- Specifications Grid -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="16dp">

                                <!-- Engine Capacity -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:src="@drawable/ic_speed"
                                        android:tint="@color/text_secondary"
                                        android:contentDescription="Engine" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="500cc"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="12sp"
                                        android:fontFamily="sans-serif"
                                        android:layout_marginTop="4dp" />

                                </LinearLayout>

                                <!-- Mileage -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:src="@drawable/ic_local_gas_station"
                                        android:tint="@color/text_secondary"
                                        android:contentDescription="Mileage" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="25 kmpl"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="12sp"
                                        android:fontFamily="sans-serif"
                                        android:layout_marginTop="4dp" />

                                </LinearLayout>

                                <!-- Type -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:src="@drawable/ic_two_wheeler"
                                        android:tint="@color/text_secondary"
                                        android:contentDescription="Type" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Sports"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="12sp"
                                        android:fontFamily="sans-serif"
                                        android:layout_marginTop="4dp" />

                                </LinearLayout>

                            </LinearLayout>

                            <!-- View Details Button -->
                            <Button
                                android:id="@+id/btnViewDetailsRaptor"
                                android:layout_width="match_parent"
                                android:layout_height="44dp"
                                android:background="@drawable/primary_outline_button"
                                android:text="View Details"
                                android:textColor="@color/primary"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif" />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- SB-Cruiser King Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardCruiser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Bike Image -->
                        <ImageView
                            android:id="@+id/ivCruiser"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bike_cruiser_king"
                            android:background="@color/gray_300"
                            android:contentDescription="SB-Cruiser King" />

                        <!-- Details Section -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <!-- Title and Price -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginBottom="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="SB-Cruiser King"
                                    android:textColor="@color/text_dark"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif-medium" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="₹ 3,10,000"
                                    android:textColor="@color/primary"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                            <!-- Specifications Grid -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="16dp">

                                <!-- Engine Capacity -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:src="@drawable/ic_speed"
                                        android:tint="@color/text_secondary"
                                        android:contentDescription="Engine" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="750cc"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="12sp"
                                        android:fontFamily="sans-serif"
                                        android:layout_marginTop="4dp" />

                                </LinearLayout>

                                <!-- Mileage -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:src="@drawable/ic_local_gas_station"
                                        android:tint="@color/text_secondary"
                                        android:contentDescription="Mileage" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="18 kmpl"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="12sp"
                                        android:fontFamily="sans-serif"
                                        android:layout_marginTop="4dp" />

                                </LinearLayout>

                                <!-- Type -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:src="@drawable/ic_two_wheeler"
                                        android:tint="@color/text_secondary"
                                        android:contentDescription="Type" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Cruiser"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="12sp"
                                        android:fontFamily="sans-serif"
                                        android:layout_marginTop="4dp" />

                                </LinearLayout>

                            </LinearLayout>

                            <!-- View Details Button -->
                            <Button
                                android:id="@+id/btnViewDetailsCruiser"
                                android:layout_width="match_parent"
                                android:layout_height="44dp"
                                android:background="@drawable/primary_outline_button"
                                android:text="View Details"
                                android:textColor="@color/primary"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif" />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- SB-TrailBlazer Card -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardTrailBlazer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Bike Image -->
                        <ImageView
                            android:id="@+id/ivTrailBlazer"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:scaleType="centerCrop"
                            android:background="@color/gray_300"
                            android:src="@drawable/bike_trailblazer"
                            android:contentDescription="SB-TrailBlazer" />

                        <!-- Details Section -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <!-- Title and Price -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginBottom="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="SB-TrailBlazer"
                                    android:textColor="@color/text_dark"
                                    android:textSize="18sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif-medium" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="₹ 3,50,000"
                                    android:textColor="@color/primary"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif"
                                    android:layout_marginTop="4dp" />

                            </LinearLayout>

                            <!-- Specifications Grid -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="16dp">

                                <!-- Engine Capacity -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:src="@drawable/ic_speed"
                                        android:tint="@color/text_secondary"
                                        android:contentDescription="Engine" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="450cc"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="12sp"
                                        android:fontFamily="sans-serif"
                                        android:layout_marginTop="4dp" />

                                </LinearLayout>

                                <!-- Mileage -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:src="@drawable/ic_local_gas_station"
                                        android:tint="@color/text_secondary"
                                        android:contentDescription="Mileage" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="30 kmpl"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="12sp"
                                        android:fontFamily="sans-serif"
                                        android:layout_marginTop="4dp" />

                                </LinearLayout>

                                <!-- Type -->
                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="center">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:src="@drawable/ic_two_wheeler"
                                        android:tint="@color/text_secondary"
                                        android:contentDescription="Type" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Adventure"
                                        android:textColor="@color/text_secondary"
                                        android:textSize="12sp"
                                        android:fontFamily="sans-serif"
                                        android:layout_marginTop="4dp" />

                                </LinearLayout>

                            </LinearLayout>

                            <!-- View Details Button -->
                            <Button
                                android:id="@+id/btnViewDetailsTrailBlazer"
                                android:layout_width="match_parent"
                                android:layout_height="44dp"
                                android:background="@drawable/primary_outline_button"
                                android:text="View Details"
                                android:textColor="@color/primary"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif" />

                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Bottom Padding -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="80dp" />

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:elevation="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Home Tab -->
        <LinearLayout
            android:id="@+id/tabHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/ivHome"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home_filled"
                android:tint="@color/gray_400"
                android:contentDescription="Home" />

            <TextView
                android:id="@+id/tvHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="@color/gray_400"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Bikes Tab -->
        <LinearLayout
            android:id="@+id/tabBikes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/ivBikes"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_two_wheeler"
                android:tint="@color/primary_color"
                android:contentDescription="Bikes" />

            <TextView
                android:id="@+id/tvBikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bikes"
                android:textColor="@color/primary_color"
                android:textSize="12sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- EMI Calculator Tab -->
        <LinearLayout
            android:id="@+id/tabEmiCalculator"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/ivEmiCalculator"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_calculate"
                android:tint="@color/gray_400"
                android:contentDescription="EMI Calculator" />

            <TextView
                android:id="@+id/tvEmiCalculator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EMI Calculator"
                android:textColor="@color/gray_400"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Orders Tab -->
        <LinearLayout
            android:id="@+id/tabOrders"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/ivOrders"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_receipt_long"
                android:tint="@color/gray_400"
                android:contentDescription="Orders" />

            <TextView
                android:id="@+id/tvOrders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Orders"
                android:textColor="@color/gray_400"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Profile Tab -->
        <LinearLayout
            android:id="@+id/tabProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/ivProfile"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_person"
                android:tint="@color/gray_400"
                android:contentDescription="Profile" />

            <TextView
                android:id="@+id/tvProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="@color/gray_400"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>