<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fitsSystemWindows="true">

    <!-- Header Layout (Sticky) -->
    <LinearLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Top Bar -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingTop="12dp"
            android:paddingBottom="8dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_arrow_back"
                app:tint="@color/text_dark"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvGreeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Discover Your"
                    android:textColor="#64748B"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-medium"
                    android:textAllCaps="true"
                    android:letterSpacing="0.1" />

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perfect Ride"
                    android:textColor="@color/text_dark"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </RelativeLayout>

        <!-- Search Bar UI -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/rounded_search_bg"
                android:backgroundTint="#F1F5F9"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_search"
                    app:tint="#94A3B8" />

                <EditText
                    android:id="@+id/etSearch"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:hint="Search your dream bike..."
                    android:background="@android:color/transparent"
                    android:textColor="#0F172A"
                    android:textColorHint="#94A3B8"
                    android:textSize="14sp"
                    android:imeOptions="actionSearch"
                    android:inputType="text"
                    android:maxLines="1" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_tune"
                    app:tint="@color/primary_color" />
            </LinearLayout>
        </FrameLayout>

        <!-- Filter Chips -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="16dp"
            android:paddingBottom="16dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/chipContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- All Chip -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/chipAll"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_marginEnd="8dp"
                    app:cardBackgroundColor="@color/primary_color"
                    app:cardCornerRadius="19dp"
                    app:cardElevation="0dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="20dp"
                        android:gravity="center"
                        android:text="All Bikes"
                        android:textColor="@color/white"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>

                <!-- Petrol Chip -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/chipPetrol"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_marginEnd="8dp"
                    app:cardBackgroundColor="#F1F5F9"
                    app:cardCornerRadius="19dp"
                    app:cardElevation="0dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="20dp"
                        android:gravity="center"
                        android:text="Petrol"
                        android:textColor="#64748B"
                        android:textSize="13sp" />
                </androidx.cardview.widget.CardView>

                <!-- E-bikes Chip -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/chipEBikes"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    android:layout_marginEnd="8dp"
                    app:cardBackgroundColor="#F1F5F9"
                    app:cardCornerRadius="19dp"
                    app:cardElevation="0dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="20dp"
                        android:gravity="center"
                        android:text="Electric"
                        android:textColor="#64748B"
                        android:textSize="13sp" />
                </androidx.cardview.widget.CardView>

                <!-- Second-hand Chip -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/chipSecondHand"
                    android:layout_width="wrap_content"
                    android:layout_height="38dp"
                    app:cardBackgroundColor="#F1F5F9"
                    app:cardCornerRadius="19dp"
                    app:cardElevation="0dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingHorizontal="20dp"
                        android:gravity="center"
                        android:text="Pre-owned"
                        android:textColor="#64748B"
                        android:textSize="13sp" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <!-- RecyclerView for Bikes -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBikes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="12dp"
        android:paddingBottom="96dp"
        android:layoutAnimation="@anim/layout_animation_fall_down"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Bottom Navigation -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:elevation="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Home Tab -->
        <LinearLayout
            android:id="@+id/tabHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/ivHome"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home_filled"
                app:tint="@color/gray_400"
                android:contentDescription="Home" />

            <TextView
                android:id="@+id/tvHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textColor="@color/gray_400"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Bikes Tab -->
        <LinearLayout
            android:id="@+id/tabBikes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/ivBikes"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_two_wheeler"
                app:tint="@color/primary_color"
                android:contentDescription="Bikes" />

            <TextView
                android:id="@+id/tvBikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bikes"
                android:textColor="@color/primary_color"
                android:textSize="12sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- EMI Calculator Tab -->
        <LinearLayout
            android:id="@+id/tabEmiCalculator"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/ivEmiCalculator"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_calculate"
                app:tint="@color/gray_400"
                android:contentDescription="EMI" />

            <TextView
                android:id="@+id/tvEmiCalculator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EMI"
                android:textColor="@color/gray_400"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Orders Tab -->
        <LinearLayout
            android:id="@+id/tabOrders"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/ivOrders"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_shopping_bag"
                app:tint="@color/gray_400"
                android:contentDescription="Orders" />

            <TextView
                android:id="@+id/tvOrders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Orders"
                android:textColor="@color/gray_400"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="4dp" />

        </LinearLayout>

        <!-- Profile Tab -->
        <LinearLayout
            android:id="@+id/tabProfile"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:id="@+id/ivProfile"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_person"
                app:tint="@color/gray_400"
                android:contentDescription="Profile" />

            <TextView
                android:id="@+id/tvProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textColor="@color/gray_400"
                android:textSize="12sp"
                android:fontFamily="sans-serif"
                android:layout_marginTop="4dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>