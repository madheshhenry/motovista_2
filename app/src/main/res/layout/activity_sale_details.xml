<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fitsSystemWindows="true">

    <!-- Top Navigation Bar -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/padding_medium"
        android:paddingVertical="16dp"
        android:paddingTop="48dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_arrow_back"
            android:tint="@color/text_primary_light"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="8dp"
            android:contentDescription="Back" />

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Sale Details"
            android:textColor="@color/text_primary_light"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:fontFamily="sans-serif-medium" />

        <!-- Spacer for symmetry -->
        <View
            android:layout_width="40dp"
            android:layout_height="40dp" />

    </LinearLayout>

    <!-- Main Scroll View -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingHorizontal="@dimen/padding_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <!-- Section 1: Bike Details Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="12dp"
                android:background="@drawable/rounded_card_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Bike Image -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@color/gray_200">

                        <ImageView
                            android:id="@+id/ivBike"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_bike_placeholder"
                            android:contentDescription="Royal Enfield Classic 350" />

                        <!-- Gradient Overlay -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:orientation="vertical"
                            android:background="@drawable/gradient_top_to_bottom"
                            android:padding="16dp">

                            <TextView
                                android:id="@+id/tvBikeModel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Royal Enfield Classic 350"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:id="@+id/tvBikeColor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dark Stealth Black"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </RelativeLayout>

                    <!-- Technical Specs -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvEngineLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ENGINE NUMBER"
                                android:textColor="@color/text_secondary_light"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif"
                                android:letterSpacing="0.05"
                                android:textAllCaps="true" />

                            <TextView
                                android:id="@+id/tvEngineNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="RE350-9821X"
                                android:textColor="@color/text_primary_light"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="monospace"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="end">

                            <TextView
                                android:id="@+id/tvChassisLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CHASSIS NUMBER"
                                android:textColor="@color/text_secondary_light"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif"
                                android:letterSpacing="0.05"
                                android:textAllCaps="true" />

                            <TextView
                                android:id="@+id/tvChassisNumber"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ME3-7728-Y"
                                android:textColor="@color/text_primary_light"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="monospace"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Section 2: Customer Details Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="12dp"
                android:background="@drawable/rounded_card_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Section Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="12dp"
                        android:background="@drawable/divider_bottom">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_person"
                            android:tint="@color/primary"
                            android:contentDescription="Person" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Customer Details"
                            android:textColor="@color/primary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:textAllCaps="true"
                            android:letterSpacing="0.05"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                    <!-- Customer Info -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:divider="@drawable/divider_horizontal"
                        android:showDividers="middle"
                        android:dividerPadding="12dp">

                        <!-- Full Name -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <LinearLayout
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:gravity="center"
                                android:background="@drawable/circle_primary_light"
                                android:layout_marginEnd="12dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_badge"
                                    android:tint="@color/primary"
                                    android:contentDescription="Badge" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Full Name"
                                    android:textColor="@color/text_secondary_light"
                                    android:textSize="12sp"
                                    android:fontFamily="sans-serif" />

                                <TextView
                                    android:id="@+id/tvCustomerName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Rahul Sharma"
                                    android:textColor="@color/text_primary_light"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif-medium"
                                    android:layout_marginTop="2dp" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Phone Number -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <LinearLayout
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:gravity="center"
                                android:background="@drawable/circle_primary_light"
                                android:layout_marginEnd="12dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_call"
                                    android:tint="@color/primary"
                                    android:contentDescription="Call" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Phone Number"
                                    android:textColor="@color/text_secondary_light"
                                    android:textSize="12sp"
                                    android:fontFamily="sans-serif" />

                                <TextView
                                    android:id="@+id/tvCustomerPhone"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="+91 98765 43210"
                                    android:textColor="@color/text_primary_light"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif-medium"
                                    android:layout_marginTop="2dp" />

                            </LinearLayout>

                            <!-- Call Button -->
                            <ImageView
                                android:id="@+id/btnCallCustomer"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:src="@drawable/ic_phone"
                                android:tint="@color/icon_green"
                                android:background="@drawable/circle_green_light"
                                android:padding="6dp"
                                android:contentDescription="Call Customer" />

                        </LinearLayout>

                        <!-- Address -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <LinearLayout
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:gravity="center"
                                android:background="@drawable/circle_primary_light"
                                android:layout_marginEnd="12dp">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/ic_location"
                                    android:tint="@color/primary"
                                    android:contentDescription="Location" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Address"
                                    android:textColor="@color/text_secondary_light"
                                    android:textSize="12sp"
                                    android:fontFamily="sans-serif" />

                                <TextView
                                    android:id="@+id/tvCustomerAddress"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="123, MG Road, District A, Bangalore, Karnataka - 560001"
                                    android:textColor="@color/text_primary_light"
                                    android:textSize="14sp"
                                    android:fontFamily="sans-serif"
                                    android:lineSpacingExtra="2dp"
                                    android:layout_marginTop="2dp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Section 3: Sale & Payment Details Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:cardUseCompatPadding="true"
                android:layout_marginBottom="12dp"
                android:background="@drawable/rounded_card_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Section Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="12px"
                        android:background="@drawable/divider_bottom">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_payments"
                            android:tint="@color/primary"
                            android:contentDescription="Payments" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Sale &amp; Payment"
                            android:textColor="@color/primary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:textAllCaps="true"
                            android:letterSpacing="0.05"
                            android:layout_marginStart="8dp" />

                        <!-- EMI Badge -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:background="@drawable/rounded_orange_badge"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="4dp">

                            <View
                                android:layout_width="4dp"
                                android:layout_height="4dp"
                                android:background="@color/icon_orange"
                                android:layout_marginEnd="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Active EMI"
                                android:textColor="@color/icon_orange"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Payment Details Grid -->
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:rowCount="3"
                        android:padding="16dp"
                        android:alignmentMode="alignBounds"
                        android:columnOrderPreserved="false"
                        android:useDefaultMargins="true">

                        <!-- Sale Date -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sale Date"
                                android:textColor="@color/text_secondary_light"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:id="@+id/tvSaleDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="24 Oct, 2023"
                                android:textColor="@color/text_primary_light"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Payment Type -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Payment Type"
                                android:textColor="@color/text_secondary_light"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:id="@+id/tvPaymentType"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="EMI Finance"
                                android:textColor="@color/text_primary_light"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Down Payment -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:layout_marginTop="16dp"
                            android:layout_marginEnd="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Down Payment"
                                android:textColor="@color/text_secondary_light"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:id="@+id/tvDownPayment"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹50,000"
                                android:textColor="@color/text_primary_light"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Total Value -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:orientation="vertical"
                            android:layout_marginTop="16dp"
                            android:layout_marginStart="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Value"
                                android:textColor="@color/text_secondary_light"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:id="@+id/tvTotalValue"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹2,10,000"
                                android:textColor="@color/text_primary_light"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </GridLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Section 4: Documents Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:cardUseCompatPadding="true"
                android:background="@drawable/rounded_card_light">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Section Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="12dp"
                        android:background="@drawable/divider_bottom">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_folder"
                            android:tint="@color/primary"
                            android:contentDescription="Folder" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Documents"
                            android:textColor="@color/primary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:textAllCaps="true"
                            android:letterSpacing="0.05"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                    <!-- Documents List -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Document 1: Tax Invoice -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="16dp"
                            android:background="?selectableItemBackground">

                            <LinearLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:gravity="center"
                                android:background="@drawable/rounded_gray_bg"
                                android:layout_marginEnd="12dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_receipt"
                                    android:tint="@color/gray_500"
                                    android:contentDescription="Receipt" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tax Invoice"
                                    android:textColor="@color/text_primary_light"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif-medium" />

                                <TextView
                                    android:id="@+id/tvInvoiceNumber"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="INV-2023-001"
                                    android:textColor="@color/text_secondary_light"
                                    android:textSize="12sp"
                                    android:fontFamily="sans-serif"
                                    android:layout_marginTop="2dp" />

                            </LinearLayout>

                            <!-- Action Buttons -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <!-- View Button -->
                                <ImageView
                                    android:id="@+id/btnViewInvoice"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_visibility"
                                    android:tint="@color/gray_500"
                                    android:background="@drawable/circle_gray_light"
                                    android:padding="6dp"
                                    android:layout_marginEnd="8dp"
                                    android:contentDescription="View Invoice" />

                                <!-- Download Button -->
                                <ImageView
                                    android:id="@+id/btnDownloadInvoice"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_download"
                                    android:tint="@color/gray_500"
                                    android:background="@drawable/circle_gray_light"
                                    android:padding="6dp"
                                    android:contentDescription="Download Invoice" />

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Divider -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/gray_200"
                            android:layout_marginStart="68dp"
                            android:layout_marginEnd="16dp" />

                        <!-- Document 2: Delivery Note -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="16dp"
                            android:background="?selectableItemBackground">

                            <LinearLayout
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:gravity="center"
                                android:background="@drawable/rounded_gray_bg"
                                android:layout_marginEnd="12dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_shipping"
                                    android:tint="@color/gray_500"
                                    android:contentDescription="Shipping" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Delivery Note"
                                    android:textColor="@color/text_primary_light"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif-medium" />

                                <TextView
                                    android:id="@+id/tvDeliveryNote"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="DEL-099-BLR"
                                    android:textColor="@color/text_secondary_light"
                                    android:textSize="12sp"
                                    android:fontFamily="sans-serif"
                                    android:layout_marginTop="2dp" />

                            </LinearLayout>

                            <!-- Action Buttons -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <!-- View Button -->
                                <ImageView
                                    android:id="@+id/btnViewDeliveryNote"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_visibility"
                                    android:tint="@color/gray_500"
                                    android:background="@drawable/circle_gray_light"
                                    android:padding="6dp"
                                    android:layout_marginEnd="8dp"
                                    android:contentDescription="View Delivery Note" />

                                <!-- Download Button -->
                                <ImageView
                                    android:id="@+id/btnDownloadDeliveryNote"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_download"
                                    android:tint="@color/gray_500"
                                    android:background="@drawable/circle_gray_light"
                                    android:padding="6dp"
                                    android:contentDescription="Download Delivery Note" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Bottom Spacer -->
            <View
                android:layout_width="match_parent"
                android:layout_height="24dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>