<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_medium">

    <!-- Bike Info Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_medium"
        android:background="@color/card_background"
        android:padding="@dimen/padding_medium"
        android:orientation="vertical"
        android:elevation="2dp">

        <!-- Brand and Model Row -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Brand and Model -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentStart="true">

                <TextView
                    android:id="@+id/tvBrand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Royal Enfield"
                    android:textColor="@color/text_light_gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvModel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Classic 350"
                    android:textColor="@color/text_dark"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- NEW BIKE Badge -->
            <TextView
                android:id="@+id/tvBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="NEW BIKE"
                android:textColor="@color/icon_blue"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/bg_new_badge"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp" />

        </RelativeLayout>

    </LinearLayout>

    <!-- Price Breakdown Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_medium"
        android:background="@color/card_background"
        android:padding="@dimen/padding_medium"
        android:orientation="vertical"
        android:elevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price Breakdown"
            android:textColor="@color/text_dark"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/padding_medium" />

        <!-- Ex-Showroom Price -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ex-Showroom Price"
                android:textColor="@color/text_light_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvExShowroomPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹1,90,000"
                android:textColor="@color/text_dark"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- RTO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="RTO"
                android:textColor="@color/text_light_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvRTO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹12,000"
                android:textColor="@color/text_dark"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Insurance -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/padding_medium">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Insurance"
                android:textColor="@color/text_light_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvInsurance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹8,000"
                android:textColor="@color/text_dark"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_300"
            android:layout_marginBottom="@dimen/padding_medium" />

        <!-- On-Road Price -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="On-Road Price"
                android:textColor="@color/text_dark"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvOnRoadPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹2,10,000"
                android:textColor="@color/primary_color"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <!-- Key Specifications Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card_background"
        android:padding="@dimen/padding_medium"
        android:orientation="vertical"
        android:elevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Key Specifications"
            android:textColor="@color/text_dark"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/padding_medium" />

        <!-- Specifications Grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="5"
            android:alignmentMode="alignBounds"
            android:columnOrderPreserved="false"
            android:useDefaultMargins="true">

            <!-- Row 1: Engine -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Engine:"
                android:textColor="@color/text_light_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvEngine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="349 cc"
                android:textColor="@color/text_dark"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Row 2: Mileage -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Mileage:"
                android:textColor="@color/text_light_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvMileage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="37 kmpl"
                android:textColor="@color/text_dark"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Row 3: Type -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Type:"
                android:textColor="@color/text_light_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Cruiser"
                android:textColor="@color/text_dark"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Row 4: Top Speed -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Top Speed:"
                android:textColor="@color/text_light_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvTopSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="114 kmph"
                android:textColor="@color/text_dark"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Row 5: Braking -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Braking:"
                android:textColor="@color/text_light_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvBraking"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Dual Channel ABS"
                android:textColor="@color/text_dark"
                android:textSize="14sp"
                android:textStyle="bold" />

        </GridLayout>

    </LinearLayout>

</LinearLayout>