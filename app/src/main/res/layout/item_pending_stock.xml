<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/bg_card_ios"
    android:padding="12dp"
    android:layout_marginBottom="8dp"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvPendBrandModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yamaha R15 V4"
            android:textStyle="bold"
            android:textColor="@color/text_dark"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tvPendVariantColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="V2 â€¢ Racing Blue"
            android:textColor="@color/gray_500"
            android:textSize="12sp"
            android:layout_marginTop="2dp"/>
            
        <TextView
            android:id="@+id/tvPendChassisCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 Units"
            android:textColor="@color/primary_blue"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_marginTop="4dp"/>
    </LinearLayout>

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_edit"
        android:alpha="0.6"/>

</LinearLayout>
