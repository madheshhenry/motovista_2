<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light"
    android:fitsSystemWindows="true">

    <!-- Top App Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="@dimen/padding_medium"
        android:paddingBottom="8dp"
        android:gravity="center_vertical"
        android:elevation="4dp">

        <!-- Back Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_arrow_back"
                android:tint="@color/text_dark"
                android:contentDescription="Back" />

        </androidx.cardview.widget.CardView>

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bill / Cash Receipt"
            android:textColor="@color/text_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:layout_marginEnd="48dp" />

    </LinearLayout>

    <!-- Main Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_medium">

            <!-- Receipt Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Top Color Stripe -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:background="@color/primary" />

                    <!-- Receipt Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_large"
                        android:paddingBottom="@dimen/padding_medium"
                        android:gravity="center_horizontal"
                        android:background="?attr/selectableItemBackground">

                        <!-- Icon Container -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            app:cardCornerRadius="30dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="@color/primary_light"
                            android:layout_marginBottom="12dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_two_wheeler"
                                android:tint="@color/primary"
                                android:contentDescription="Bike" />

                        </androidx.cardview.widget.CardView>

                        <!-- Shop Name -->
                        <TextView
                            android:id="@+id/tvShopName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Santhosh Bikes"
                            android:textColor="@color/text_dark"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:gravity="center"
                            android:layout_marginBottom="4dp"
                            android:textAllCaps="true" />

                        <!-- Shop Address -->
                        <TextView
                            android:id="@+id/tvShopAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="123, Main Street, Chennai, TN"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:layout_marginBottom="2dp" />

                        <!-- Shop Phone -->
                        <TextView
                            android:id="@+id/tvShopPhone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+91 98765 43210"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:layout_marginBottom="16dp" />

                        <!-- Receipt Number and Date -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@color/gray_200"
                            android:padding="@dimen/padding_medium"
                            android:paddingVertical="12dp"
                            app:cardCornerRadius="8dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Receipt No"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="10sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif"
                                    android:textAllCaps="true"
                                    android:letterSpacing="0.1"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:id="@+id/tvReceiptNumber"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="#REC-23-899"
                                    android:textColor="@color/text_dark"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif-medium" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="end">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Date"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="10sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif"
                                    android:textAllCaps="true"
                                    android:letterSpacing="0.1"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:id="@+id/tvReceiptDate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="24 Oct 2023"
                                    android:textColor="@color/text_dark"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif-medium" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray_300"
                        android:layout_marginHorizontal="@dimen/padding_large" />

                    <!-- Customer Details -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_large"
                        android:paddingBottom="@dimen/padding_medium">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Received with thanks from"
                            android:textColor="@color/text_secondary"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif"
                            android:layout_marginBottom="8dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_person"
                                android:tint="@color/gray_500"
                                android:layout_marginEnd="8dp"
                                android:contentDescription="Person" />

                            <TextView
                                android:id="@+id/tvCustomerName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mr. Arun Kumar"
                                android:textColor="@color/text_dark"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Amount Highlight -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/primary_light"
                        android:padding="@dimen/padding_large"
                        android:paddingVertical="20dp"
                        android:gravity="center_horizontal"
                        android:layout_marginHorizontal="@dimen/padding_large"
                        android:layout_marginBottom="@dimen/padding_large">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Amount Received"
                            android:textColor="@color/primary"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif"
                            android:textAllCaps="true"
                            android:letterSpacing="0.1"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tvAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â‚¹ 50,000"
                            android:textColor="@color/text_dark"
                            android:textSize="32sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-black"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvAmountWords"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(Fifty Thousand Rupees Only)"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-medium"
                            android:fontStyle="italic" />

                    </LinearLayout>

                    <!-- Payment Details Grid -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/padding_large"
                        android:paddingTop="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="20dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Payment Mode"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="12sp"
                                    android:fontFamily="sans-serif"
                                    android:layout_marginBottom="6dp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <ImageView
                                        android:layout_width="18dp"
                                        android:layout_height="18dp"
                                        android:src="@drawable/ic_payments"
                                        android:tint="@color/gray_600"
                                        android:layout_marginEnd="6dp"
                                        android:contentDescription="Payment Mode" />

                                    <TextView
                                        android:id="@+id/tvPaymentMode"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Cash"
                                        android:textColor="@color/text_dark"
                                        android:textSize="14sp"
                                        android:textStyle="bold"
                                        android:fontFamily="sans-serif-medium" />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="end">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Purpose"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="12sp"
                                    android:fontFamily="sans-serif"
                                    android:layout_marginBottom="6dp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <ImageView
                                        android:layout_width="18dp"
                                        android:layout_height="18dp"
                                        android:src="@drawable/ic_label"
                                        android:tint="@color/gray_600"
                                        android:layout_marginEnd="6dp"
                                        android:contentDescription="Purpose" />

                                    <TextView
                                        android:id="@+id/tvPurpose"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Initial Payment"
                                        android:textColor="@color/text_dark"
                                        android:textSize="14sp"
                                        android:textStyle="bold"
                                        android:fontFamily="sans-serif-medium" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                        <!-- Vehicle Model -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Vehicle Model"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:fontFamily="sans-serif"
                                android:layout_marginBottom="6dp" />

                            <TextView
                                android:id="@+id/tvVehicleModel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Royal Enfield Classic 350"
                                android:textColor="@color/text_dark"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Signature Section -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="end"
                        android:padding="@dimen/padding_large"
                        android:paddingTop="@dimen/padding_xlarge">

                        <!-- Signature Image Container -->
                        <FrameLayout
                            android:layout_width="120dp"
                            android:layout_height="80dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/border_dashed">

                            <!-- Placeholder Text -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Stamp/Sign"
                                android:textColor="@color/text_secondary"
                                android:textSize="11sp"
                                android:fontFamily="sans-serif"
                                android:fontStyle="italic"
                                android:alpha="0.3" />

                            <!-- Signature Image -->
                            <ImageView
                                android:id="@+id/ivSignature"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitCenter"
                                android:src="@drawable/sample_signature"
                                android:alpha="0.7"
                                android:tint="@color/text_dark"
                                android:contentDescription="Signature" />

                        </FrameLayout>

                        <!-- Line -->
                        <View
                            android:layout_width="160dp"
                            android:layout_height="1dp"
                            android:background="@color/gray_400"
                            android:layout_marginBottom="4dp" />

                        <!-- Label -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Authorized Signatory"
                            android:textColor="@color/text_secondary"
                            android:textSize="10sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif"
                            android:textAllCaps="true"
                            android:letterSpacing="0.1" />

                    </LinearLayout>

                    <!-- Footer Note -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@color/gray_200"
                        android:padding="@dimen/padding_medium"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvFooterNote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Subject to vehicle availability. This receipt is computer generated and requires a signature for official purposes."
                            android:textColor="@color/text_secondary"
                            android:textSize="10sp"
                            android:fontFamily="sans-serif"
                            android:gravity="center"
                            android:lineSpacingExtra="2dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="8dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnShare"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/white"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingHorizontal="16dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_share"
                            android:tint="@color/primary"
                            android:layout_marginEnd="8dp"
                            android:contentDescription="Share" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Share"
                            android:textColor="@color/primary"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/btnPrint"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/primary"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:paddingHorizontal="16dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_print"
                            android:tint="@color/white"
                            android:layout_marginEnd="8dp"
                            android:contentDescription="Print" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Print"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>