<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/pill_inactive"
    android:backgroundTint="@color/white">

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:background="@drawable/circle_shape"
        android:backgroundTint="#eff6ff"
        android:padding="10dp"
        android:src="@drawable/ic_check_circle"
        app:tint="#137fec" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:text="Confirm Completion"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#111418" />

    <TextView
        android:id="@+id/tvConfirmationMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:text="Are you sure you want to mark the Registration step as Completed?"
        android:textSize="14sp"
        android:textColor="#6b7280"
        android:textAlignment="center"
        android:lineSpacingExtra="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="COMPLETION DATE"
        android:textSize="10sp"
        android:textStyle="bold"
        android:textColor="#111418"
        android:letterSpacing="0.05" />

    <RelativeLayout
        android:id="@+id/datePickerLayout"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/pill_inactive"
        android:paddingHorizontal="16dp">

        <TextView
            android:id="@+id/tvDateDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="2023-10-24"
            android:textSize="15sp"
            android:textColor="#111418" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_calendar" 
            app:tint="#137fec" /> <!-- Should be a calendar icon -->
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="#111418"
            android:backgroundTint="@color/white"
            app:strokeWidth="1dp"
            app:strokeColor="#d1d5db"
            app:cornerRadius="10dp" />

        <Button
            android:id="@+id/btnConfirm"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="Confirm"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:backgroundTint="#137fec"
            app:cornerRadius="10dp" />
    </LinearLayout>

</LinearLayout>
