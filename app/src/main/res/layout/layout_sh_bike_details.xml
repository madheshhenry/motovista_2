<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/padding_medium">

    <!-- Bike Info Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_medium"
        android:background="@color/card_background"
        android:padding="@dimen/padding_medium"
        android:orientation="vertical"
        android:elevation="2dp">

        <!-- Brand and Model Row -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Brand and Model -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentStart="true">

                <TextView
                    android:id="@+id/tvBrand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Royal Enfield"
                    android:textColor="@color/text_light_gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvModel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Classic 350"
                    android:textColor="@color/text_dark"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- Price -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:orientation="vertical"
                android:gravity="end">

                <TextView
                    android:id="@+id/tvExpectedPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â‚¹1,45,000"
                    android:textColor="@color/primary_color"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expected Price"
                    android:textColor="@color/text_light_gray"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

        </RelativeLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_300"
            android:layout_marginTop="@dimen/padding_medium"
            android:layout_marginBottom="@dimen/padding_medium" />

        <!-- Year, Odometer, Ownership, Condition Row -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:useDefaultMargins="true"
            android:alignmentMode="alignBounds">

            <!-- Year -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tvYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2018"
                    android:textColor="@color/text_dark"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Year"
                    android:textColor="@color/text_light_gray"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <!-- Odometer -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tvOdometer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15,000 km"
                    android:textColor="@color/text_dark"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Odometer"
                    android:textColor="@color/text_light_gray"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <!-- Ownership -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tvOwnership"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1st Owner"
                    android:textColor="@color/text_dark"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ownership"
                    android:textColor="@color/text_light_gray"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <!-- Condition -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tvCondition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Good"
                    android:textColor="@color/text_dark"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Condition"
                    android:textColor="@color/text_light_gray"
                    android:textSize="12sp"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

        </GridLayout>

    </LinearLayout>

    <!-- Condition Details Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_medium"
        android:background="@color/card_background"
        android:padding="@dimen/padding_medium"
        android:orientation="vertical"
        android:elevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Condition Details"
            android:textColor="@color/text_dark"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/padding_medium" />

        <TextView
            android:id="@+id/tvConditionDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The bike is in excellent running condition..."
            android:textColor="@color/text_light_gray"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>

    <!-- Key Features & Specs Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_medium"
        android:background="@color/card_background"
        android:padding="@dimen/padding_medium"
        android:orientation="vertical"
        android:elevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Specifications &amp; Features"
            android:textColor="@color/text_dark"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/padding_medium" />

        <!-- Specs Grid -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="1"
            android:alignmentMode="alignBounds"
            android:columnOrderPreserved="false"
            android:useDefaultMargins="true">

            <!-- Row 1: Engine -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Engine:"
                android:textColor="@color/text_light_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvEngine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="346 cc"
                android:textColor="@color/text_dark"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Row 1: Brakes -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Brakes:"
                android:textColor="@color/text_light_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvBrakes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:text="Front Disc, Rear Drum"
                android:textColor="@color/text_dark"
                android:textSize="14sp"
                android:textStyle="bold" />

        </GridLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_300"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Features:"
            android:textColor="@color/text_light_gray"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/tvAdditionalFeatures"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Original silencer available, single hand used, timely serviced."
            android:textColor="@color/text_dark"
            android:textSize="14sp"
            android:lineSpacingExtra="4dp" />

    </LinearLayout>

    <!-- Owner / Seller Details Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/padding_medium"
        android:background="@color/card_background"
        android:padding="@dimen/padding_medium"
        android:orientation="vertical"
        android:elevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seller / Owner Details"
            android:textColor="@color/text_dark"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/padding_medium" />

        <TextView
            android:id="@+id/tvOwnerDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact: +91 9876543210"
            android:textColor="@color/text_dark"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>