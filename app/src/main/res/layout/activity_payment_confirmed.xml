<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light"
    android:fitsSystemWindows="true">

    <!-- Top App Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="@dimen/padding_medium"
        android:paddingBottom="8dp"
        android:gravity="center_vertical"
        android:elevation="4dp">

        <!-- Back Button -->
        <androidx.cardview.widget.CardView
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_arrow_back"
                android:tint="@color/text_dark"
                android:contentDescription="Back" />

        </androidx.cardview.widget.CardView>

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Payment Confirmed"
            android:textColor="@color/text_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:layout_marginEnd="48dp" />

    </LinearLayout>

    <!-- Main Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingBottom="100dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/padding_medium"
            android:paddingTop="@dimen/padding_large">

            <!-- Success Feedback Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingVertical="@dimen/padding_xlarge"
                android:paddingHorizontal="@dimen/padding_medium">

                <!-- Animated Success Icon Container -->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_large">

                    <!-- Outer glow ring -->
                    <View
                        android:id="@+id/outerGlow"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/glow_ring"
                        android:visibility="visible" />

                    <!-- Main circle -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:layout_centerInParent="true"
                        app:cardCornerRadius="48dp"
                        app:cardBackgroundColor="@color/primary"
                        app:cardElevation="8dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_check"
                            android:tint="@color/white"
                            android:contentDescription="Success" />

                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

                <!-- Text Feedback -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginBottom="@dimen/spacing_large">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Payment Confirmed"
                        android:textColor="@color/text_dark"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Successfully"
                        android:textColor="@color/text_dark"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:layout_marginBottom="@dimen/spacing_medium" />

                    <TextView
                        android:id="@+id/tvTransactionId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transaction ID: #TXN-88392"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif"
                        android:gravity="center" />

                </LinearLayout>

            </LinearLayout>

            <!-- Summary Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="@dimen/spacing_xlarge">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_large">

                    <!-- Card Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/padding_medium"
                        android:paddingBottom="@dimen/padding_small">

                        <!-- Receipt Icon -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@color/primary_light">

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_receipt"
                                android:tint="@color/primary"
                                android:contentDescription="Receipt" />

                        </androidx.cardview.widget.CardView>

                        <!-- Title -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Transaction Summary"
                            android:textColor="@color/text_dark"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium"
                            android:layout_marginStart="@dimen/padding_medium" />

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray_200"
                        android:layout_marginBottom="@dimen/padding_medium" />

                    <!-- Transaction Details -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="@dimen/padding_medium">

                        <!-- Customer Name -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="@dimen/padding_medium">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Customer Name"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:id="@+id/tvCustomerName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rahul Sharma"
                                android:textColor="@color/text_dark"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium" />

                        </LinearLayout>

                        <!-- Model -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="@dimen/padding_medium">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Model"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif" />

                            <TextView
                                android:id="@+id/tvModel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Yamaha R15 V4"
                                android:textColor="@color/text_dark"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-medium" />

                        </LinearLayout>

                        <!-- Payment Mode -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Payment Mode"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:src="@drawable/ic_smartphone"
                                    android:tint="@color/text_secondary"
                                    android:layout_marginEnd="4dp"
                                    android:contentDescription="UPI" />

                                <TextView
                                    android:id="@+id/tvPaymentMode"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="UPI / GPay"
                                    android:textColor="@color/text_dark"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:fontFamily="sans-serif-medium" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Amount Paid Highlight -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/background_light">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="@dimen/padding_medium">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Amount Paid"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp"
                                android:fontFamily="sans-serif-medium" />

                            <TextView
                                android:id="@+id/tvAmountPaid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="â‚¹25,000"
                                android:textColor="@color/text_dark"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:fontFamily="sans-serif-black" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Spacer to push button to bottom if content is short -->
            <View
                android:layout_width="match_parent"
                android:layout_height="40dp" />

        </LinearLayout>

    </ScrollView>

    <!-- Sticky Bottom Action -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/padding_medium"
        android:elevation="8dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/btnProceed"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            app:cardCornerRadius="14dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/primary"
            android:clickable="true"
            android:focusable="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingHorizontal="@dimen/padding_large">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="View Documents"
                    android:textColor="@color/text_dark"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="start" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_forward"
                    android:tint="@color/text_dark"
                    android:contentDescription="Proceed" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>