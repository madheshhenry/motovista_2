<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="24dp">

    <!-- Bot Message -->
    <LinearLayout
        android:id="@+id/botMessageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:visibility="gone">

        <!-- Bot Avatar -->
        <androidx.cardview.widget.CardView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginEnd="12dp"
            app:cardCornerRadius="18dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@color/primary_color">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_smart_toy"
                android:tint="@color/white"
                android:contentDescription="AI Bot" />

        </androidx.cardview.widget.CardView>

        <!-- Message Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Message Bubble -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginEnd="60dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp">

                    <TextView
                        android:id="@+id/tvBotMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_dark"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Time -->
            <TextView
                android:id="@+id/tvBotTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:text="10:00 AM"
                android:textColor="@color/gray_400"
                android:textSize="11sp"
                android:fontFamily="sans-serif" />

        </LinearLayout>

    </LinearLayout>

    <!-- User Message -->
    <LinearLayout
        android:id="@+id/userMessageLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:visibility="gone">

        <!-- Spacer -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Message Content -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="60dp">

            <!-- Message Bubble -->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/primary_color">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp">

                    <TextView
                        android:id="@+id/tvUserMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Time -->
            <TextView
                android:id="@+id/tvUserTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="4dp"
                android:text="10:01 AM"
                android:textColor="@color/gray_400"
                android:textSize="11sp"
                android:fontFamily="sans-serif"
                android:gravity="end" />

        </LinearLayout>

    </LinearLayout>

    <!-- Bike Recommendation Layout -->
    <LinearLayout
        android:id="@+id/recommendationLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <!-- Bot Message with Recommendation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom">

            <!-- Bot Avatar -->
            <androidx.cardview.widget.CardView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="12dp"
                app:cardCornerRadius="18dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/primary_color">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_smart_toy"
                    android:tint="@color/white"
                    android:contentDescription="AI Bot" />

            </androidx.cardview.widget.CardView>

            <!-- Message Content -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <!-- Message Bubble -->
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="1dp"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginEnd="60dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingTop="14dp"
                        android:paddingBottom="14dp">

                        <TextView
                            android:id="@+id/tvRecommendationMessage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Perfect. Based on your budget, I highly recommend these 2 models for you:"
                            android:textColor="@color/text_dark"
                            android:textSize="15sp"
                            android:fontFamily="sans-serif"
                            android:lineSpacingExtra="2dp" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Bike Cards Container -->
                <LinearLayout
                    android:id="@+id/bikeCardsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="60dp">

                    <!-- Bike Card 1 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardBike1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <!-- Bike Image -->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:background="@color/gray_200">

                                <!-- Image View -->
                                <ImageView
                                    android:id="@+id/ivBike1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/bike_raptor"
                                    android:contentDescription="Adventure Tourer Pro" />

                                <!-- Gradient Overlay -->
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/gradient_overlay" />





                            </RelativeLayout>

                            <!-- Bike Details -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="20dp">

                                <!-- Title and Price -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <TextView
                                        android:id="@+id/tvBike1Title"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Adventure Tourer Pro"
                                        android:textColor="@color/text_dark"
                                        android:textSize="18sp"
                                        android:textStyle="bold"
                                        android:fontFamily="sans-serif-medium" />

                                    <TextView
                                        android:id="@+id/tvBike1Price"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="₹2.1L"
                                        android:textColor="@color/primary_color"
                                        android:textSize="18sp"
                                        android:textStyle="bold"
                                        android:fontFamily="sans-serif" />

                                </LinearLayout>

                                <!-- Features -->
                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    app:cardCornerRadius="12dp"
                                    app:cardElevation="0dp"
                                    app:cardBackgroundColor="@color/input_light">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="center_vertical"
                                        android:padding="12dp">

                                        <ImageView
                                            android:layout_width="18dp"
                                            android:layout_height="18dp"
                                            android:src="@drawable/ic_local_gas_station"
                                            android:tint="@color/primary_color"
                                            android:contentDescription="Mileage" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="8dp"
                                            android:text="45 km/l Mileage"
                                            android:textColor="@color/text_dark"
                                            android:textSize="14sp"
                                            android:fontFamily="sans-serif" />

                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                                <!-- Action Buttons -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="16dp"
                                    android:gravity="center">

                                    <!-- View Details Button -->
                                    <Button
                                        android:id="@+id/btnViewDetails1"
                                        android:layout_width="0dp"
                                        android:layout_height="44dp"
                                        android:layout_weight="1"
                                        android:layout_marginEnd="8dp"
                                        android:text="View Details"
                                        android:textColor="@color/text_dark"
                                        android:textSize="14sp"
                                        android:textStyle="bold"
                                        android:fontFamily="sans-serif"
                                        android:background="@drawable/outline_button"
                                        android:paddingHorizontal="4dp" />

                                    <!-- Buy Now Button -->
                                    <Button
                                        android:id="@+id/btnBuyNow1"
                                        android:layout_width="0dp"
                                        android:layout_height="44dp"
                                        android:layout_weight="1"
                                        android:text="Buy Now"
                                        android:textColor="@color/white"
                                        android:textSize="14sp"
                                        android:textStyle="bold"
                                        android:fontFamily="sans-serif"
                                        android:background="@drawable/primary_button"
                                        android:paddingHorizontal="4dp" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <!-- Bike Card 2 -->
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardBike2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="24dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <!-- Bike Image -->
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                android:background="@color/gray_200">

                                <!-- Image View -->
                                <ImageView
                                    android:id="@+id/ivBike2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/bike_cruiser"
                                    android:contentDescription="Street Fighter 200" />

                                <!-- Gradient Overlay -->
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/gradient_overlay" />





                            </RelativeLayout>

                            <!-- Bike Details -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="20dp">

                                <!-- Title and Price -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <TextView
                                        android:id="@+id/tvBike2Title"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Street Fighter 200"
                                        android:textColor="@color/text_dark"
                                        android:textSize="18sp"
                                        android:textStyle="bold"
                                        android:fontFamily="sans-serif-medium" />

                                    <TextView
                                        android:id="@+id/tvBike2Price"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="₹1.85L"
                                        android:textColor="@color/primary_color"
                                        android:textSize="18sp"
                                        android:textStyle="bold"
                                        android:fontFamily="sans-serif" />

                                </LinearLayout>

                                <!-- Features -->
                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    app:cardCornerRadius="12dp"
                                    app:cardElevation="0dp"
                                    app:cardBackgroundColor="@color/input_light">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:gravity="center_vertical"
                                        android:padding="12dp">

                                        <ImageView
                                            android:layout_width="18dp"
                                            android:layout_height="18dp"
                                            android:src="@drawable/ic_speed"
                                            android:tint="@color/primary_color"
                                            android:contentDescription="Speed" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="8dp"
                                            android:text="0-60 km/h in 3.8s"
                                            android:textColor="@color/text_dark"
                                            android:textSize="14sp"
                                            android:fontFamily="sans-serif" />

                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                                <!-- Action Buttons -->
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="16dp"
                                    android:gravity="center">

                                    <!-- View Details Button -->
                                    <Button
                                        android:id="@+id/btnViewDetails2"
                                        android:layout_width="0dp"
                                        android:layout_height="44dp"
                                        android:layout_weight="1"
                                        android:layout_marginEnd="8dp"
                                        android:text="View Details"
                                        android:textColor="@color/text_dark"
                                        android:textSize="14sp"
                                        android:textStyle="bold"
                                        android:fontFamily="sans-serif"
                                        android:background="@drawable/outline_button"
                                        android:paddingHorizontal="4dp" />

                                    <!-- Buy Now Button -->
                                    <Button
                                        android:id="@+id/btnBuyNow2"
                                        android:layout_width="0dp"
                                        android:layout_height="44dp"
                                        android:layout_weight="1"
                                        android:text="Buy Now"
                                        android:textColor="@color/white"
                                        android:textSize="14sp"
                                        android:textStyle="bold"
                                        android:fontFamily="sans-serif"
                                        android:background="@drawable/primary_button"
                                        android:paddingHorizontal="4dp" />

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Time -->
                <TextView
                    android:id="@+id/tvRecommendationTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="4dp"
                    android:text="10:02 AM"
                    android:textColor="@color/gray_400"
                    android:textSize="11sp"
                    android:fontFamily="sans-serif" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>