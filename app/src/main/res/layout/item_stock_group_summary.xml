<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@color/white"
    android:layout_marginBottom="16dp">

    <!-- Outlined Border -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corner_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@color/green_50"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical">
                
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_check_circle"
                    app:tint="@color/green_500"
                    android:layout_marginEnd="8dp"/>
                
                <TextView
                    android:id="@+id/tvGroupTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GROUP 1 SAVED"
                    android:textColor="@color/green_800"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"/>
            </LinearLayout>

        </LinearLayout>

        <!-- Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:alpha="0.8">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <!-- Col 1 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Brand &amp; Model"
                        android:textSize="10sp"
                        android:textColor="@color/gray_500"
                        android:layout_marginBottom="2dp"/>
                    <TextView
                        android:id="@+id/tvBrandModel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hero Splendor Plus"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_900"/>
                </LinearLayout>

                <!-- Col 2 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Variant &amp; Color"
                        android:textSize="10sp"
                        android:textColor="@color/gray_500"
                        android:layout_marginBottom="2dp"/>
                    <TextView
                        android:id="@+id/tvVariantColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Self Start / Black-Blue"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/gray_900"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_100"
                android:layout_marginBottom="12dp"/>

            <!-- Footer Info -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                
                <TextView
                    android:id="@+id/tvGroupCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity: 01 Bike"
                    android:textSize="12sp"
                    android:textColor="@color/gray_600"
                    android:layout_alignParentStart="true"/>

                <TextView
                    android:id="@+id/tvDateInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date: Oct 24, 2023"
                    android:textSize="12sp"
                    android:textColor="@color/gray_600"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
