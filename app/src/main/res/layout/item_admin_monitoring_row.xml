<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="24dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/glass_border"
    android:backgroundTint="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@drawable/bg_vista_card">

        <ImageView
            android:id="@+id/rowIcon"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="10dp"
            android:background="@drawable/bg_vista_input"
            android:src="@drawable/ic_receipt_long"
            app:tint="@color/vista_cyan" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/rowTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ledger Title"
                android:textAppearance="@style/TextAppearance.Motovista.Body.Large"
                android:textColor="@color/vista_text_primary"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rowSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View details &amp; records"
                android:textAppearance="@style/TextAppearance.Motovista.Caption"
                android:textColor="@color/vista_text_secondary" />
        </LinearLayout>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_chevron_right"
            app:tint="@color/vista_text_muted" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
