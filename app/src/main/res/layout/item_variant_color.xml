<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded_gray_50"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_marginBottom="12dp">

    <!-- Header: Select Color + Delete -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Select Color Button (Stock Style) -->
        <LinearLayout
             android:id="@+id/btnSelectColor"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="45dp"
             android:background="@drawable/bg_input"
             android:orientation="horizontal"
             android:gravity="center_vertical"
             android:paddingHorizontal="8dp">
             
             <View
                 android:id="@+id/vColorChip"
                 android:layout_width="20dp"
                 android:layout_height="20dp"
                 android:background="@drawable/bg_color_circle"
                 android:backgroundTint="@color/gray_400"
                 android:layout_marginEnd="8dp"/>
             
             <TextView
                 android:id="@+id/tvColorName"
                 android:layout_width="0dp"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:text="Select Color"
                 android:textSize="14sp"
                 android:textColor="@color/gray_900"
                 android:singleLine="true"/>
                 
             <ImageView
                 android:layout_width="20dp"
                 android:layout_height="20dp"
                 android:src="@drawable/ic_arrow_drop_down"
                 app:tint="@color/gray_500"/>
        </LinearLayout>

        <ImageButton
            android:id="@+id/btnRemoveColor"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_delete"
            android:tint="@color/red_500" />
    </LinearLayout>

    <!-- Image Selection Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvImageStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="0 Images Selected"
            android:textColor="@color/text_gray"
            android:textSize="12sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/llImagesContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Add Image Button -->
                <LinearLayout
                    android:id="@+id/btnAddImage"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_dashed_border"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_add"
                        android:tint="@color/primary_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Add"
                        android:textColor="@color/primary_color"
                        android:textSize="10sp" />
                </LinearLayout>

                <!-- Initial Placeholder for images to be added programmatically -->

            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

</LinearLayout>
